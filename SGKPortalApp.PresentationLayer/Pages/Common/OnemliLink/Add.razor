@page "/common/onemli-link/add"
@inherits SGKPortalApp.PresentationLayer.Components.Base.FieldPermissionPageBase
@using SGKPortalApp.BusinessObjectLayer.Enums.Common

<PageTitle>Yeni Link - SGK Portal</PageTitle>

@if (!CanViewPage)
{
    <div class="alert alert-danger" role="alert">
        <i class="bx bx-lock-alt me-2"></i>
        Bu sayfayı görüntüleme yetkiniz bulunmuyor.
    </div>
}
else
{
    <FieldPermissionScope PageKey="@ResolvedPermissionKey" IsEditMode="true">
        <div class="container-xxl flex-grow-1 container-p-y">

            <nav aria-label="breadcrumb">
                <ol class="breadcrumb breadcrumb-style1">
                    <li class="breadcrumb-item">
                        <a href="javascript:void(0);" @onclick="NavigateToHome">
                            <i class="bx bx-home-alt me-1"></i>Ana Sayfa
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="javascript:void(0);" @onclick="NavigateToList">
                            Önemli Linkler
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        Yeni
                    </li>
                </ol>
            </nav>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h4 class="fw-bold mb-1">
                        <i class="bx bx-plus-circle me-2"></i>
                        Yeni Link Ekle
                    </h4>
                    <p class="text-muted mb-0">
                        Yeni bir link oluşturun
                    </p>
                </div>

                <button class="btn btn-outline-secondary" @onclick="NavigateToList">
                    <i class="bx bx-arrow-back me-1"></i>Geri Dön
                </button>
            </div>

            @if (IsLoading)
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <div class="spinner-border text-primary mb-3" role="status">
                            <span class="visually-hidden">Yükleniyor...</span>
                        </div>
                        <p class="text-muted">Hazırlanıyor...</p>
                    </div>
                </div>
            }
            else
            {
                <div class="row">
                    <div class="col-lg-8 col-xl-6 mx-auto">
                        <div class="card">
                            <div class="card-header d-flex align-items-center justify-content-between">
                                <h5 class="mb-0">
                                    <i class="bx bx-info-circle me-2"></i>Link Bilgileri
                                </h5>
                            </div>
                            <div class="card-body">
                                <EditForm Model="FormModel" OnValidSubmit="HandleSubmit">
                                    <DataAnnotationsValidator />

                                    <div class="mb-3">
                                        <label class="form-label required">
                                            <i class="bx bx-link me-1"></i>Link Adı
                                        </label>
                                        <InputText class="form-control" @bind-Value="FormModel.LinkAdi" disabled="@IsSaving" />
                                        <ValidationMessage For="@(() => FormModel.LinkAdi)" class="text-danger small mt-1" />
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label required">
                                            <i class="bx bx-globe me-1"></i>URL
                                        </label>
                                        <InputText class="form-control" @bind-Value="FormModel.Url" disabled="@IsSaving" />
                                        <ValidationMessage For="@(() => FormModel.Url)" class="text-danger small mt-1" />
                                    </div>

                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <label class="form-label required">
                                                <i class="bx bx-sort me-1"></i>Sıra
                                            </label>
                                            <InputNumber class="form-control" @bind-Value="FormModel.Sira" disabled="@IsSaving" />
                                            <ValidationMessage For="@(() => FormModel.Sira)" class="text-danger small mt-1" />
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Durum</label>
                                            <select class="form-select" @bind="FormModel.Aktiflik" disabled="@IsSaving">
                                                <option value="@Aktiflik.Aktif">Aktif</option>
                                                <option value="@Aktiflik.Pasif">Pasif</option>
                                            </select>
                                        </div>
                                    </div>

                                    <ValidationSummary class="alert alert-danger mt-3" />

                                    <div class="d-flex gap-2 justify-content-end pt-3 border-top mt-4">
                                        <button type="button"
                                                class="btn btn-outline-secondary"
                                                @onclick="NavigateToList"
                                                disabled="@IsSaving">
                                            <i class="bx bx-x me-1"></i>İptal
                                        </button>

                                        <button type="submit"
                                                class="btn btn-primary"
                                                disabled="@IsSaving || !CanEditPage"
                                                title="@(CanEditPage ? "Kaydet" : "Kaydet (Yetki Yok)")">
                                            @if (IsSaving)
                                            {
                                                <span class="spinner-border spinner-border-sm me-1"></span>
                                                <span>Kaydediliyor...</span>
                                            }
                                            else
                                            {
                                                <i class="bx bx-check me-1"></i>
                                                <span>Kaydet</span>
                                            }
                                        </button>
                                    </div>
                                </EditForm>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </FieldPermissionScope>
}
