@page "/common/onemli-link/manage/{id:int}"
@inherits SGKPortalApp.PresentationLayer.Components.Base.FieldPermissionPageBase
@using SGKPortalApp.BusinessObjectLayer.Enums.Common

<PageTitle>@(IsEditMode ? "Link Düzenle" : "Yeni Link") - SGK Portal</PageTitle>

@if (!CanViewPage)
{
    <div class="alert alert-danger" role="alert">
        <i class="bx bx-lock-alt me-2"></i>
        Bu sayfayı görüntüleme yetkiniz bulunmuyor.
    </div>
}
else
{
    <FieldPermissionScope PageKey="@ResolvedPermissionKey" IsEditMode="true">
        <div class="container-xxl flex-grow-1 container-p-y">

            <nav aria-label="breadcrumb">
                <ol class="breadcrumb breadcrumb-style1">
                    <li class="breadcrumb-item">
                        <a href="javascript:void(0);" @onclick="NavigateToHome">
                            <i class="bx bx-home-alt me-1"></i>Ana Sayfa
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="javascript:void(0);" @onclick="NavigateToList">
                            Önemli Linkler
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        @(IsEditMode ? "Düzenle" : "Yeni")
                    </li>
                </ol>
            </nav>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h4 class="fw-bold mb-1">
                        <i class="bx @(IsEditMode ? "bx-edit" : "bx-plus-circle") me-2"></i>
                        @(IsEditMode ? "Link Düzenle" : "Yeni Link Ekle")
                    </h4>
                    <p class="text-muted mb-0">
                        @(IsEditMode ? "Link bilgilerini güncelleyin" : "Yeni bir link oluşturun")
                    </p>
                </div>

                <button class="btn btn-outline-secondary" @onclick="NavigateToList">
                    <i class="bx bx-arrow-back me-1"></i>Geri Dön
                </button>
            </div>

            @if (IsLoading)
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <div class="spinner-border text-primary mb-3" role="status">
                            <span class="visually-hidden">Yükleniyor...</span>
                        </div>
                        <p class="text-muted">@(IsEditMode ? "Link bilgileri yükleniyor..." : "Hazırlanıyor...")</p>
                    </div>
                </div>
            }
            else if (NotFound)
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="bx bx-error-circle display-1 text-danger mb-3"></i>
                        <h5 class="mb-3">Link Bulunamadı</h5>
                        <p class="text-muted mb-4">Aradığınız link bulunamadı veya silinmiş olabilir.</p>
                        <button class="btn btn-primary" @onclick="NavigateToList">
                            <i class="bx bx-list-ul me-1"></i>Link Listesine Dön
                        </button>
                    </div>
                </div>
            }
            else
            {
                <div class="row">
                    <div class="col-lg-8 col-xl-6 mx-auto">
                        <div class="card">
                            <div class="card-header d-flex align-items-center justify-content-between">
                                <h5 class="mb-0">
                                    <i class="bx bx-info-circle me-2"></i>Link Bilgileri
                                </h5>
                                @if (IsEditMode)
                                {
                                    <span class="badge bg-label-info">ID: @Id</span>
                                }
                            </div>
                            <div class="card-body">
                                <EditForm Model="FormModel" OnValidSubmit="HandleSubmit">
                                    <DataAnnotationsValidator />

                                    <div class="mb-3">
                                        <label class="form-label required">
                                            <i class="bx bx-link me-1"></i>Link Adı
                                        </label>
                                        <InputText class="form-control" @bind-Value="FormModel.LinkAdi" disabled="@IsSaving" />
                                        <ValidationMessage For="@(() => FormModel.LinkAdi)" class="text-danger small mt-1" />
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label required">
                                            <i class="bx bx-globe me-1"></i>URL
                                        </label>
                                        <InputText class="form-control" @bind-Value="FormModel.Url" disabled="@IsSaving" />
                                        <ValidationMessage For="@(() => FormModel.Url)" class="text-danger small mt-1" />
                                    </div>

                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <label class="form-label required">
                                                <i class="bx bx-sort me-1"></i>Sıra
                                            </label>
                                            <InputNumber class="form-control" @bind-Value="FormModel.Sira" disabled="@IsSaving" />
                                            <ValidationMessage For="@(() => FormModel.Sira)" class="text-danger small mt-1" />
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Durum</label>
                                            <select class="form-select" @bind="FormModel.Aktiflik" disabled="@IsSaving">
                                                <option value="@Aktiflik.Aktif">Aktif</option>
                                                <option value="@Aktiflik.Pasif">Pasif</option>
                                            </select>
                                        </div>
                                    </div>

                                    <ValidationSummary class="alert alert-danger mt-3" />

                                    <div class="d-flex gap-2 justify-content-end pt-3 border-top mt-4">
                                        <button type="button"
                                                class="btn btn-outline-secondary"
                                                @onclick="NavigateToList"
                                                disabled="@IsSaving">
                                            <i class="bx bx-x me-1"></i>İptal
                                        </button>

                                        <button type="submit"
                                                class="btn btn-primary"
                                                disabled="@IsSaving || !CanEditPage"
                                                title="@(CanEditPage ? "Güncelle" : "Güncelle (Yetki Yok)")">
                                            @if (IsSaving)
                                            {
                                                <span class="spinner-border spinner-border-sm me-1"></span>
                                                <span>Kaydediliyor...</span>
                                            }
                                            else
                                            {
                                                <i class="bx bx-check me-1"></i>
                                                <span>Güncelle</span>
                                            }
                                        </button>
                                    </div>
                                </EditForm>
                            </div>
                        </div>

                        @if (IsEditMode && IsActionVisible("DELETE"))
                        {
                            <div class="card border-danger mt-4">
                                <div class="card-body">
                                    <h6 class="text-danger mb-2">
                                        <i class="bx bx-error-circle me-1"></i>Tehlikeli Bölge
                                    </h6>
                                    <p class="text-muted mb-3 small">Bu linki silmek istiyorsanız, aşağıdaki butona tıklayın. Bu işlem geri alınamaz.</p>
                                    <button class="btn btn-outline-danger"
                                            @onclick="OpenDeleteModal"
                                            disabled="@IsSaving || !CanEditPage"
                                            title="@(CanEditPage ? "Sil" : "Sil (Yetki Yok)")">
                                        <i class="bx bx-trash me-1"></i>Linki Sil
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            @if (ShowDeleteModal)
            {
                <div class="modal fade show" style="display:block;" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Silme Onayı</h5>
                                <button type="button" class="btn-close" @onclick="CloseDeleteModal"></button>
                            </div>
                            <div class="modal-body">
                                <p>Bu kaydı silmek istediğinize emin misiniz?</p>
                            </div>
                            <div class="modal-footer">
                                <button class="btn btn-outline-secondary" @onclick="CloseDeleteModal" disabled="@IsDeleting">İptal</button>
                                <button class="btn btn-danger" @onclick="ConfirmDelete" disabled="@IsDeleting">
                                    @if (IsDeleting)
                                    {
                                        <span class="spinner-border spinner-border-sm me-1"></span>
                                    }
                                    Sil
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-backdrop fade show"></div>
            }

        </div>
    </FieldPermissionScope>
}
