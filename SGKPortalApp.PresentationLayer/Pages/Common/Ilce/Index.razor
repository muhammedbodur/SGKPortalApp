@page "/common/ilce"
@inherits SGKPortalApp.PresentationLayer.Components.Base.FieldPermissionPageBase
@using SGKPortalApp.BusinessObjectLayer.DTOs.Response.Common

<PageTitle>İlçe Yönetimi - SGK Portal</PageTitle>

@if (!CanViewPage)
{
    <div class="alert alert-danger" role="alert">
        <i class="bx bx-lock-alt me-2"></i>
        Bu sayfayı görüntüleme yetkiniz bulunmuyor.
    </div>
}
else
{
    <FieldPermissionScope PageKey="@ResolvedPermissionKey" IsEditMode="true">
        <!-- ═══════════════════════════════════════════════════════ -->
        <!-- PAGE HEADER -->
        <!-- ═══════════════════════════════════════════════════════ -->
        <div class="container-xxl flex-grow-1 container-p-y">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h4 class="fw-bold mb-1">
                        <i class="bx bx-buildings me-2"></i>İlçe Yönetimi
                    </h4>
                    <p class="text-muted mb-0">
                        Tüm ilçeleri görüntüleyin ve yönetin
                    </p>
                </div>

                <div class="d-flex gap-2">
                    <!-- Excel Export -->
                    <button class="btn btn-success" @onclick="ExportToExcel" disabled="@IsExporting">
                        @if (IsExporting && ExportType == "excel")
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        else
                        {
                            <i class="bx bx-download me-1"></i>
                        }
                        Excel
                    </button>

                    <!-- PDF Export -->
                    <button class="btn btn-danger" @onclick="ExportToPdf" disabled="@IsExporting">
                        @if (IsExporting && ExportType == "pdf")
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        else
                        {
                            <i class="bx bxs-file-pdf me-1"></i>
                        }
                        PDF
                    </button>

                    <!-- Yeni İlçe -->
                    <button class="btn btn-primary" @onclick="NavigateToCreate">
                        <i class="bx bx-plus me-1"></i>Yeni İlçe
                    </button>
                </div>
            </div>

            <!-- ═══════════════════════════════════════════════════════ -->
            <!-- FILTER CARD -->
            <!-- ═══════════════════════════════════════════════════════ -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row g-3">
                        <!-- Arama -->
                        <div class="col-md-4">
                            <label class="form-label">İlçe Ara</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bx bx-search"></i>
                                </span>
                                <input type="text"
                                       class="form-control"
                                       placeholder="İlçe adı..."
                                       @bind="searchTerm"
                                       @bind:event="oninput"
                                       @onkeyup="OnSearchChanged" />
                            </div>
                        </div>

                        <!-- İl Filtresi -->
                        <div class="col-md-3">
                            <label class="form-label">İl</label>
                            <select class="form-select" value="@filterIlId" @onchange="OnFilterIlChanged">
                                <option value="0">Tümü</option>
                                @foreach (var il in Iller)
                                {
                                    <option value="@il.IlId">@il.IlAdi</option>
                                }
                            </select>
                        </div>

                        <!-- Sıralama -->
                        <div class="col-md-3">
                            <label class="form-label">Sıralama</label>
                            <select class="form-select" value="@sortBy" @onchange="OnSortByChanged">
                                <option value="ilce-asc">İlçe (A-Z)</option>
                                <option value="ilce-desc">İlçe (Z-A)</option>
                                <option value="il-asc">İl (A-Z)</option>
                                <option value="il-desc">İl (Z-A)</option>
                                <option value="date-newest">En Yeni</option>
                                <option value="date-oldest">En Eski</option>
                            </select>
                        </div>

                        <!-- Temizle -->
                        <div class="col-md-2 d-flex align-items-end">
                            <button class="btn btn-outline-secondary w-100" @onclick="ClearFilters">
                                <i class="bx bx-reset me-1"></i>Temizle
                            </button>
                        </div>
                    </div>

                    <!-- İstatistikler -->
                    <div class="row mt-3">
                        <div class="col">
                            <div class="d-flex gap-4 text-muted small">
                                <span>
                                    <i class="bx bx-buildings text-primary"></i>
                                    Toplam: <strong>@Ilceler.Count</strong>
                                </span>
                                <span>
                                    <i class="bx bx-filter-alt text-info"></i>
                                    Filtrelenen: <strong>@FilteredIlceler.Count</strong>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ═══════════════════════════════════════════════════════ -->
            <!-- TABLE CARD -->
            <!-- ═══════════════════════════════════════════════════════ -->
            <div class="card">
                <div class="card-body">
                    @if (IsLoading)
                    {
                        <!-- Loading Spinner -->
                        <div class="text-center py-5">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Yükleniyor...</span>
                            </div>
                            <p class="mt-2 text-muted">İlçeler yükleniyor...</p>
                        </div>
                    }
                    else if (!FilteredIlceler.Any())
                    {
                        <!-- Empty State -->
                        <div class="text-center py-5">
                            <i class="bx bx-search-alt display-1 text-muted"></i>
                            <h5 class="mt-3">İlçe Bulunamadı</h5>
                            <p class="text-muted">
                                @if (string.IsNullOrEmpty(searchTerm) && filterIlId == 0)
                                {
                                    <span>Henüz ilçe eklenmemiş.</span>
                                }
                                else
                                {
                                    <span>Arama kriterlerinize uygun ilçe bulunamadı.</span>
                                }
                            </p>
                            @if (string.IsNullOrEmpty(searchTerm) && filterIlId == 0)
                            {
                                <button class="btn btn-primary mt-2" @onclick="NavigateToCreate">
                                    <i class="bx bx-plus me-1"></i>İlk İlçeyi Ekle
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-outline-secondary mt-2" @onclick="ClearFilters">
                                    <i class="bx bx-reset me-1"></i>Filtreleri Temizle
                                </button>
                            }
                        </div>
                    }
                    else
                    {
                        <!-- Table -->
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th style="width: 50px;">#</th>
                                        <th>İl</th>
                                        <th>İlçe Adı</th>
                                        <th class="text-center" style="width: 150px;">Eklenme Tarihi</th>
                                        <th class="text-center" style="width: 150px;">Son Güncelleme</th>
                                        <th class="text-center" style="width: 150px;">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var pagedData = FilteredIlceler
                                        .Skip((CurrentPage - 1) * PageSize)
                                        .Take(PageSize)
                                        .ToList();
                                    }
                                    @foreach (var (ilce, index) in pagedData.Select((d, i) => (d, (CurrentPage - 1) * PageSize + i + 1)))
                                    {
                                        <tr>
                                            <td>@index</td>
                                            <td>
                                                <span class="badge bg-label-primary">@ilce.IlAdi</span>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar avatar-sm me-2">
                                                        <span class="avatar-initial rounded-circle bg-label-info">
                                                            @ilce.IlceAdi.Substring(0, 1).ToUpper()
                                                        </span>
                                                    </div>
                                                    <strong>@ilce.IlceAdi</strong>
                                                </div>
                                            </td>
                                            <td class="text-center text-muted small">
                                                @ilce.EklenmeTarihi.ToString("dd.MM.yyyy HH:mm")
                                            </td>
                                            <td class="text-center text-muted small">
                                                @ilce.DuzenlenmeTarihi.ToString("dd.MM.yyyy HH:mm")
                                            </td>
                                            <td class="text-center">
                                                <div class="d-flex justify-content-center gap-1">
                                                    @if (IsActionVisible("EDIT"))
                                                    {
                                                        <!-- Düzenle -->
                                                        <button class="btn btn-sm btn-icon btn-outline-primary"
                                                                @onclick="() => NavigateToEdit(ilce.IlceId)"
                                                                disabled="@(!CanEditAction("EDIT"))"
                                                                title="@(CanEditAction("EDIT") ? "Düzenle" : "Düzenle (Yetki Yok)")">
                                                            <i class="bx bx-edit"></i>
                                                        </button>
                                                    }

                                                    @if (IsActionVisible("DELETE"))
                                                    {
                                                        <!-- Sil -->
                                                        <button class="btn btn-sm btn-icon btn-outline-danger"
                                                                @onclick="() => ShowDeleteConfirmation(ilce.IlceId, ilce.IlceAdi, ilce.IlAdi)"
                                                                disabled="@(!CanEditAction("DELETE"))"
                                                                title="@(CanEditAction("DELETE") ? "Sil" : "Sil (Yetki Yok)")">
                                                            <i class="bx bx-trash"></i>
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        @if (TotalPages > 1)
                        {
                            <div class="d-flex justify-content-between align-items-center mt-3 pt-3 border-top">
                                <div class="text-muted small">
                                    Gösterilen: <strong>@((CurrentPage - 1) * PageSize + 1)</strong> - <strong>@Math.Min(CurrentPage * PageSize, FilteredIlceler.Count)</strong> / <strong>@FilteredIlceler.Count</strong>
                                </div>

                                <nav>
                                    <ul class="pagination pagination-sm mb-0">
                                        <!-- Previous -->
                                        <li class="page-item @(CurrentPage == 1 ? "disabled" : "")">
                                            <button class="page-link" @onclick="() => ChangePage(CurrentPage - 1)" disabled="@(CurrentPage == 1)">
                                                <i class="bx bx-chevron-left"></i>
                                            </button>
                                        </li>

                                        <!-- Page Numbers -->
                                        @{
                                            var startPage = Math.Max(1, CurrentPage - 2);
                                            var endPage = Math.Min(TotalPages, CurrentPage + 2);
                                        }

                                        @if (startPage > 1)
                                        {
                                            <li class="page-item">
                                                <button class="page-link" @onclick="() => ChangePage(1)">1</button>
                                            </li>
                                            @if (startPage > 2)
                                            {
                                                <li class="page-item disabled">
                                                    <span class="page-link">...</span>
                                                </li>
                                            }
                                        }

                                        @for (int i = startPage; i <= endPage; i++)
                                        {
                                            var pageNum = i;
                                            <li class="page-item @(CurrentPage == pageNum ? "active" : "")">
                                                <button class="page-link" @onclick="() => ChangePage(pageNum)">
                                                    @pageNum
                                                </button>
                                            </li>
                                        }

                                        @if (endPage < TotalPages)
                                        {
                                            @if (endPage < TotalPages - 1)
                                            {
                                                <li class="page-item disabled">
                                                    <span class="page-link">...</span>
                                                </li>
                                            }
                                            <li class="page-item">
                                                <button class="page-link" @onclick="() => ChangePage(TotalPages)">@TotalPages</button>
                                            </li>
                                        }

                                        <!-- Next -->
                                        <li class="page-item @(CurrentPage == TotalPages ? "disabled" : "")">
                                            <button class="page-link" @onclick="() => ChangePage(CurrentPage + 1)" disabled="@(CurrentPage == TotalPages)">
                                                <i class="bx bx-chevron-right"></i>
                                            </button>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </FieldPermissionScope>
}
<!-- ═══════════════════════════════════════════════════════ -->
<!-- DELETE CONFIRMATION MODAL -->
<!-- ═══════════════════════════════════════════════════════ -->
@if (ShowDeleteModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bx bx-trash text-danger me-2"></i>İlçe Sil
                    </h5>
                    <button type="button" class="btn-close" @onclick="CloseDeleteModal" disabled="@IsDeleting"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-danger mb-3">
                        <i class="bx bx-error-circle me-2"></i>
                        <strong>Dikkat!</strong> Bu işlem geri alınamaz.
                    </div>
                    <p class="mb-0">
                        <strong>@DeleteIlceIlAdi / @DeleteIlceAdi</strong> ilçesini silmek istediğinizden emin misiniz?
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseDeleteModal" disabled="@IsDeleting">
                        İptal
                    </button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmDelete" disabled="@IsDeleting">
                        @if (IsDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                            <span>Siliniyor...</span>
                        }
                        else
                        {
                            <i class="bx bx-trash me-1"></i>
                            <span>Sil</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
}

