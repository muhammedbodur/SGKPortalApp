@page "/common/gunun-menusu"
@inherits SGKPortalApp.PresentationLayer.Components.Base.FieldPermissionPageBase
@using SGKPortalApp.BusinessObjectLayer.DTOs.Response.Common
@using SGKPortalApp.BusinessObjectLayer.Enums.Common

<PageTitle>Günün Menüsü - SGK Portal</PageTitle>

@if (!CanViewPage)
{
    <div class="alert alert-danger" role="alert">
        <i class="bx bx-lock-alt me-2"></i>
        Bu sayfayı görüntüleme yetkiniz bulunmuyor.
    </div>
}
else
{
    <FieldPermissionScope PageKey="@ResolvedPermissionKey" IsEditMode="true">

        <div class="container-xxl flex-grow-1 container-p-y">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h4 class="fw-bold mb-1">
                        <i class="bx bx-food-menu me-2"></i>Günün Menüsü
                    </h4>
                    <p class="text-muted mb-0">
                        Günlük menü kayıtlarını görüntüleyin ve yönetin
                    </p>
                </div>

                <div class="d-flex gap-2">
                    @if (IsActionVisible("CREATE"))
                    {
                        <button class="btn btn-primary"
                                @onclick="NavigateToCreate"
                                disabled="@(!CanEditAction("CREATE"))"
                                title="@(CanEditAction("CREATE") ? "Yeni Menü" : "Yeni Menü (Yetki Yok)")">
                            <i class="bx bx-plus me-1"></i>Yeni Menü
                        </button>
                    }
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label">Başlangıç Tarihi</label>
                            <InputDate class="form-control" @bind-Value="StartDate" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Bitiş Tarihi</label>
                            <InputDate class="form-control" @bind-Value="EndDate" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Durum</label>
                            <select class="form-select" @bind="AktiflikFilter">
                                <option value="">Tümü</option>
                                <option value="@Aktiflik.Aktif">Aktif</option>
                                <option value="@Aktiflik.Pasif">Pasif</option>
                            </select>
                        </div>

                        <div class="col-md-10">
                            <label class="form-label">İçerik Ara</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bx bx-search"></i></span>
                                <input type="text" class="form-control" placeholder="İçerik..." @bind="SearchTerm" @bind:event="oninput" />
                            </div>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button class="btn btn-outline-secondary w-100" @onclick="ClearFilters">
                                <i class="bx bx-reset me-1"></i>Temizle
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    @if (IsLoading)
                    {
                        <div class="text-center py-5">
                            <div class="spinner-border text-primary mb-3" role="status">
                                <span class="visually-hidden">Yükleniyor...</span>
                            </div>
                            <p class="text-muted">Menüler yükleniyor...</p>
                        </div>
                    }
                    else if (!FilteredItems.Any())
                    {
                        <div class="text-center py-5">
                            <i class="bx bx-info-circle display-1 text-muted mb-3"></i>
                            <h5 class="mb-3">Kayıt Bulunamadı</h5>
                            <p class="text-muted mb-0">Seçilen filtrelere uygun menü bulunamadı.</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th style="width: 50px;">#</th>
                                        <th style="width: 160px;">Tarih</th>
                                        <th>İçerik</th>
                                        <th style="width: 110px;">Durum</th>
                                        <th class="text-center" style="width: 180px;">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var row in FilteredItems.Select((item, idx) => new { item, idx }))
                                    {
                                        <tr>
                                            <td>@(row.idx + 1)</td>
                                            <td>@row.item.Tarih.ToString("dd.MM.yyyy")</td>
                                            <td>
                                                <div class="text-truncate" style="max-width: 600px;">
                                                    @row.item.Icerik
                                                </div>
                                            </td>
                                            <td>
                                                @if (row.item.Aktiflik == Aktiflik.Aktif)
                                                {
                                                    <span class="badge bg-label-success">Aktif</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-label-secondary">Pasif</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    @if (IsActionVisible("EDIT"))
                                                    {
                                                        <button class="btn btn-sm btn-outline-primary"
                                                                @onclick="(() => NavigateToEdit(row.item.MenuId))"
                                                                disabled="@(!CanEditAction("EDIT"))"
                                                                title="@(CanEditAction("EDIT") ? "Düzenle" : "Düzenle (Yetki Yok)")">
                                                            <i class="bx bx-edit"></i>
                                                        </button>
                                                    }
                                                    @if (IsActionVisible("DELETE"))
                                                    {
                                                        <button class="btn btn-sm btn-outline-danger"
                                                                @onclick="(() => ShowDeleteConfirmation(row.item.MenuId, row.item.Tarih))"
                                                                disabled="@(!CanEditAction("DELETE"))"
                                                                title="@(CanEditAction("DELETE") ? "Sil" : "Sil (Yetki Yok)")">
                                                            <i class="bx bx-trash"></i>
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>

            @if (ShowDeleteModal)
            {
                <div class="modal fade show d-block" tabindex="-1" style="background: rgba(0,0,0,.5);">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Menü Sil</h5>
                                <button type="button" class="btn-close" @onclick="CloseDeleteModal"></button>
                            </div>
                            <div class="modal-body">
                                <p class="mb-0">
                                    <strong>@DeleteDateText</strong> tarihli menü silinsin mi?
                                </p>
                            </div>
                            <div class="modal-footer">
                                <button class="btn btn-outline-secondary" @onclick="CloseDeleteModal" disabled="@IsDeleting">Vazgeç</button>
                                <button class="btn btn-danger" @onclick="ConfirmDelete" disabled="@IsDeleting">
                                    @if (IsDeleting)
                                    {
                                        <span class="spinner-border spinner-border-sm me-1"></span>
                                    }
                                    Sil
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>

    </FieldPermissionScope>
}
