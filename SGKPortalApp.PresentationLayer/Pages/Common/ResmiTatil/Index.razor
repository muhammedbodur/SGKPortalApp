@page "/common/resmitatil"
@inherits SGKPortalApp.PresentationLayer.Components.Base.FieldPermissionPageBase
@using SGKPortalApp.BusinessObjectLayer.DTOs.Response.Common

<PageTitle>Resmi Tatil Takvimi - SGK Portal</PageTitle>

@if (!CanViewPage)
{
    <div class="alert alert-danger" role="alert">
        <i class="bx bx-lock-alt me-2"></i>
        Bu sayfayı görüntüleme yetkiniz bulunmuyor.
    </div>
}
else
{
    <FieldPermissionScope PageKey="@ResolvedPermissionKey" IsEditMode="true">

        <div class="container-xxl flex-grow-1 container-p-y">
            
            <!-- ═══════════════════════════════════════════════════════ -->
            <!-- CALENDAR CARD -->
            <!-- ═══════════════════════════════════════════════════════ -->
            <div class="card app-calendar-wrapper">
                <div class="row g-0">
                    
                    <!-- Calendar Sidebar -->
                    <div class="col-12 col-md-3 app-calendar-sidebar border-end">
                        <div class="border-bottom p-4">
                            <div class="d-grid">
                                @if (IsActionVisible("CREATE"))
                                {
                                    <button class="btn btn-primary" 
                                            @onclick="NavigateToCreate"
                                            disabled="@(!CanEditAction("CREATE"))">
                                        <i class="bx bx-plus me-1"></i>
                                        <span class="align-middle">Yeni Tatil Ekle</span>
                                    </button>
                                }
                            </div>
                        </div>

                        <div class="p-4">
                            <!-- Year Selector -->
                            <div class="mb-4">
                                <label class="form-label">Yıl Seçin</label>
                                <select class="form-select" @bind="SelectedYear" @bind:event="onchange">
                                    @for (int year = DateTime.Now.Year - 2; year <= DateTime.Now.Year + 5; year++)
                                    {
                                        <option value="@year">@year</option>
                                    }
                                </select>
                            </div>

                            <hr class="my-4">

                            <!-- Sync Button -->
                            @if (IsActionVisible("SYNC"))
                            {
                                <div class="mb-4">
                                    <button class="btn btn-outline-primary w-100" 
                                            @onclick="ShowSyncModal"
                                            disabled="@(!CanEditAction("SYNC") || IsSyncing)">
                                        @if (IsSyncing)
                                        {
                                            <span class="spinner-border spinner-border-sm me-1"></span>
                                        }
                                        else
                                        {
                                            <i class="bx bx-sync me-1"></i>
                                        }
                                        Tatilleri Senkronize Et
                                    </button>
                                </div>
                            }

                            <!-- Statistics -->
                            <div class="mb-4">
                                <small class="text-small text-muted text-uppercase">İstatistikler</small>
                                <div class="mt-3">
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="text-muted">Toplam Tatil:</span>
                                        <strong>@Tatiller.Count</strong>
                                    </div>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="text-muted">Sabit Tatil:</span>
                                        <strong class="text-primary">@Tatiller.Count(t => t.TatilTipi == BusinessObjectLayer.Enums.Common.TatilTipi.SabitTatil)</strong>
                                    </div>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="text-muted">Dini Tatil:</span>
                                        <strong class="text-success">@Tatiller.Count(t => t.TatilTipi == BusinessObjectLayer.Enums.Common.TatilTipi.DiniTatil)</strong>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <span class="text-muted">Özel Tatil:</span>
                                        <strong class="text-warning">@Tatiller.Count(t => t.TatilTipi == BusinessObjectLayer.Enums.Common.TatilTipi.OzelTatil)</strong>
                                    </div>
                                </div>
                            </div>

                            <!-- Filter -->
                            <div class="mb-4">
                                <small class="text-small text-muted text-uppercase">Filtre</small>
                            </div>

                            <div class="form-check mb-2">
                                <input class="form-check-input" type="checkbox" id="filterSabit" 
                                       @bind="FilterSabitTatil" @bind:event="onchange">
                                <label class="form-check-label" for="filterSabit">
                                    <span class="badge bg-label-primary">Sabit Tatil</span>
                                </label>
                            </div>

                            <div class="form-check mb-2">
                                <input class="form-check-input" type="checkbox" id="filterDini" 
                                       @bind="FilterDiniTatil" @bind:event="onchange">
                                <label class="form-check-label" for="filterDini">
                                    <span class="badge bg-label-success">Dini Tatil</span>
                                </label>
                            </div>

                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="filterOzel" 
                                       @bind="FilterOzelTatil" @bind:event="onchange">
                                <label class="form-check-label" for="filterOzel">
                                    <span class="badge bg-label-warning">Özel Tatil</span>
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- Calendar Content -->
                    <div class="col-12 col-md-9 app-calendar-content">
                        <div class="card shadow-none border-0">
                            <div class="card-body">
                                @if (IsLoading)
                                {
                                    <div class="text-center py-5">
                                        <div class="spinner-border text-primary" role="status">
                                            <span class="visually-hidden">Yükleniyor...</span>
                                        </div>
                                        <p class="text-muted mt-2">Tatiller yükleniyor...</p>
                                    </div>
                                }
                                else
                                {
                                    <!-- Calendar will be rendered here via JS Interop -->
                                    <div id="resmiTatilCalendar" style="min-height: 600px;"></div>
                                }
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>

        <!-- ═══════════════════════════════════════════════════════ -->
        <!-- SYNC MODAL -->
        <!-- ═══════════════════════════════════════════════════════ -->
        @if (ShowSyncModalFlag)
        {
            <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">
                                <i class="bx bx-sync me-2"></i>Tatilleri Senkronize Et
                            </h5>
                            <button type="button" class="btn-close" @onclick="CloseSyncModal" disabled="@IsSyncing"></button>
                        </div>
                        <div class="modal-body">
                            <div class="mb-3">
                                <label class="form-label">Yıl</label>
                                <input type="number" class="form-control" @bind="SyncYear" min="2020" max="2050" />
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="deletExisting" @bind="DeleteExistingHolidays">
                                <label class="form-check-label" for="deletExisting">
                                    Mevcut otomatik tatilleri sil
                                </label>
                            </div>
                            <div class="alert alert-info mt-3">
                                <i class="bx bx-info-circle me-2"></i>
                                Bu işlem Nager.Date API'sinden Türkiye resmi tatillerini çekecektir.
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-label-secondary" @onclick="CloseSyncModal" disabled="@IsSyncing">
                                İptal
                            </button>
                            <button type="button" class="btn btn-primary" @onclick="SyncHolidays" disabled="@IsSyncing">
                                @if (IsSyncing)
                                {
                                    <span class="spinner-border spinner-border-sm me-1"></span>
                                }
                                else
                                {
                                    <i class="bx bx-sync me-1"></i>
                                }
                                Senkronize Et
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- ═══════════════════════════════════════════════════════ -->
        <!-- DELETE MODAL -->
        <!-- ═══════════════════════════════════════════════════════ -->
        @if (ShowDeleteModalFlag)
        {
            <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header bg-danger">
                            <h5 class="modal-title text-white">
                                <i class="bx bx-trash me-2"></i>Tatil Sil
                            </h5>
                            <button type="button" class="btn-close btn-close-white" @onclick="CloseDeleteModal" disabled="@IsDeleting"></button>
                        </div>
                        <div class="modal-body">
                            <p>
                                <strong>@DeleteTatilAdi</strong> tatilini silmek istediğinizden emin misiniz?
                            </p>
                            <p class="text-muted mb-0">
                                <i class="bx bx-calendar me-1"></i>
                                Tarih: @DeleteTatilTarih.ToString("dd MMMM yyyy")
                            </p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-label-secondary" @onclick="CloseDeleteModal" disabled="@IsDeleting">
                                İptal
                            </button>
                            <button type="button" class="btn btn-danger" @onclick="ConfirmDelete" disabled="@IsDeleting">
                                @if (IsDeleting)
                                {
                                    <span class="spinner-border spinner-border-sm me-1"></span>
                                }
                                else
                                {
                                    <i class="bx bx-trash me-1"></i>
                                }
                                Sil
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }

    </FieldPermissionScope>
}
