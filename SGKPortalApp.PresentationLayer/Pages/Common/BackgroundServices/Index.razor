@page "/common/background-services"
@attribute [Authorize]

<PageTitle>Background Servisler</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="fw-bold mb-1"><i class="bx bx-server me-2"></i>Background Servisler</h4>
        <p class="text-muted mb-0">Arka plan servislerini yönetin ve izleyin</p>
    </div>
    <div class="d-flex gap-2">
        <button class="btn btn-outline-primary" @onclick="RefreshServices" disabled="@IsLoading">
            <i class="bx bx-refresh me-1"></i>Yenile
        </button>
    </div>
</div>

@if (IsLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Yükleniyor...</span>
        </div>
        <p class="mt-3 text-muted">Servisler yükleniyor...</p>
    </div>
}
else if (!Services.Any())
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="bx bx-server display-1 text-muted mb-3"></i>
            <h5 class="text-muted">Kayıtlı Background Servis Bulunamadı</h5>
        </div>
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var service in Services)
        {
            <div class="col-12 col-xl-6">
                <div class="card h-100 @(service.IsRunning ? "border-success" : service.IsPaused ? "border-warning" : "border-secondary")">
                    <div class="card-header bg-transparent">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-0">
                                    <i class="bx @(service.IsRunning ? "bx-play-circle text-success" : service.IsPaused ? "bx-pause-circle text-warning" : "bx-stop-circle text-secondary") me-2"></i>
                                    @service.DisplayName
                                </h5>
                                <small class="text-muted">@service.ServiceName</small>
                            </div>
                            <div>
                                @if (service.IsRunning)
                                {
                                    <span class="badge bg-success">Çalışıyor</span>
                                }
                                else if (service.IsPaused)
                                {
                                    <span class="badge bg-warning">Duraklatıldı</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Durduruldu</span>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <!-- İstatistikler -->
                        <div class="row g-3 mb-3">
                            <div class="col-6">
                                <div class="d-flex align-items-center">
                                    <i class="bx bx-time-five text-primary me-2 fs-5"></i>
                                    <div>
                                        <small class="text-muted d-block">Çalışma Aralığı</small>
                                        <strong>@service.Interval.TotalMinutes dk</strong>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="d-flex align-items-center">
                                    <i class="bx bx-calendar-check text-success me-2 fs-5"></i>
                                    <div>
                                        <small class="text-muted d-block">Başarılı</small>
                                        <strong>@service.SuccessCount</strong>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="d-flex align-items-center">
                                    <i class="bx bx-calendar-x text-danger me-2 fs-5"></i>
                                    <div>
                                        <small class="text-muted d-block">Hatalı</small>
                                        <strong>@service.ErrorCount</strong>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="d-flex align-items-center">
                                    <i class="bx bx-history text-info me-2 fs-5"></i>
                                    <div>
                                        <small class="text-muted d-block">Son Çalışma</small>
                                        <strong>@(service.LastRunTime?.ToString("HH:mm:ss") ?? "-")</strong>
                                    </div>
                                </div>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(service.LastError))
                        {
                            <div class="alert alert-danger alert-sm mb-3">
                                <i class="bx bx-error-circle me-1"></i>
                                <small>@service.LastError</small>
                            </div>
                        }

                        @if (service.NextRunTime.HasValue)
                        {
                            <div class="alert alert-info alert-sm mb-3">
                                <i class="bx bx-alarm me-1"></i>
                                <small>Sonraki Çalışma: @service.NextRunTime.Value.ToString("dd.MM.yyyy HH:mm:ss")</small>
                            </div>
                        }

                        <!-- Aksiyon Butonları -->
                        <div class="d-flex gap-2 flex-wrap">
                            <button class="btn btn-sm btn-primary" 
                                    @onclick="() => TriggerService(service.ServiceName)"
                                    disabled="@(IsProcessing || service.IsRunning)">
                                <i class="bx bx-play me-1"></i>Şimdi Çalıştır
                            </button>

                            @if (service.IsPaused)
                            {
                                <button class="btn btn-sm btn-success" 
                                        @onclick="() => ResumeService(service.ServiceName)"
                                        disabled="@IsProcessing">
                                    <i class="bx bx-play-circle me-1"></i>Devam Ettir
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-sm btn-warning" 
                                        @onclick="() => PauseService(service.ServiceName)"
                                        disabled="@IsProcessing">
                                    <i class="bx bx-pause-circle me-1"></i>Duraklat
                                </button>
                            }

                            <button class="btn btn-sm btn-outline-secondary" 
                                    @onclick="() => ShowIntervalModal(service)">
                                <i class="bx bx-time me-1"></i>Aralık Değiştir
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

<!-- Interval Modal -->
@if (SelectedService != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Çalışma Aralığını Değiştir</h5>
                    <button type="button" class="btn-close" @onclick="CloseIntervalModal"></button>
                </div>
                <div class="modal-body">
                    <p class="text-muted mb-3">
                        <strong>@SelectedService.DisplayName</strong> servisi için yeni çalışma aralığını dakika cinsinden girin.
                    </p>
                    <div class="mb-3">
                        <label class="form-label">Çalışma Aralığı (Dakika)</label>
                        <input type="number" class="form-control" @bind="NewIntervalMinutes" min="1" max="1440" />
                        <small class="text-muted">Mevcut: @SelectedService.Interval.TotalMinutes dakika</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseIntervalModal">İptal</button>
                    <button type="button" class="btn btn-primary" @onclick="UpdateInterval" disabled="@IsProcessing">
                        <i class="bx bx-save me-1"></i>Kaydet
                    </button>
                </div>
            </div>
        </div>
    </div>
}
