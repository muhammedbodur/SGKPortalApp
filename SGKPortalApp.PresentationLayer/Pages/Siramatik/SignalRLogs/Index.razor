@page "/siramatik/signalr-logs"
@inherits SGKPortalApp.PresentationLayer.Components.Base.FieldPermissionPageBase
@using SGKPortalApp.BusinessObjectLayer.DTOs.Response.SignalR
@using SGKPortalApp.BusinessObjectLayer.Enums.SignalR
@attribute [Authorize]

<PageTitle>SignalR Event Logs - SGK Portal</PageTitle>

@if (!CanViewPage)
{
    <div class="alert alert-danger" role="alert">
        <i class="bx bx-lock-alt me-2"></i>
        Bu sayfayı görüntüleme yetkiniz bulunmuyor.
    </div>
}
else
{
    <FieldPermissionScope PageKey="@ResolvedPermissionKey" IsEditMode="true">
        <div class="container-xxl flex-grow-1 container-p-y">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h4 class="fw-bold mb-1">
                        <i class="bx bx-broadcast me-2"></i>SignalR Event Logs
                    </h4>
                    <p class="text-muted mb-0">
                        SignalR mesaj gönderimlerini izleyin ve analiz edin
                    </p>
                </div>

                <div class="d-flex gap-2">
                    <!-- Auto Refresh Toggle -->
                    <div class="form-check form-switch d-flex align-items-center me-3">
                        <input class="form-check-input me-2" type="checkbox" id="autoRefresh" @bind="autoRefresh" @bind:after="OnAutoRefreshChanged" />
                        <label class="form-check-label" for="autoRefresh">
                            <i class="bx bx-refresh me-1"></i>Otomatik Yenile
                        </label>
                    </div>

                    <!-- Refresh Button -->
                    <button class="btn btn-outline-primary" @onclick="LoadData" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        else
                        {
                            <i class="bx bx-refresh me-1"></i>
                        }
                        Yenile
                    </button>
                </div>
            </div>

            <!-- Stats Cards -->
            @if (stats != null)
            {
                <div class="row mb-4">
                    <div class="col-md-2">
                        <div class="card bg-primary text-white">
                            <div class="card-body py-3">
                                <div class="d-flex align-items-center">
                                    <div class="avatar avatar-sm bg-white me-2">
                                        <i class="bx bx-broadcast text-primary"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0 text-white">@stats.TotalEvents</h6>
                                        <small>Toplam</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="card bg-success text-white">
                            <div class="card-body py-3">
                                <div class="d-flex align-items-center">
                                    <div class="avatar avatar-sm bg-white me-2">
                                        <i class="bx bx-check text-success"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0 text-white">@stats.SentCount</h6>
                                        <small>Gönderildi</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="card bg-danger text-white">
                            <div class="card-body py-3">
                                <div class="d-flex align-items-center">
                                    <div class="avatar avatar-sm bg-white me-2">
                                        <i class="bx bx-x text-danger"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0 text-white">@stats.FailedCount</h6>
                                        <small>Başarısız</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="card bg-warning text-white">
                            <div class="card-body py-3">
                                <div class="d-flex align-items-center">
                                    <div class="avatar avatar-sm bg-white me-2">
                                        <i class="bx bx-user-x text-warning"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0 text-white">@stats.NoTargetCount</h6>
                                        <small>Hedef Yok</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="card bg-info text-white">
                            <div class="card-body py-3">
                                <div class="d-flex align-items-center">
                                    <div class="avatar avatar-sm bg-white me-2">
                                        <i class="bx bx-time text-info"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0 text-white">@stats.AverageDurationMs.ToString("F1") ms</h6>
                                        <small>Ort. Süre</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="card">
                            <div class="card-body py-3">
                                <div class="d-flex align-items-center">
                                    <div class="avatar avatar-sm bg-label-secondary me-2">
                                        <i class="bx bx-check-double"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0">@stats.AcknowledgedCount</h6>
                                        <small class="text-muted">ACK</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Filters -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row g-3">
                        <!-- Tarih Aralığı -->
                        <div class="col-md-2">
                            <label class="form-label">
                                <i class="bx bx-calendar me-1"></i>Başlangıç
                            </label>
                            <input type="datetime-local" class="form-control" @bind="filter.StartDate" />
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">
                                <i class="bx bx-calendar me-1"></i>Bitiş
                            </label>
                            <input type="datetime-local" class="form-control" @bind="filter.EndDate" />
                        </div>

                        <!-- Event Type -->
                        <div class="col-md-2">
                            <label class="form-label">
                                <i class="bx bx-category me-1"></i>Event Tipi
                            </label>
                            <select class="form-select" @bind="filter.EventType">
                                <option value="">Tümü</option>
                                @foreach (var eventType in Enum.GetValues<SignalREventType>())
                                {
                                    <option value="@eventType">@GetEventTypeName(eventType)</option>
                                }
                            </select>
                        </div>

                        <!-- Delivery Status -->
                        <div class="col-md-2">
                            <label class="form-label">
                                <i class="bx bx-check-circle me-1"></i>Durum
                            </label>
                            <select class="form-select" @bind="filter.DeliveryStatus">
                                <option value="">Tümü</option>
                                @foreach (var status in Enum.GetValues<SignalRDeliveryStatus>())
                                {
                                    <option value="@status">@GetDeliveryStatusName(status)</option>
                                }
                            </select>
                        </div>

                        <!-- Sira No -->
                        <div class="col-md-2">
                            <label class="form-label">
                                <i class="bx bx-hash me-1"></i>Sıra No
                            </label>
                            <input type="number" class="form-control" placeholder="Sıra No" @bind="filter.SiraNo" />
                        </div>

                        <!-- Search Button -->
                        <div class="col-md-2 d-flex align-items-end">
                            <button class="btn btn-primary w-100" @onclick="ApplyFilter" disabled="@isLoading">
                                <i class="bx bx-search me-1"></i>Filtrele
                            </button>
                        </div>
                    </div>

                    <!-- Quick Filters -->
                    <div class="mt-3 d-flex gap-2 flex-wrap">
                        <button class="btn btn-sm @(quickFilter == "all" ? "btn-primary" : "btn-outline-primary")" @onclick='() => SetQuickFilter("all")'>
                            Tümü
                        </button>
                        <button class="btn btn-sm @(quickFilter == "recent5" ? "btn-primary" : "btn-outline-primary")" @onclick='() => SetQuickFilter("recent5")'>
                            Son 5 dk
                        </button>
                        <button class="btn btn-sm @(quickFilter == "recent15" ? "btn-primary" : "btn-outline-primary")" @onclick='() => SetQuickFilter("recent15")'>
                            Son 15 dk
                        </button>
                        <button class="btn btn-sm @(quickFilter == "recent60" ? "btn-primary" : "btn-outline-primary")" @onclick='() => SetQuickFilter("recent60")'>
                            Son 1 saat
                        </button>
                        <button class="btn btn-sm @(quickFilter == "failed" ? "btn-danger" : "btn-outline-danger")" @onclick='() => SetQuickFilter("failed")'>
                            <i class="bx bx-x me-1"></i>Başarısız
                        </button>
                        <button class="btn btn-sm @(quickFilter == "notarget" ? "btn-warning" : "btn-outline-warning")" @onclick='() => SetQuickFilter("notarget")'>
                            <i class="bx bx-user-x me-1"></i>Hedef Yok
                        </button>
                    </div>
                </div>
            </div>

            <!-- Event Logs Table -->
            @if (isLoading)
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Yükleniyor...</span>
                        </div>
                        <p class="mt-3 text-muted">Event logları yükleniyor...</p>
                    </div>
                </div>
            }
            else if (eventLogs.Any())
            {
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bx bx-list-ul me-2"></i>Event Logları
                            <span class="badge bg-label-primary ms-2">@totalCount kayıt</span>
                        </h5>
                        <div class="d-flex align-items-center gap-2">
                            <small class="text-muted">Sayfa @filter.PageNumber / @totalPages</small>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover table-sm">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 140px;">Zaman</th>
                                    <th style="width: 120px;">Event Tipi</th>
                                    <th style="width: 100px;">Hedef</th>
                                    <th style="width: 80px;">Sıra No</th>
                                    <th style="width: 80px;">Banko</th>
                                    <th style="width: 80px;">Durum</th>
                                    <th style="width: 60px;">Süre</th>
                                    <th style="width: 50px;"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var log in eventLogs)
                                {
                                    <tr class="@GetRowClass(log)">
                                        <td>
                                            <small>@log.SentAt.ToString("HH:mm:ss.fff")</small>
                                            <br />
                                            <small class="text-muted">@log.SentAt.ToString("dd.MM.yyyy")</small>
                                        </td>
                                        <td>
                                            <span class="badge @GetEventTypeBadgeClass(log.EventType)">
                                                @log.EventTypeName
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge bg-label-secondary">@log.TargetTypeName</span>
                                            @if (log.TargetCount > 0)
                                            {
                                                <small class="text-muted d-block">@log.TargetCount hedef</small>
                                            }
                                        </td>
                                        <td>
                                            @if (log.SiraNo.HasValue)
                                            {
                                                <strong class="text-primary">@log.SiraNo</strong>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (log.BankoId.HasValue)
                                            {
                                                <span class="badge bg-label-info">B@log.BankoId</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge @GetStatusBadgeClass(log.DeliveryStatus)">
                                                @log.DeliveryStatusName
                                            </span>
                                        </td>
                                        <td>
                                            @if (log.DurationMs.HasValue)
                                            {
                                                <small class="@(log.DurationMs > 100 ? "text-warning" : "text-success")">
                                                    @log.DurationMs ms
                                                </small>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            <button class="btn btn-sm btn-icon btn-outline-primary" @onclick="() => ShowDetail(log)" title="Detay">
                                                <i class="bx bx-show"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    @if (totalPages > 1)
                    {
                        <div class="card-footer d-flex justify-content-between align-items-center">
                            <div>
                                <small class="text-muted">
                                    @((filter.PageNumber - 1) * filter.PageSize + 1) - @Math.Min(filter.PageNumber * filter.PageSize, totalCount) / @totalCount kayıt
                                </small>
                            </div>
                            <nav>
                                <ul class="pagination pagination-sm mb-0">
                                    <li class="page-item @(filter.PageNumber <= 1 ? "disabled" : "")">
                                        <button class="page-link" @onclick="() => GoToPage(1)">
                                            <i class="bx bx-chevrons-left"></i>
                                        </button>
                                    </li>
                                    <li class="page-item @(filter.PageNumber <= 1 ? "disabled" : "")">
                                        <button class="page-link" @onclick="() => GoToPage(filter.PageNumber - 1)">
                                            <i class="bx bx-chevron-left"></i>
                                        </button>
                                    </li>
                                    @for (int i = Math.Max(1, filter.PageNumber - 2); i <= Math.Min(totalPages, filter.PageNumber + 2); i++)
                                    {
                                        var pageNum = i;
                                        <li class="page-item @(pageNum == filter.PageNumber ? "active" : "")">
                                            <button class="page-link" @onclick="() => GoToPage(pageNum)">@pageNum</button>
                                        </li>
                                    }
                                    <li class="page-item @(filter.PageNumber >= totalPages ? "disabled" : "")">
                                        <button class="page-link" @onclick="() => GoToPage(filter.PageNumber + 1)">
                                            <i class="bx bx-chevron-right"></i>
                                        </button>
                                    </li>
                                    <li class="page-item @(filter.PageNumber >= totalPages ? "disabled" : "")">
                                        <button class="page-link" @onclick="() => GoToPage(totalPages)">
                                            <i class="bx bx-chevrons-right"></i>
                                        </button>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="bx bx-search" style="font-size: 4rem; color: #ddd;"></i>
                        <h5 class="mt-3 text-muted">Event log bulunamadı</h5>
                        <p class="text-muted">Seçilen filtrelere uygun kayıt yok.</p>
                    </div>
                </div>
            }
        </div>
    </FieldPermissionScope>
}

<!-- Detail Modal -->
@if (showDetailModal && selectedLog != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bx bx-detail me-2"></i>Event Detayı
                    </h5>
                    <button type="button" class="btn-close" @onclick="HideDetail"></button>
                </div>
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label text-muted">Event ID</label>
                            <p class="mb-2"><code>@selectedLog.EventId</code></p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted">Gönderim Zamanı</label>
                            <p class="mb-2">@selectedLog.SentAt.ToString("dd.MM.yyyy HH:mm:ss.fff")</p>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label text-muted">Event Tipi</label>
                            <p class="mb-2">
                                <span class="badge @GetEventTypeBadgeClass(selectedLog.EventType)">@selectedLog.EventTypeName</span>
                            </p>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label text-muted">Event Adı</label>
                            <p class="mb-2"><code>@selectedLog.EventName</code></p>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label text-muted">Durum</label>
                            <p class="mb-2">
                                <span class="badge @GetStatusBadgeClass(selectedLog.DeliveryStatus)">@selectedLog.DeliveryStatusName</span>
                            </p>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label text-muted">Hedef Tipi</label>
                            <p class="mb-2">@selectedLog.TargetTypeName (@selectedLog.TargetCount hedef)</p>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label text-muted">Sıra No</label>
                            <p class="mb-2">@(selectedLog.SiraNo?.ToString() ?? "-")</p>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label text-muted">Süre</label>
                            <p class="mb-2">@(selectedLog.DurationMs?.ToString() ?? "-") ms</p>
                        </div>
                        @if (!string.IsNullOrEmpty(selectedLog.TargetId))
                        {
                            <div class="col-12">
                                <label class="form-label text-muted">Hedef ID</label>
                                <p class="mb-2"><code style="word-break: break-all;">@selectedLog.TargetId</code></p>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(selectedLog.PersonelTc))
                        {
                            <div class="col-md-6">
                                <label class="form-label text-muted">Personel TC</label>
                                <p class="mb-2">@selectedLog.PersonelTc</p>
                            </div>
                        }
                        @if (selectedLog.BankoId.HasValue)
                        {
                            <div class="col-md-6">
                                <label class="form-label text-muted">Banko ID</label>
                                <p class="mb-2">@selectedLog.BankoId</p>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(selectedLog.ErrorMessage))
                        {
                            <div class="col-12">
                                <label class="form-label text-muted">Hata Mesajı</label>
                                <div class="alert alert-danger mb-2">@selectedLog.ErrorMessage</div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(selectedLog.PayloadSummary))
                        {
                            <div class="col-12">
                                <label class="form-label text-muted">Payload</label>
                                <pre class="bg-light p-3 rounded" style="max-height: 200px; overflow: auto; font-size: 0.8rem;">@FormatJson(selectedLog.PayloadSummary)</pre>
                            </div>
                        }
                        @if (selectedLog.CorrelationId.HasValue)
                        {
                            <div class="col-12">
                                <label class="form-label text-muted">Correlation ID</label>
                                <p class="mb-2">
                                    <code>@selectedLog.CorrelationId</code>
                                    <button class="btn btn-sm btn-outline-primary ms-2" @onclick="() => FilterByCorrelation(selectedLog.CorrelationId.Value)">
                                        <i class="bx bx-filter me-1"></i>İlişkili Eventleri Göster
                                    </button>
                                </p>
                            </div>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    @if (selectedLog.SiraId.HasValue)
                    {
                        <button class="btn btn-outline-primary" @onclick="() => FilterBySira(selectedLog.SiraId.Value)">
                            <i class="bx bx-filter me-1"></i>Bu Sıranın Tüm Eventleri
                        </button>
                    }
                    <button type="button" class="btn btn-secondary" @onclick="HideDetail">Kapat</button>
                </div>
            </div>
        </div>
    </div>
}
