@page "/siramatik/kanal-islem"
@inherits SGKPortalApp.PresentationLayer.Components.Base.FieldPermissionPageBase
@using SGKPortalApp.BusinessObjectLayer.DTOs.Response.SiramatikIslemleri
@using SGKPortalApp.BusinessObjectLayer.Enums.Common
@attribute [Authorize]

<PageTitle>Kanal İşlem Yönetimi - SGK Portal</PageTitle>


@if (!CanViewPage)
{
    <div class="alert alert-danger" role="alert">
        <i class="bx bx-lock-alt me-2"></i>
        Bu sayfayı görüntüleme yetkiniz bulunmuyor.
    </div>
}
else
{
    <FieldPermissionScope PageKey="@ResolvedPermissionKey" IsEditMode="true">
        <div class="container-xxl flex-grow-1 container-p-y">
            <!-- Header -->
            <div class="d-flex flex-column flex-lg-row justify-content-between align-items-lg-center mb-4 gap-3">
                <div>
                    <h4 class="fw-bold mb-1">
                        <i class="bx bx-cog me-2"></i>Kanal İşlem Yönetimi
                    </h4>
                    <p class="text-muted mb-0">
                        Hizmet binalarına göre kanal işlemlerini tanımlayın ve numara aralıklarını yönetin.
                    </p>
                </div>

                <div class="d-flex flex-wrap gap-2">
                    @if (IsActionVisible("EXCEL_EXPORT"))
                    {
                        <button class="btn btn-success" @onclick="ExportToExcel" disabled="@isLoading">
                            @if (isLoading)
                            {
                                <span class="spinner-border spinner-border-sm me-1"></span>
                            }
                            else
                            {
                                <i class="bx bx-download me-1"></i>
                            }
                            Excel
                        </button>
                    }

                    @if (IsActionVisible("PDF_EXPORT"))
                    {
                        <button class="btn btn-danger" @onclick="ExportToPdf" disabled="@isLoading">
                            @if (isLoading)
                            {
                                <span class="spinner-border spinner-border-sm me-1"></span>
                            }
                            else
                            {
                                <i class="bx bxs-file-pdf me-1"></i>
                            }
                            PDF
                        </button>
                    }

                    <a href="/siramatik/kanal-islem/manage?hizmetBinasiId=@selectedHizmetBinasiId" class="btn btn-primary" disabled="@(selectedHizmetBinasiId == 0)">
                        <i class="bx bx-plus me-1"></i>Yeni Kanal İşlem
                    </a>
                </div>
            </div>

            <!-- Hizmet Binası Seçimi Kartı -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body py-3">
                    <div class="row g-3 align-items-center">
                        <PermissionField FieldName="HIZMETBINASIID" Context="perm">
                            <div class="col-lg-4">
                                <label class="form-label fw-semibold mb-1">
                                    <i class="bx bx-building me-1 text-primary"></i>Hizmet Binası Seçimi
                                </label>
                                <select class="form-select"
                                        @onchange="OnHizmetBinasiChanged"
                                        value="@selectedHizmetBinasiId"
                                        disabled="@(perm.IsDisabled)">
                                    <option value="0">-- Hizmet Binası Seçiniz --</option>
                                    @foreach (var bina in hizmetBinalari)
                                    {
                                        <option value="@bina.HizmetBinasiId">@bina.HizmetBinasiAdi</option>
                                    }
                                </select>
                            </div>
                        </PermissionField>
                        @if (selectedHizmetBinasiId > 0)
                        {
                            <div class="col-lg-8">
                                <div class="row g-2">
                                    <div class="col-sm-6 col-lg-3">
                                        <div class="bg-label-primary rounded p-2 text-center">
                                            <h6 class="mb-0">@allKanallar.Count</h6>
                                            <small class="text-muted">Toplam İşlem</small>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 col-lg-3">
                                        <div class="bg-label-success rounded p-2 text-center">
                                            <h6 class="mb-0 text-success">@allKanallar.Count(k => k.Aktiflik == Aktiflik.Aktif)</h6>
                                            <small class="text-muted">Aktif</small>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 col-lg-3">
                                        <div class="bg-label-warning rounded p-2 text-center">
                                            <h6 class="mb-0 text-warning">@allKanallar.Sum(k => k.KanalAltIslemSayisi)</h6>
                                            <small class="text-muted">Alt Kanal İşlem</small>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 col-lg-3">
                                        <div class="bg-label-secondary rounded p-2 text-center">
                                            <h6 class="mb-0">@filteredKanallar.Count</h6>
                                            <small class="text-muted">Filtrelenen</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            @if (selectedHizmetBinasiId > 0)
            {
                <!-- Filtreleme Çubuğu -->
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-body py-3">
                        <div class="row g-3 align-items-center">
                            <!-- Arama -->
                            <div class="col-lg-3">
                                <div class="input-group input-group-merge">
                                    <span class="input-group-text"><i class="bx bx-search"></i></span>
                                    <input type="text" 
                                           class="form-control" 
                                           placeholder="Kanal adı ara..." 
                                           @bind="searchText" 
                                           @bind:event="oninput" 
                                           @onkeyup="OnSearchChanged" />
                                    @if (!string.IsNullOrEmpty(searchText))
                                    {
                                        <span class="input-group-text cursor-pointer" @onclick="() => { searchText = string.Empty; OnSearchChanged(); }">
                                            <i class="bx bx-x"></i>
                                        </span>
                                    }
                                </div>
                            </div>

                            <!-- Aktiflik Filtresi - Button Group -->
                            <div class="col-lg-auto">
                                <div class="btn-group" role="group">
                                    <button type="button"
                                            class="btn btn-sm @(selectedAktiflik == null ? "btn-secondary" : "btn-outline-secondary")"
                                            @onclick="() => SetAktiflikFilter(null)">
                                        Tümü
                                    </button>
                                    <button type="button"
                                            class="btn btn-sm @(selectedAktiflik == Aktiflik.Aktif ? "btn-label-success" : "btn-outline-secondary")"
                                            @onclick="() => SetAktiflikFilter(Aktiflik.Aktif)">
                                        Aktif
                                    </button>
                                    <button type="button"
                                            class="btn btn-sm @(selectedAktiflik == Aktiflik.Pasif ? "btn-label-secondary" : "btn-outline-secondary")"
                                            @onclick="() => SetAktiflikFilter(Aktiflik.Pasif)">
                                        Pasif
                                    </button>
                                </div>
                            </div>

                            <!-- Sıralama -->
                            <div class="col-lg-auto">
                                <select class="form-select form-select-sm" style="min-width: 150px;" @onchange="OnSortChanged">
                                    <option value="sira-asc" selected>Sıra (Artan)</option>
                                    <option value="sira-desc">Sıra (Azalan)</option>
                                    <option value="name-asc">İsim (A-Z)</option>
                                    <option value="name-desc">İsim (Z-A)</option>
                                    <option value="date-newest">Son Eklenenler</option>
                                    <option value="date-oldest">İlk Eklenenler</option>
                                </select>
                            </div>

                            <!-- Sonuç Bilgisi -->
                            <div class="col-lg-auto ms-lg-auto">
                                <span class="badge bg-label-secondary">
                                    <i class="bx bx-filter me-1"></i>@filteredKanallar.Count / @allKanallar.Count kayıt
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Data Display -->
            @if (isLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Yükleniyor...</span>
                    </div>
                    <p class="mt-3 text-muted">Kanal işlemleri yükleniyor...</p>
                </div>
            }
            else if (selectedHizmetBinasiId == 0)
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="bx bx-building" style="font-size: 4rem; color: #ddd;"></i>
                        <h5 class="mt-3 text-muted">Hizmet Binası Seçiniz</h5>
                        <p class="text-muted">Kanal işlemlerini görüntülemek için yukarıdan bir hizmet binası seçiniz.</p>
                    </div>
                </div>
            }
            else if (filteredKanallar.Any())
            {
                <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4">
                    @foreach (var kanal in filteredKanallar)
                    {
                        <div class="col">
                            <div class="card h-100 shadow-sm border-0 card-hover @(kanal.Aktiflik == Aktiflik.Pasif ? "opacity-75" : "")">
                                <div class="card-header border-0 pb-0 d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center gap-2">
                                        <span class="badge @(kanal.Aktiflik == Aktiflik.Aktif ? "bg-label-success" : "bg-label-secondary")">
                                            @(kanal.Aktiflik == Aktiflik.Aktif ? "Aktif" : "Pasif")
                                        </span>
                                        <span class="badge bg-label-primary">
                                            Sıra: @kanal.Sira
                                        </span>
                                    </div>
                                    <div class="dropdown">
                                        <button class="btn btn-text-secondary btn-icon btn-sm rounded-pill" type="button" data-bs-toggle="dropdown">
                                            <i class="bx bx-dots-vertical-rounded"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li>
                                                <a class="dropdown-item" href="/siramatik/kanal-islem/manage/@kanal.KanalIslemId">
                                                    <i class="bx bx-edit-alt me-2 text-primary"></i>Düzenle
                                                </a>
                                            </li>
                                            <li><hr class="dropdown-divider my-1" /></li>
                                            <li>
                                                <a class="dropdown-item" href="/siramatik/kanal-alt-islem?kanalIslemId=@kanal.KanalIslemId">
                                                    <i class="bx bx-subdirectory-right me-2 text-info"></i>Alt Kanal İşlemleri Gör
                                                </a>
                                            </li>
                                            <li><hr class="dropdown-divider my-1" /></li>
                                            <li>
                                                <button class="dropdown-item" @onclick="() => ToggleAktiflik(kanal)">
                                                    <i class="bx @(kanal.Aktiflik == Aktiflik.Aktif ? "bx-pause" : "bx-play") me-2"></i>
                                                    @(kanal.Aktiflik == Aktiflik.Aktif ? "Pasif Yap" : "Aktif Yap")
                                                </button>
                                            </li>
                                            <li>
                                                <button class="dropdown-item text-danger" @onclick="() => ShowDeleteConfirm(kanal)">
                                                    <i class="bx bx-trash me-2"></i>Sil
                                                </button>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                        
                                <div class="card-body pt-3">
                                    <h5 class="card-title fw-semibold mb-1">@kanal.KanalAdi</h5>
                                    <small class="text-muted d-block mb-3">
                                        <i class="bx bx-calendar me-1"></i>@kanal.EklenmeTarihi.ToString("dd MMM yyyy")
                                    </small>
                            
                                    <!-- Numara Aralığı -->
                                    <div class="bg-light rounded p-2 mb-3">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="text-muted small">Numara Aralığı</span>
                                            <span class="fw-semibold text-primary">@kanal.BaslangicNumara - @kanal.BitisNumara</span>
                                        </div>
                                    </div>
                            
                                    <!-- Alt İşlem Sayısı -->
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div class="bg-label-info rounded p-2 text-center flex-grow-1">
                                            <h6 class="mb-0 text-info">@kanal.KanalAltIslemSayisi</h6>
                                            <small class="text-muted">Alt Kanal İşlem</small>
                                        </div>
                                    </div>
                                </div>
                        
                                <!-- Hızlı Aksiyon -->
                                <div class="card-footer border-0 pt-0">
                                    <a href="/siramatik/kanal-alt-islem?kanalIslemId=@kanal.KanalIslemId" 
                                       class="btn btn-sm btn-outline-info w-100">
                                        <i class="bx bx-subdirectory-right me-1"></i>Alt İşlemleri Yönet
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="bx bx-search" style="font-size: 4rem; color: #ddd;"></i>
                        <h5 class="mt-3 text-muted">Kanal işlem bulunamadı</h5>
                        <p class="text-muted">@(string.IsNullOrEmpty(searchText) ? "Bu hizmet binasında henüz kanal işlem eklenmemiş." : "Arama kriterlerine uygun sonuç bulunamadı.")</p>
                        @if (string.IsNullOrEmpty(searchText))
                        {
                            <a href="/siramatik/kanal-islem/manage?hizmetBinasiId=@selectedHizmetBinasiId" class="btn btn-primary mt-3">
                                <i class="bx bx-plus me-1"></i>İlk Kanal İşlemi Ekle
                            </a>
                        }
                    </div>
                </div>
            }
        </div>
    </FieldPermissionScope>
}


<!-- Delete Confirmation Modal -->
@if (showDeleteModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bx bx-trash text-danger me-2"></i>Kanal İşlem Sil</h5>
                    <button type="button" class="btn-close" @onclick="HideDeleteConfirm"></button>
                </div>
                <div class="modal-body">
                    <p class="mb-0"><strong>@selectedKanal?.KanalAdi</strong> kanal işlemini silmek istediğinizden emin misiniz?</p>
                    @if (selectedKanal?.KanalAltIslemSayisi > 0)
                    {
                        <div class="alert alert-warning mt-3 mb-0">
                            <i class="bx bx-error me-2"></i><strong>Dikkat!</strong> Bu kanal işlemine ait <strong>@selectedKanal.KanalAltIslemSayisi</strong> alt işlem de silinecektir.
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideDeleteConfirm">İptal</button>
                    <button type="button" class="btn btn-danger" @onclick="DeleteKanal" disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        else
                        {
                            <i class="bx bx-trash me-1"></i>
                        }
                        Sil
                    </button>
                </div>
            </div>
        </div>
    </div>
}
