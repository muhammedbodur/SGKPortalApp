@page "/siramatik/kanal-islem"
@using SGKPortalApp.BusinessObjectLayer.DTOs.Response.SiramatikIslemleri
@using SGKPortalApp.BusinessObjectLayer.Enums.Common
@attribute [Authorize]

<PageTitle>Kanal İşlem Yönetimi - SGK Portal</PageTitle>

<div class="container-xxl flex-grow-1 container-p-y">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold mb-1">
                <i class="bx bx-list-ul me-2"></i>Kanal İşlem Yönetimi
            </h4>
            <p class="text-muted mb-0">
                Tüm kanal işlemlerini görüntüleyin ve yönetin
            </p>
        </div>

        <div class="d-flex gap-2">
            <button class="btn btn-success" @onclick="ExportToExcel" disabled="@isLoading">
                <i class="bx bx-download me-1"></i>Excel
            </button>
            <button class="btn btn-danger" @onclick="ExportToPdf" disabled="@isLoading">
                <i class="bx bxs-file-pdf me-1"></i>PDF
            </button>
            <a href="/siramatik/kanal-islem/manage?hizmetBinasiId=@selectedHizmetBinasiId" class="btn btn-primary">
                <i class="bx bx-plus me-1"></i>Yeni Kanal İşlem
            </a>
        </div>
    </div>

    <!-- Filter Card -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row g-3">
                <!-- Hizmet Binası Seçimi -->
                <div class="col-md-3">
                    <label class="form-label">
                        <i class="bx bx-building me-1"></i>Hizmet Binası
                    </label>
                    <select class="form-select" @onchange="OnHizmetBinasiChanged" value="@selectedHizmetBinasiId">
                        <option value="0">-- Hizmet Binası Seçiniz --</option>
                        @foreach (var bina in hizmetBinalari)
                        {
                            <option value="@bina.HizmetBinasiId">@bina.HizmetBinasiAdi</option>
                        }
                    </select>
                </div>

                <!-- Arama -->
                <div class="col-md-4">
                    <label class="form-label">Kanal Ara</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bx bx-search"></i></span>
                        <input type="text" class="form-control" placeholder="Kanal adı ile arama yapın..."
                               @bind="searchText" @bind:event="oninput" @onkeyup="OnSearchChanged" />
                    </div>
                </div>

                <!-- Durum Filtresi -->
                <div class="col-md-2">
                    <label class="form-label">Durum</label>
                    <select class="form-select" @onchange="OnAktiflikChanged">
                        <option value="">Tümü</option>
                        <option value="@((int)Aktiflik.Aktif)">Aktif</option>
                        <option value="@((int)Aktiflik.Pasif)">Pasif</option>
                    </select>
                </div>

                <!-- Sıralama -->
                <div class="col-md-2">
                    <label class="form-label">Sıralama</label>
                    <select class="form-select" @onchange="OnSortChanged">
                        <option value="name-asc">İsim (A-Z)</option>
                        <option value="name-desc">İsim (Z-A)</option>
                        <option value="sira-asc" selected>Sıra (Artan)</option>
                        <option value="sira-desc">Sıra (Azalan)</option>
                        <option value="date-newest">En Yeni</option>
                        <option value="date-oldest">En Eski</option>
                    </select>
                </div>

                <!-- Temizle -->
                <div class="col-md-1 d-flex align-items-end">
                    <button class="btn btn-outline-secondary w-100" @onclick="ClearFilters" title="Filtreleri Temizle">
                        <i class="bx bx-reset"></i>
                    </button>
                </div>
            </div>

            <!-- İstatistikler -->
            <div class="row mt-3">
                <div class="col">
                    <div class="d-flex gap-4 text-muted small">
                        <span><i class="bx bx-list-ul text-primary"></i> Toplam: <strong>@allKanallar.Count</strong></span>
                        <span><i class="bx bx-check-circle text-success"></i> Aktif: <strong>@allKanallar.Count(k => k.Aktiflik == Aktiflik.Aktif)</strong></span>
                        <span><i class="bx bx-x-circle text-danger"></i> Pasif: <strong>@allKanallar.Count(k => k.Aktiflik == Aktiflik.Pasif)</strong></span>
                        <span><i class="bx bx-filter-alt text-info"></i> Filtrelenen: <strong>@filteredKanallar.Count</strong></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Data Display -->
    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Yükleniyor...</span>
            </div>
            <p class="mt-3 text-muted">Kanal işlemleri yükleniyor...</p>
        </div>
    }
    else if (selectedHizmetBinasiId == 0)
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bx bx-building" style="font-size: 4rem; color: #ddd;"></i>
                <h5 class="mt-3 text-muted">Hizmet Binası Seçiniz</h5>
                <p class="text-muted">Kanal işlemlerini görüntülemek için yukarıdan bir hizmet binası seçiniz.</p>
            </div>
        </div>
    }
    else if (filteredKanallar.Any())
    {
        <!-- 4 Sütunlu Grid -->
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
            @foreach (var kanal in filteredKanallar)
            {
                <div class="col">
                    <div class="card h-100 @(kanal.Aktiflik == Aktiflik.Pasif ? "border-danger" : "")">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div class="avatar avatar-lg">
                                    <span class="avatar-initial rounded bg-label-primary">
                                        <i class="bx bx-list-ul fs-3"></i>
                                    </span>
                                </div>
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-icon" type="button" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li>
                                            <a class="dropdown-item" href="/siramatik/kanal-islem/manage/@kanal.KanalIslemId">
                                                <i class="bx bx-edit me-2"></i>Düzenle
                                            </a>
                                        </li>
                                        <li>
                                            <button class="dropdown-item" @onclick="() => ToggleAktiflik(kanal)">
                                                <i class="bx @(kanal.Aktiflik == Aktiflik.Aktif ? "bx-x" : "bx-check") me-2"></i>
                                                @(kanal.Aktiflik == Aktiflik.Aktif ? "Pasif Yap" : "Aktif Yap")
                                            </button>
                                        </li>
                                        <li><hr class="dropdown-divider" /></li>
                                        <li>
                                            <button class="dropdown-item text-danger" @onclick="() => ShowDeleteConfirm(kanal)">
                                                <i class="bx bx-trash me-2"></i>Sil
                                            </button>
                                        </li>
                                    </ul>
                                </div>
                            </div>

                            <h5 class="card-title mb-2">@kanal.KanalAdi</h5>
                            <div class="mb-2">
                                <small class="text-muted"><i class="bx bx-building me-1"></i>@kanal.HizmetBinasiAdi</small>
                            </div>
                            <div class="mb-2">
                                <small class="text-muted"><i class="bx bx-hash me-1"></i>Numara: <strong>@kanal.BaslangicNumara - @kanal.BitisNumara</strong></small>
                            </div>
                            <div class="mb-2">
                                <small class="text-muted"><i class="bx bx-sort me-1"></i>Sıra: <strong>@kanal.Sira</strong></small>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="badge @(kanal.Aktiflik == Aktiflik.Aktif ? "bg-label-success" : "bg-label-danger")">
                                    @(kanal.Aktiflik == Aktiflik.Aktif ? "Aktif" : "Pasif")
                                </span>
                                <small class="text-muted"><i class="bx bx-time me-1"></i>@kanal.EklenmeTarihi.ToString("dd.MM.yyyy")</small>
                            </div>

                            <div class="border-top pt-3">
                                <small class="text-muted d-block">
                                    <i class="bx bx-subdirectory-right me-1"></i>
                                    @if (kanal.KanalAltIslemSayisi > 0)
                                    {
                                        <span>Alt İşlemler: <strong>@kanal.KanalAltIslemSayisi</strong></span>
                                    }
                                    else
                                    {
                                        <span class="text-warning">Alt işlem tanımlanmamış</span>
                                    }
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bx bx-search" style="font-size: 4rem; color: #ddd;"></i>
                <h5 class="mt-3 text-muted">Kanal işlem bulunamadı</h5>
                <p class="text-muted">@(string.IsNullOrEmpty(searchText) ? "Bu hizmet binasında henüz kanal işlem eklenmemiş." : "Arama kriterlerine uygun sonuç bulunamadı.")</p>
                @if (string.IsNullOrEmpty(searchText))
                {
                    <a href="/siramatik/kanal-islem/manage?hizmetBinasiId=@selectedHizmetBinasiId" class="btn btn-primary mt-3">
                        <i class="bx bx-plus me-1"></i>İlk Kanal İşlemi Ekle
                    </a>
                }
            </div>
        </div>
    }
</div>

<!-- Delete Confirmation Modal -->
@if (showDeleteModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bx bx-trash text-danger me-2"></i>Kanal İşlem Sil</h5>
                    <button type="button" class="btn-close" @onclick="HideDeleteConfirm"></button>
                </div>
                <div class="modal-body">
                    <p class="mb-0"><strong>@selectedKanal?.KanalAdi</strong> kanal işlemini silmek istediğinizden emin misiniz?</p>
                    @if (selectedKanal?.KanalAltIslemSayisi > 0)
                    {
                        <div class="alert alert-warning mt-3 mb-0">
                            <i class="bx bx-error me-2"></i><strong>Dikkat!</strong> Bu kanal işlemine ait <strong>@selectedKanal.KanalAltIslemSayisi</strong> alt işlem de silinecektir.
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideDeleteConfirm">İptal</button>
                    <button type="button" class="btn btn-danger" @onclick="DeleteKanal" disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        else
                        {
                            <i class="bx bx-trash me-1"></i>
                        }
                        Sil
                    </button>
                </div>
            </div>
        </div>
    </div>
}
