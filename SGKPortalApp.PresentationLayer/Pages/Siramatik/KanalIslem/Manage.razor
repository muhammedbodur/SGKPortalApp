@page "/siramatik/kanal-islem/manage"
@page "/siramatik/kanal-islem/manage/{KanalIslemId:int}"
@using SGKPortalApp.BusinessObjectLayer.DTOs.Request.SiramatikIslemleri
@using SGKPortalApp.BusinessObjectLayer.Enums.Common
@using System.ComponentModel.DataAnnotations
@attribute [Authorize]

<PageTitle>@(IsEditMode ? "Kanal İşlem Düzenle" : "Yeni Kanal İşlem") - SGK Portal</PageTitle>

<div class="container-xxl flex-grow-1 container-p-y">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb breadcrumb-style1">
            <li class="breadcrumb-item">
                <a href="/">
                    <i class="bx bx-home-alt me-1"></i>Ana Sayfa
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="/siramatik/kanal-islem">
                    Kanal İşlem Yönetimi
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                @(IsEditMode ? "Düzenle" : "Yeni Kanal İşlem")
            </li>
        </ol>
    </nav>

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold mb-1">
                <i class="bx @(IsEditMode ? "bx-edit" : "bx-plus-circle") me-2"></i>
                @(IsEditMode ? "Kanal İşlem Düzenle" : "Yeni Kanal İşlem Ekle")
            </h4>
            <p class="text-muted mb-0">
                @(IsEditMode ? "Kanal işlem bilgilerini güncelleyin" : "Yeni bir kanal işlem oluşturun")
            </p>
        </div>

        <button class="btn btn-outline-secondary" @onclick="NavigateBack">
            <i class="bx bx-arrow-back me-1"></i>Geri Dön
        </button>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Yükleniyor...</span>
            </div>
            <p class="mt-3 text-muted">Veriler yükleniyor...</p>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8 col-xl-6 mx-auto">
                <div class="card">
                    <div class="card-header d-flex align-items-center justify-content-between">
                        <h5 class="mb-0">
                            <i class="bx bx-info-circle me-2"></i>Kanal İşlem Bilgileri
                        </h5>
                        @if (IsEditMode)
                        {
                            <span class="badge bg-label-info">ID: @KanalIslemId</span>
                        }
                    </div>

                    <div class="card-body">
                        <EditForm Model="@model" OnValidSubmit="HandleSubmit">
                            <DataAnnotationsValidator />

                            <!-- Hizmet Binası Bilgisi (Sadece Gösterim) -->
                            @if (selectedHizmetBinasiId > 0)
                            {
                                <div class="mb-3">
                                    <label class="form-label">
                                        <i class="bx bx-building me-1"></i>Hizmet Binası
                                    </label>
                                    <input type="text" class="form-control" 
                                           value="@hizmetBinasiAdi" 
                                           disabled readonly />
                                    <small class="text-muted">
                                        @(IsEditMode ? "Düzenleme sırasında hizmet binası değiştirilemez" : "Index sayfasından seçilen hizmet binası")
                                    </small>
                                </div>
                            }

                            <!-- Kanal Seçimi -->
                            <div class="mb-3">
                                <label class="form-label required">
                                    <i class="bx bx-category me-1"></i>Ana Kanal
                                </label>
                                <InputSelect @bind-Value="model.KanalId" class="form-select" disabled="@isSaving">
                                    <option value="0">-- Kanal Seçiniz --</option>
                                    @foreach (var kanal in anaKanallar)
                                    {
                                        <option value="@kanal.KanalId">@kanal.KanalAdi</option>
                                    }
                                </InputSelect>
                                <ValidationMessage For="@(() => model.KanalId)" class="text-danger small mt-1" />
                                <small class="text-muted">Önce ana kanal tanımlanmalıdır</small>
                            </div>

                            <!-- Başlangıç ve Bitiş Numarası -->
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label class="form-label required">
                                        <i class="bx bx-hash me-1"></i>Başlangıç Numarası
                                    </label>
                                    <InputNumber @bind-Value="model.BaslangicNumara"
                                                 class="form-control"
                                                 placeholder="0"
                                                 disabled="@isSaving" />
                                    <ValidationMessage For="@(() => model.BaslangicNumara)" class="text-danger small mt-1" />
                                    <small class="text-muted">Sıra aralığının başlangıcı</small>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label required">
                                        <i class="bx bx-hash me-1"></i>Bitiş Numarası
                                    </label>
                                    <InputNumber @bind-Value="model.BitisNumara"
                                                 class="form-control"
                                                 placeholder="9999"
                                                 disabled="@isSaving" />
                                    <ValidationMessage For="@(() => model.BitisNumara)" class="text-danger small mt-1" />
                                    <small class="text-muted">Sıra aralığının bitişi</small>
                                </div>
                            </div>

                            <!-- Sıra -->
                            <div class="mb-3">
                                <label class="form-label required">
                                    <i class="bx bx-sort me-1"></i>Gösterilme Sırası
                                </label>
                                <InputNumber @bind-Value="model.Sira"
                                             class="form-control"
                                             placeholder="1"
                                             disabled="@isSaving" />
                                <ValidationMessage For="@(() => model.Sira)" class="text-danger small mt-1" />
                                <small class="text-muted">Kiosk ekranında gösterilme sırası (1-999)</small>
                            </div>

                            <!-- Aktiflik -->
                            <div class="mb-4">
                                <label class="form-label required">
                                    <i class="bx bx-check-circle me-1"></i>Durum
                                </label>
                                <div class="form-check form-switch">
                                    <InputCheckbox @bind-Value="isAktif"
                                                   class="form-check-input"
                                                   id="aktiflikSwitch"
                                                   disabled="@isSaving" />
                                    <label class="form-check-label" for="aktiflikSwitch">
                                        <span class="badge @(isAktif ? "bg-label-success" : "bg-label-secondary")">
                                            @(isAktif ? "Aktif" : "Pasif")
                                        </span>
                                    </label>
                                </div>
                                <small class="text-muted">
                                    Pasif kanal işlemleri sıramatik cihazında görünmez
                                </small>
                            </div>

                            <!-- Action Buttons -->
                            <div class="d-flex justify-content-between align-items-center border-top pt-3">
                                <button type="button" @onclick="NavigateBack" class="btn btn-secondary" disabled="@isSaving">
                                    <i class="bx bx-x me-1"></i>
                                    İptal
                                </button>
                                <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                    @if (isSaving)
                                    {
                                        <span class="spinner-border spinner-border-sm me-1"></span>
                                        <span>Kaydediliyor...</span>
                                    }
                                    else
                                    {
                                        <i class="bx bx-save me-1"></i>
                                        <span>@(IsEditMode ? "Değişiklikleri Kaydet" : "Kanal İşlem Ekle")</span>
                                    }
                                </button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>

            <!-- Info Panel -->
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="bx bx-help-circle me-2"></i>
                            Bilgilendirme
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-info mb-3">
                            <h6 class="alert-heading">
                                <i class="bx bx-info-circle me-1"></i>
                                Kanal İşlem Nedir?
                            </h6>
                            <p class="mb-0 small">
                                Kanal işlemler, sıramatik sisteminde ana hizmet kategorilerini temsil eder.
                                Her kanal işlemin altında birden fazla alt işlem bulunabilir.
                            </p>
                        </div>

                        <div class="alert alert-warning mb-0">
                            <h6 class="alert-heading">
                                <i class="bx bx-error me-1"></i>
                                Önemli Notlar
                            </h6>
                            <ul class="mb-0 small ps-3">
                                <li>Kanal işlem adı benzersiz olmalıdır</li>
                                <li>Başlangıç numarası bitiş numarasından küçük olmalıdır</li>
                                <li>Sıra numarası 1'den başlamalıdır</li>
                                <li>Pasif işlemler cihazda görünmez</li>
                                <li>Numaralara dikkat edin, çakışma olmamalı</li>
                            </ul>
                        </div>
                    </div>
                </div>

                @if (IsEditMode)
                {
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="bx bx-time me-2"></i>
                                Kayıt Bilgileri
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-2">
                                <small class="text-muted d-block">Eklenme Tarihi</small>
                                <strong>@eklenmeTarihi.ToString("dd.MM.yyyy HH:mm")</strong>
                            </div>
                            @if (duzenlenmeTarihi.HasValue)
                            {
                                <div>
                                    <small class="text-muted d-block">Son Düzenleme</small>
                                    <strong>@duzenlenmeTarihi.Value.ToString("dd.MM.yyyy HH:mm")</strong>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>