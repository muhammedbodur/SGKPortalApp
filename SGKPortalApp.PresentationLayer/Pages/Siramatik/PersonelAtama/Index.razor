@page "/siramatik/personel-atama"
@using SGKPortalApp.BusinessObjectLayer.DTOs.Response.SiramatikIslemleri
@using SGKPortalApp.BusinessObjectLayer.Enums.SiramatikIslemleri
@using SGKPortalApp.BusinessObjectLayer.Enums.Common
@attribute [Authorize]

<PageTitle>Personel Kanal Yetkilendirme - SGK Portal</PageTitle>

<div class="container-xxl flex-grow-1 container-p-y">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold mb-1">
                <i class="bx bx-user-check me-2"></i>Personel Kanal Yetkilendirme
            </h4>
            <p class="text-muted mb-0">
                Personellerin kanal alt işlemlerine atanması ve uzmanlık seviyelerinin belirlenmesi
            </p>
        </div>

        <div class="d-flex gap-2">
            @if (selectedHizmetBinasi != null)
            {
                <button class="btn btn-success" @onclick="ExportToExcel" disabled="@isLoading">
                    <i class="bx bx-download me-1"></i>Excel
                </button>

                <button class="btn btn-danger" @onclick="ExportToPdf" disabled="@isLoading">
                    <i class="bx bxs-file-pdf me-1"></i>PDF
                </button>

                <span class="badge bg-label-primary fs-6 d-flex align-items-center">
                    <i class="bx bx-buildings me-1"></i>
                    @selectedHizmetBinasi.HizmetBinasiAdi
                </span>
            }
        </div>
    </div>

    <!-- Hizmet Binası Seçimi -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <label class="form-label fw-bold">
                        <i class="bx bx-building me-1"></i>Hizmet Binası Seçin
                    </label>
                    <select class="form-select" @onchange="OnHizmetBinasiChanged" disabled="@isLoading">
                        <option value="0">-- Hizmet Binası Seçin --</option>
                        @foreach (var binasi in hizmetBinalari)
                        {
                            <option value="@binasi.HizmetBinasiId">@binasi.HizmetBinasiAdi</option>
                        }
                    </select>
                </div>

                @if (selectedHizmetBinasi != null)
                {
                    <div class="col-md-6">
                        <label class="form-label fw-bold">İstatistikler</label>
                        <div class="d-flex gap-4">
                            <span class="text-muted small">
                                <i class="bx bx-user text-primary"></i>
                                Personel: <strong>@personeller.Count</strong>
                            </span>
                            <span class="text-muted small">
                                <i class="bx bx-subdirectory-right text-info"></i>
                                Alt İşlem: <strong>@kanalAltIslemler.Count</strong>
                            </span>
                            <span class="text-muted small">
                                <i class="bx bx-check-circle text-success"></i>
                                Atama: <strong>@toplamAtamaSayisi</strong>
                            </span>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Yükleniyor...</span>
                </div>
                <p class="mt-3 text-muted">Veriler yükleniyor...</p>
            </div>
        </div>
    }
    else if (selectedHizmetBinasi != null)
    {
        <!-- Personel - Kanal Alt İşlem Matrisi -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bx bx-table me-2"></i>Personel - Kanal Alt İşlem Matrisi
                </h5>
                <div>
                    <span class="badge bg-label-success me-2">
                        <i class="bx bx-star"></i> Uzman
                    </span>
                    <span class="badge bg-label-info me-2">
                        <i class="bx bx-user"></i> Yrd. Uzman
                    </span>
                    <span class="badge bg-label-secondary">
                        <i class="bx bx-x"></i> Bilgisi Yok
                    </span>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive" style="max-height: 600px; overflow: auto;">
                    <table class="table table-bordered mb-0">
                        <thead>
                            <tr>
                                <th style="min-width: 200px; position: sticky; left: 0; background: #f8f9fa; z-index: 11;">
                                    <i class="bx bx-user me-1"></i>Personel
                                </th>
                                @foreach (var altIslem in kanalAltIslemler.OrderBy(x => x.KanalIslemAdi).ThenBy(x => x.Sira))
                                {
                                    <th class="text-center" 
                                        style="min-width: 100px; max-width: 120px; font-size: 0.75rem; padding: 0.5rem 0.2rem;"
                                        title="@altIslem.KanalIslemAdi - @altIslem.KanalAltAdi">
                                        <div class="text-primary small fw-bold">@altIslem.KanalIslemAdi</div>
                                        <div class="text-truncate">@altIslem.KanalAltAdi</div>
                                    </th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var personel in personeller)
                            {
                                <tr>
                                    <td style="position: sticky; left: 0; background: white; z-index: 9;">
                                        <div class="d-flex justify-content-start align-items-center">
                                            <div class="avatar avatar-sm me-2">
                                                <span class="avatar-initial rounded-circle bg-label-primary">
                                                    @personel.AdSoyad.Substring(0, 1)
                                                </span>
                                            </div>
                                            <div class="d-flex flex-column">
                                                <span class="fw-bold">@personel.AdSoyad</span>
                                                <small class="text-muted">@personel.UnvanAdi</small>
                                            </div>
                                        </div>
                                    </td>
                                    @foreach (var altIslem in kanalAltIslemler.OrderBy(x => x.KanalIslemAdi).ThenBy(x => x.Sira))
                                    {
                                        <td class="text-center p-1">
                                            @{
                                                var atama = GetPersonelAtama(personel.TcKimlikNo, altIslem.KanalAltIslemId);
                                                var uzmanlik = atama?.Uzmanlik ?? SGKPortalApp.BusinessObjectLayer.Enums.SiramatikIslemleri.PersonelUzmanlik.BilgisiYok;
                                            }
                                            <button type="button" 
                                                    class="btn btn-sm badge @GetUzmanlikBadgeClass(uzmanlik) w-100"
                                                    style="padding: 12px 4px; font-size: 0.7rem; cursor: pointer;"
                                                    @onclick="() => ToggleUzmanlik(personel.TcKimlikNo, altIslem.KanalAltIslemId)"
                                                    disabled="@isLoading">
                                                @GetUzmanlikText(uzmanlik)
                                            </button>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bx bx-building" style="font-size: 4rem; color: #ddd;"></i>
                <h5 class="mt-3 text-muted">Lütfen bir hizmet binası seçin</h5>
                <p class="text-muted">Personel atamalarını görmek için yukarıdan bir hizmet binası seçmelisiniz.</p>
            </div>
        </div>
    }
</div>
