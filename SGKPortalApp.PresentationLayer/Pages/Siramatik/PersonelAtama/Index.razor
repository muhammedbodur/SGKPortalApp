@* CUSTOM CSS STYLES (Blazor Component CSS) *@
@* ═══════════════════════════════════════════════════════════════════════════════ *@

<style>
    /* MATRIX TABLE OPTİMİZASYONU */
    .table-responsive {
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
    }

    /* STICKY HEADER */
    thead th {
        position: sticky;
        top: 0;
        z-index: 20;
    }

    /* STICKY PERSONEL COLUMN */
    td:first-child {
        background-color: #f8f9fa;
        font-weight: 500;
    }

    /* HÜCRE BUTTON STİLİ */
    .btn-block {
        display: inline-block;
        width: 100%;
        text-align: center;
        border-radius: 4px;
        transition: all 0.3s ease;
        word-break: break-word;
        white-space: normal;
    }

        .btn-block:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
        }

        .btn-block:disabled {
            opacity: 0.7;
            cursor: not-allowed;
        }

    /* LOADING ANIMATION */
    .spinner-border-sm {
        animation: spin 0.8s linear infinite;
    }

    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }
        100% {
            transform: rotate(360deg);
        }
    }

    /* RENK KODLARI */
    .btn-success {
        background-color: #71dd5a;
        border-color: #71dd5a;
    }

    .btn-info {
        background-color: #03c3ec;
        border-color: #03c3ec;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    /* AVATAR */
    .avatar {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 32px;
        height: 32px;
        border-radius: 50%;
        overflow: hidden;
    }

    .avatar-sm {
        width: 32px;
        height: 32px;
        font-size: 0.75rem;
    }

    .avatar-initial {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        height: 100%;
    }

    /* RESPONSIVE - SMALL SCREENS */
    @@media (max-width: 768px) {
        .table {
            font-size: 0.85rem;
        }

        td {
            padding: 0.5rem !important;
        }

        .btn-block {
            min-height: 50px;
            font-size: 0.75rem;
        }

        .avatar-sm {
            width: 24px;
            height: 24px;
            font-size: 0.65rem;
        }
    }
</style>
