@page "/siramatik/kiosk-menu-islem/eslestirme"
@using SGKPortalApp.BusinessObjectLayer.DTOs.Response.SiramatikIslemleri
@using SGKPortalApp.BusinessObjectLayer.Enums.Common
@inherits SGKPortalApp.PresentationLayer.Components.Base.FieldPermissionPageBase
@attribute [Authorize]
@inject IJSRuntime JS

<PageTitle>Menü - İşlem Eşleştirme - SGK Portal</PageTitle>

@if (!CanViewPage)
{
    <div class="alert alert-danger" role="alert">
        <i class="bx bx-lock-alt me-2"></i>
        Bu sayfayı görüntüleme yetkiniz bulunmuyor.
    </div>
}
else
{
    <FieldPermissionScope PageKey="@ResolvedPermissionKey" IsEditMode="true">
        <div class="container-xxl flex-grow-1 container-p-y">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb breadcrumb-style1">
                    <li class="breadcrumb-item">
                        <a href="/">
                            <i class="bx bx-home-alt me-1"></i>Ana Sayfa
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="/siramatik/kiosk-menu-islem">
                            Menü İşlemleri
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        İşlem Eşleştirme
                    </li>
                </ol>
            </nav>

            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h4 class="fw-bold mb-1">
                        <i class="bx bx-link me-2"></i>Menü - İşlem Eşleştirme
                    </h4>
                    <p class="text-muted mb-0">Kiosk menülerine alt kanal işlemleri atayın</p>
                </div>
                <button class="btn btn-outline-secondary" @onclick="NavigateBack">
                    <i class="bx bx-arrow-back me-1"></i>Geri Dön
                </button>
            </div>

            @if (isLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Yükleniyor...</span>
                    </div>
                    <p class="mt-3 text-muted">Veriler yükleniyor...</p>
                </div>
            }
            else
            {
                <div class="row">
                    <!-- Sol Panel - Menü Seçimi -->
                    <div class="col-lg-4 mb-4">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">
                                    <i class="bx bx-list-ul me-2"></i>Menü Seçimi
                                </h5>
                            </div>
                            <div class="card-body">
                                <!-- Menü Listesi -->
                                @if (!kioskMenuleri.Any())
                                {
                                    <div class="alert alert-info">
                                        <i class="bx bx-info-circle me-1"></i>
                                        Henüz menü bulunmuyor
                                    </div>
                                }
                                else
                                {
                                    <div class="list-group">
                                        @foreach (var menu in kioskMenuleri)
                                        {
                                            <button type="button"
                                                    class="list-group-item list-group-item-action @(selectedKioskMenuId == menu.KioskMenuId ? "active" : "")"
                                                    @onclick="() => SelectMenu(menu.KioskMenuId)">
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <div>
                                                        <i class="bx bx-list-ul me-1"></i>
                                                        <strong>@menu.MenuAdi</strong>
                                                        <br />
                                                        <small>Sıra: @menu.MenuSira</small>
                                                    </div>
                                                    <span class="badge bg-label-primary">
                                                        @(menuIslemCounts.ContainsKey(menu.KioskMenuId) ? menuIslemCounts[menu.KioskMenuId] : 0) İşlem
                                                    </span>
                                                </div>
                                            </button>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Sağ Panel - İşlem Eşleştirme -->
                    <div class="col-lg-8">
                        @if (selectedKioskMenuId == 0)
                        {
                            <div class="card">
                                <div class="card-body text-center py-5">
                                    <i class="bx bx-list-ul" style="font-size: 4rem; color: #ddd;"></i>
                                    <h5 class="mt-3 text-muted">Menü Seçiniz</h5>
                                    <p class="text-muted">İşlem eşleştirmek için önce bir menü seçin</p>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="row">
                                <!-- Eşleştirilmiş İşlemler -->
                                <div class="col-md-6 mb-4">
                                    <div class="card h-100">
                                        <div class="card-header bg-success text-white">
                                            <h6 class="mb-0">
                                                <i class="bx bx-check-circle me-1"></i>
                                                Eklenmiş İşlemler (@assignedIslemler.Count)
                                            </h6>
                                        </div>
                                        <div class="card-body" style="max-height: 600px; overflow-y: auto;">
                                            @if (isLoadingIslemler)
                                            {
                                                <div class="text-center py-4">
                                                    <div class="spinner-border spinner-border-sm text-primary"></div>
                                                    <p class="mt-2 text-muted small">Yükleniyor...</p>
                                                </div>
                                            }
                                            else if (!assignedIslemler.Any())
                                            {
                                                <div class="text-center py-4">
                                                    <i class="bx bx-info-circle" style="font-size: 2rem; color: #ddd;"></i>
                                                    <p class="mt-2 text-muted small">Henüz işlem eklenmemiş</p>
                                                </div>
                                            }
                                            else
                                            {
                                                <!-- Arama Kutusu -->
                                                <div class="mb-3">
                                                    <input type="text"
                                                           class="form-control form-control-sm"
                                                           placeholder="İşlem ara..."
                                                           @bind="searchAssigned"
                                                           @bind:event="oninput" />
                                                </div>

                                                @if (!GetFilteredAssignedIslemler().Any())
                                                {
                                                    <div class="text-center py-4">
                                                        <i class="bx bx-search" style="font-size: 2rem; color: #ddd;"></i>
                                                        <p class="mt-2 text-muted small">Sonuç bulunamadı</p>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="list-group">
                                                        @foreach (var islem in GetFilteredAssignedIslemler())
                                                        {
                                                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                                                <div class="flex-grow-1">
                                                                    <strong>@islem.KanalAltAdi</strong>
                                                                    <br />
                                                                    <small class="text-muted">Sıra: @islem.MenuSira</small>
                                                                </div>
                                                                <button class="btn btn-sm btn-outline-danger"
                                                                        @onclick="() => RemoveIslem(islem.KioskMenuIslemId)"
                                                                        disabled="@isSaving">
                                                                    <i class="bx bx-x"></i>
                                                                </button>
                                                            </div>
                                                        }
                                                    </div>
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>

                                <!-- Eşleştirilmemiş İşlemler -->
                                <div class="col-md-6 mb-4">
                                    <div class="card h-100">
                                        <div class="card-header bg-secondary text-white">
                                            <h6 class="mb-0">
                                                <i class="bx bx-x-circle me-1"></i>
                                                Eklenmemiş İşlemler (@unassignedIslemler.Count)
                                            </h6>
                                        </div>
                                        <div class="card-body" style="max-height: 600px; overflow-y: auto;">
                                            @if (isLoadingIslemler)
                                            {
                                                <div class="text-center py-4">
                                                    <div class="spinner-border spinner-border-sm text-primary"></div>
                                                    <p class="mt-2 text-muted small">Yükleniyor...</p>
                                                </div>
                                            }
                                            else if (!unassignedIslemler.Any())
                                            {
                                                <div class="text-center py-4">
                                                    <i class="bx bx-check-circle" style="font-size: 2rem; color: #28c76f;"></i>
                                                    <p class="mt-2 text-muted small">Tüm işlemler eklenmiş</p>
                                                </div>
                                            }
                                            else
                                            {
                                                <!-- Arama Kutusu -->
                                                <div class="mb-3">
                                                    <input type="text"
                                                           class="form-control form-control-sm"
                                                           placeholder="İşlem veya kanal ara..."
                                                           @bind="searchUnassigned"
                                                           @bind:event="oninput" />
                                                </div>

                                                @if (!GetFilteredUnassignedIslemler().Any())
                                                {
                                                    <div class="text-center py-4">
                                                        <i class="bx bx-search" style="font-size: 2rem; color: #ddd;"></i>
                                                        <p class="mt-2 text-muted small">Sonuç bulunamadı</p>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="list-group">
                                                        @foreach (var kanalAlt in GetFilteredUnassignedIslemler())
                                                        {
                                                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                                                <div class="flex-grow-1">
                                                                    <strong>@kanalAlt.KanalAltAdi</strong>
                                                                    <br />
                                                                    <small class="text-muted">@kanalAlt.KanalAdi</small>
                                                                </div>
                                                                <button class="btn btn-sm btn-outline-success"
                                                                        @onclick="() => AddIslem(kanalAlt.KanalAltIslemId)"
                                                                        disabled="@isSaving">
                                                                    <i class="bx bx-plus"></i>
                                                                </button>
                                                            </div>
                                                        }
                                                    </div>
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Bilgi Kutusu -->
                            <div class="alert alert-info">
                                <i class="bx bx-info-circle me-1"></i>
                                <strong>İpucu:</strong> <i class="bx bx-plus"></i>/<i class="bx bx-x"></i> butonlarını kullanarak işlem eşleştirebilirsiniz.
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </FieldPermissionScope>
}
