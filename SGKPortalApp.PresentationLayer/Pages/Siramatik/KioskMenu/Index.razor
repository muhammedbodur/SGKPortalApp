@page "/siramatik/kiosk-menu"
@inherits SGKPortalApp.PresentationLayer.Components.Base.FieldPermissionPageBase
@using SGKPortalApp.BusinessObjectLayer.DTOs.Response.SiramatikIslemleri
@using SGKPortalApp.BusinessObjectLayer.Enums.Common
@attribute [Authorize]

<PageTitle>Kiosk Menüleri - SGK Portal</PageTitle>


@if (!CanViewPage)
{
    <div class="alert alert-danger" role="alert">
        <i class="bx bx-lock-alt me-2"></i>
        Bu sayfayı görüntüleme yetkiniz bulunmuyor.
    </div>
}
else
{
    <FieldPermissionScope PageKey="@ResolvedPermissionKey" IsEditMode="true">
        <div class="container-xxl flex-grow-1 container-p-y">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h4 class="fw-bold mb-1">
                        <i class="bx bx-grid-alt me-2"></i>Kiosk Menüleri
                    </h4>
                    <p class="text-muted mb-0">Kioskların kullanacağı menü şablonlarını yönetin</p>
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-outline-secondary" @onclick="RefreshAsync" disabled="@isLoading">
                        <i class="bx bx-refresh"></i>
                    </button>
                    <a href="/siramatik/kiosk-menu/manage" class="btn btn-primary">
                        <i class="bx bx-plus me-1"></i>Yeni Menü
                    </a>
                </div>
            </div>

            <!-- Filters -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Ara</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bx bx-search"></i></span>
                                <input type="text" class="form-control" placeholder="Menü adı / açıklama"
                                       @bind="searchText" @bind:event="oninput" @onkeyup="OnSearchChanged" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Durum</label>
                            <select class="form-select" @onchange="OnAktiflikChanged">
                                <option value="">Tümü</option>
                                <option value="@((int)Aktiflik.Aktif)">Aktif</option>
                                <option value="@((int)Aktiflik.Pasif)">Pasif</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Sıralama</label>
                            <select class="form-select" @onchange="OnSortChanged">
                                <option value="name-asc">İsim (A-Z)</option>
                                <option value="name-desc">İsim (Z-A)</option>
                                <option value="date-desc">En Yeni</option>
                                <option value="date-asc">En Eski</option>
                            </select>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col">
                            <div class="d-flex gap-4 text-muted small flex-wrap">
                                <span><i class="bx bx-list-ul text-primary"></i> Toplam: <strong>@allMenuler.Count</strong></span>
                                <span><i class="bx bx-check-circle text-success"></i> Aktif: <strong>@allMenuler.Count(m => m.Aktiflik == Aktiflik.Aktif)</strong></span>
                                <span><i class="bx bx-x-circle text-danger"></i> Pasif: <strong>@allMenuler.Count(m => m.Aktiflik == Aktiflik.Pasif)</strong></span>
                                <span><i class="bx bx-filter-alt text-warning"></i> Filtrelenen: <strong>@filteredMenuler.Count</strong></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @if (isLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Yükleniyor...</span>
                    </div>
                    <p class="mt-3 text-muted">Menüler yükleniyor...</p>
                </div>
            }
            else if (!filteredMenuler.Any())
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="bx bx-grid-alt" style="font-size: 4rem; color: #ddd;"></i>
                        <h5 class="mt-3 text-muted">Kayıt bulunamadı</h5>
                        <p class="text-muted">@(!string.IsNullOrEmpty(searchText) || selectedAktiflik.HasValue ? "Arama kriterlerine uygun menü bulunamadı." : "Henüz menü tanımlanmamış.")</p>
                        <a href="/siramatik/kiosk-menu/manage" class="btn btn-primary">
                            <i class="bx bx-plus me-1"></i>İlk Menüyü Ekle
                        </a>
                    </div>
                </div>
            }
            else
            {
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                    @foreach (var menu in filteredMenuler)
                    {
                        <div class="col">
                            <div class="card h-100 @(menu.Aktiflik == Aktiflik.Pasif ? "border-warning" : "")">
                                <div class="card-body d-flex flex-column">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <div>
                                            <span class="badge @(menu.Aktiflik == Aktiflik.Aktif ? "bg-label-success" : "bg-label-danger")">
                                                @(menu.Aktiflik == Aktiflik.Aktif ? "Aktif" : "Pasif")
                                            </span>
                                        </div>
                                        <div class="dropdown">
                                            <button class="btn btn-sm btn-icon" type="button" data-bs-toggle="dropdown">
                                                <i class="bx bx-dots-vertical-rounded"></i>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end">
                                                <li>
                                                    <a class="dropdown-item" href="/siramatik/kiosk-menu/manage/@menu.KioskMenuId">
                                                        <i class="bx bx-edit me-2"></i>Düzenle
                                                    </a>
                                                </li>
                                                <li>
                                                    <button class="dropdown-item" @onclick="() => ToggleAktiflik(menu)">
                                                        <i class="bx @(menu.Aktiflik == Aktiflik.Aktif ? "bx-x" : "bx-check") me-2"></i>
                                                        @(menu.Aktiflik == Aktiflik.Aktif ? "Pasif Yap" : "Aktif Yap")
                                                    </button>
                                                </li>
                                                <li><hr class="dropdown-divider" /></li>
                                                <li>
                                                    <button class="dropdown-item text-danger" @onclick="() => ShowDeleteConfirm(menu)">
                                                        <i class="bx bx-trash me-2"></i>Sil
                                                    </button>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>

                                    <h5 class="card-title">
                                        <i class="bx bx-grid-alt me-2"></i>@menu.MenuAdi
                                    </h5>
                                    <p class="text-muted small flex-grow-1">
                                        @(string.IsNullOrWhiteSpace(menu.Aciklama) ? "Açıklama belirtilmemiş" : menu.Aciklama)
                                    </p>
                                    <div class="border-top pt-3">
                                        <small class="text-muted">Atanmış Kiosk Sayısı</small>
                                        <h6 class="mb-0">@menu.Kiosklar?.Count ?? 0</h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </FieldPermissionScope>
}


@if (showDeleteModal && selectedMenu != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bx bx-trash text-danger me-2"></i>Menü Sil
                    </h5>
                    <button type="button" class="btn-close" @onclick="HideDeleteConfirm"></button>
                </div>
                <div class="modal-body">
                    <p><strong>@selectedMenu.MenuAdi</strong> menüsü silinecek. Devam etmek istiyor musunuz?</p>
                    @if ((selectedMenu.Kiosklar?.Count ?? 0) > 0)
                    {
                        <div class="alert alert-warning mb-0">
                            <i class="bx bx-error me-2"></i>Bu menüye bağlı <strong>@selectedMenu.Kiosklar!.Count</strong> kiosk bulunmaktadır.
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="HideDeleteConfirm" disabled="@isDeleting">İptal</button>
                    <button class="btn btn-danger" @onclick="DeleteMenuAsync" disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        Sil
                    </button>
                </div>
            </div>
        </div>
    </div>
}
