@page "/siramatik/tv/manage"
@page "/siramatik/tv/manage/{TvId:int}"
@inherits SGKPortalApp.PresentationLayer.Components.Base.FieldPermissionPageBase
@using SGKPortalApp.BusinessObjectLayer.Enums.Common
@using SGKPortalApp.BusinessObjectLayer.Enums.SiramatikIslemleri
@attribute [Authorize]

<PageTitle>@(IsEditMode ? "TV Düzenle" : "Yeni TV") - SGK Portal</PageTitle>

<div class="container-xxl flex-grow-1 container-p-y">
    @if (!CanViewPage)
    {
        <div class="alert alert-danger" role="alert">
            <i class="bx bx-lock-alt me-2"></i>
            Bu sayfayı görüntüleme yetkiniz bulunmuyor.
        </div>
    }
    else
    {
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb breadcrumb-style1">
                <li class="breadcrumb-item">
                    <a href="/">
                        <i class="bx bx-home-alt me-1"></i>Ana Sayfa
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a href="/siramatik/tv">
                        TV Yönetimi
                    </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    @(IsEditMode ? "Düzenle" : "Yeni TV")
                </li>
            </ol>
        </nav>

        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h4 class="fw-bold mb-1">
                    <i class="bx @(IsEditMode ? "bx-edit" : "bx-plus-circle") me-2"></i>
                    @(IsEditMode ? "TV Düzenle" : "Yeni TV Ekle")
                </h4>
                <p class="text-muted mb-0">
                    @(IsEditMode ? "TV bilgilerini güncelleyin" : "Sıramatik sistemi için yeni bir TV ekranı ekleyin")
                </p>
            </div>

            <button class="btn btn-outline-secondary" @onclick="NavigateBack" disabled="@isSaving">
                <i class="bx bx-arrow-back me-1"></i>Geri Dön
            </button>
        </div>

        @if (isLoading)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Yükleniyor...</span>
                </div>
                <p class="mt-3 text-muted">Veriler yükleniyor...</p>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-lg-8 col-xl-6 mx-auto">
                    <div class="card">
                        <div class="card-header d-flex align-items-center justify-content-between">
                            <h5 class="mb-0">
                                <i class="bx bx-info-circle me-2"></i>TV Bilgileri
                            </h5>
                            @if (IsEditMode)
                            {
                                <span class="badge bg-label-info">ID: @TvId</span>
                            }
                        </div>
                        <div class="card-body">
                            <EditForm Model="@model" OnValidSubmit="HandleSubmit">
                                <DataAnnotationsValidator />
                                <ValidationSummary />

                                <!-- TV Adı -->
                                <div class="mb-3">
                                    <label class="form-label required">
                                        <i class="bx bx-tv me-1"></i>TV Adı
                                    </label>
                                    <InputText @bind-Value="model.TvAdi" class="form-control" maxlength="100" disabled="@isSaving" />
                                    <ValidationMessage For="@(() => model.TvAdi)" class="text-danger small mt-1" />
                                    <div class="form-text">@model.TvAdi.Length / 100 karakter</div>
                                </div>

                                <!-- Hizmet Binası -->
                                <div class="mb-3">
                                    <label class="form-label required">
                                        <i class="bx bx-buildings me-1"></i>Hizmet Binası
                                    </label>
                                    <InputSelect @bind-Value="model.HizmetBinasiId" class="form-select" disabled="@isSaving">
                                        <option value="0">-- Hizmet Binası Seçiniz --</option>
                                        @foreach (var bina in hizmetBinalari)
                                        {
                                            <option value="@bina.HizmetBinasiId">@bina.HizmetBinasiAdi</option>
                                        }
                                    </InputSelect>
                                    <ValidationMessage For="@(() => model.HizmetBinasiId)" class="text-danger small mt-1" />
                                </div>

                                <!-- Kat Tipi -->
                                <div class="mb-3">
                                    <label class="form-label required">
                                        <i class="bx bx-layer me-1"></i>Kat Tipi
                                    </label>
                                    <InputSelect @bind-Value="model.KatTipi" class="form-select" disabled="@isSaving">
                                        @foreach (KatTipi katTipi in Enum.GetValues(typeof(KatTipi)))
                                        {
                                            <option value="@katTipi">@katTipi</option>
                                        }
                                    </InputSelect>
                                    <ValidationMessage For="@(() => model.KatTipi)" class="text-danger small mt-1" />
                                </div>

                                <!-- Açıklama -->
                                <div class="mb-3">
                                    <label class="form-label">
                                        <i class="bx bx-note me-1"></i>Açıklama / Duyuru Metni (Opsiyonel)
                                    </label>
                                    <InputTextArea @bind-Value="model.TvAciklama"
                                                   class="form-control" rows="3" maxlength="500" disabled="@isSaving"
                                                   placeholder="TV ekranında gösterilecek duyuru metni..." />
                                    <ValidationMessage For="@(() => model.TvAciklama)" class="text-danger small mt-1" />
                                    <div class="form-text">@((model.TvAciklama?.Length ?? 0)) / 500 karakter</div>
                                </div>

                                <!-- Aktiflik -->
                                <div class="mb-4">
                                    <label class="form-label fw-bold">Durum</label>
                                    <div class="form-check form-switch">
                                        <InputCheckbox @bind-Value="isAktif" class="form-check-input" id="aktiflikSwitch" disabled="@isSaving" />
                                        <label class="form-check-label" for="aktiflikSwitch">
                                            @(isAktif ? "Aktif" : "Pasif")
                                        </label>
                                    </div>
                                    <div class="form-text">
                                        @if (isAktif)
                                        {
                                            <i class="bx bx-check-circle text-success"></i>
                                            <span>TV aktif olarak çalışacak</span>
                                        }
                                        else
                                        {
                                            <i class="bx bx-x-circle text-danger"></i>
                                            <span>TV pasif durumda olacak</span>
                                        }
                                    </div>
                                </div>

                                <!-- Buttons -->
                                <div class="d-flex gap-2 justify-content-end">
                                    <button type="button" class="btn btn-outline-secondary" @onclick="NavigateBack" disabled="@isSaving">
                                        <i class="bx bx-x me-1"></i>İptal
                                    </button>
                                    <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                        @if (isSaving)
                                        {
                                            <span class="spinner-border spinner-border-sm me-1"></span>
                                            <span>Kaydediliyor...</span>
                                        }
                                        else
                                        {
                                            <i class="bx bx-save me-1"></i>
                                            <span>@(IsEditMode ? "Güncelle" : "Kaydet")</span>
                                        }
                                    </button>
                                </div>
                            </EditForm>
                        </div>
                    </div>

                    @if (IsEditMode)
                    {
                        <!-- Ek Bilgiler Card -->
                        <div class="card mt-4">
                            <div class="card-header">
                                <h5 class="mb-0">
                                    <i class="bx bx-info-circle me-2"></i>Ek Bilgiler
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <small class="text-muted d-block">Eklenme Tarihi</small>
                                        <strong>@eklenmeTarihi.ToString("dd.MM.yyyy HH:mm")</strong>
                                    </div>
                                    @if (duzenlenmeTarihi.HasValue)
                                    {
                                        <div class="col-md-6 mb-3">
                                            <small class="text-muted d-block">Son Düzenleme</small>
                                            <strong>@duzenlenmeTarihi.Value.ToString("dd.MM.yyyy HH:mm")</strong>
                                        </div>
                                    }
                                </div>
                                <div class="d-flex gap-2 mt-3">
                                    <a href="/siramatik/tv/display/@TvId" target="_blank" class="btn btn-sm btn-outline-primary">
                                        <i class="bx bx-show me-1"></i>TV Görünümünü Aç
                                    </a>
                                    <a href="/siramatik/tv/banko-eslestirme?tvId=@TvId" class="btn btn-sm btn-outline-secondary">
                                        <i class="bx bx-link me-1"></i>Banko Eşleştir
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    }
</div>
