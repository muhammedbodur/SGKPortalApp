@page "/siramatik/tv/display/{tvId:int}"
@using SGKPortalApp.BusinessObjectLayer.DTOs.Response.SiramatikIslemleri
@using SGKPortalApp.BusinessObjectLayer.Enums.Common
@layout TvLayout

<HeadContent>
    <title>SGK Portal TV - @TvId</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            margin: 0;
            padding: 0;
            overflow: hidden;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            height: 100vh;
            width: 100vw;
        }

        .tv-container {
            height: 100vh;
            width: 100vw;
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }

        .tv-header {
            background: rgba(255, 255, 255, 0.95);
            padding: 1.5vh 2vw;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            flex-shrink: 0;
        }

        .tv-logo {
            height: 6vh;
            max-height: 80px;
            width: auto;
        }

        .tv-title {
            font-size: clamp(1.5rem, 3vh, 3rem);
            font-weight: bold;
            color: #2c3e50;
            margin: 0;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .tv-subtitle {
            font-size: clamp(0.8rem, 1.5vh, 1.2rem);
            color: #7f8c8d;
            margin: 0;
        }

        .tv-content {
            flex: 1;
            display: flex;
            gap: 1.5vw;
            padding: 1.5vh 1.5vw;
            overflow: hidden;
            min-height: 0;
        }

        .sira-panel {
            flex: 1;
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            padding: 2vh 1.5vw;
            overflow: hidden;
            box-shadow: 0 8px 32px rgba(0,0,0,0.1);
            display: flex;
            flex-direction: column;
            min-height: 0;
        }

        #siraListe {
            display: flex;
            flex-direction: column;
            gap: 1vh;
            flex: 1;
            justify-content: space-evenly;
            overflow: hidden;
            min-height: 0;
        }

        .banko-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 15px;
            padding: 1.5vh 1.5vw;
            display: flex;
            align-items: center;
            box-shadow: 0 8px 16px rgba(0,0,0,0.2);
            transition: all 0.3s ease;
            flex: 1;
            min-height: 0;
            max-height: 100%;
        }

            .banko-card.new-sira {
                animation: pulse 1s ease-in-out, glow 2s ease-in-out;
            }

        @@keyframes pulse {
            0%, 100% {
                transform: scale(1);
            }
            50% {
                transform: scale(1.05);
            }
        }

        @@keyframes glow {
            0%, 100% {
                box-shadow: 0 8px 16px rgba(0,0,0,0.2);
            }
            50% {
                box-shadow: 0 8px 32px rgba(255,215,0,0.6);
            }
        }

        /* Kart kaldırma animasyonu */
        .banko-card.removing {
            animation: slideOut 0.3s ease-out forwards;
        }

        @@keyframes slideOut {
            0% {
                opacity: 1;
                transform: translateX(0);
            }
            100% {
                opacity: 0;
                transform: translateX(100%);
            }
        }

        .banko-info {
            flex: 1;
            text-align: center;
            border-right: 2px solid rgba(255,255,255,0.3);
            padding-right: 1vw;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .banko-label {
            font-size: clamp(0.8rem, 1.5vh, 1.2rem);
            font-weight: bold;
            opacity: 0.9;
            margin-bottom: 0.5vh;
        }

        .banko-no {
            font-size: clamp(2rem, 5vh, 4rem);
            font-weight: bold;
            line-height: 1;
        }

        .banko-kat {
            font-size: clamp(0.7rem, 1.2vh, 1rem);
            font-weight: bold;
            opacity: 0.8;
            margin-top: 0.5vh;
        }

        .sira-info {
            flex: 1;
            text-align: center;
            padding-left: 1vw;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .sira-label {
            font-size: clamp(0.8rem, 1.5vh, 1.2rem);
            opacity: 0.9;
            margin-bottom: 0.5vh;
        }

        .sira-no {
            font-size: clamp(2.5rem, 6vh, 6rem);
            font-weight: bold;
            line-height: 1;
        }

        .duyuru-panel {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: 1.5vh;
            overflow: hidden;
            min-height: 0;
        }

        .duyuru-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            padding: 2vh 1.5vw;
            flex: 1;
            box-shadow: 0 8px 32px rgba(0,0,0,0.1);
            display: flex;
            flex-direction: column;
            overflow: hidden;
            min-height: 0;
        }

        .duyuru-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 1.5vh 1.5vw;
            border-radius: 10px;
            margin-bottom: 1.5vh;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-shrink: 0;
        }

        .duyuru-title {
            font-size: clamp(1.2rem, 2.5vh, 1.8rem);
            font-weight: bold;
            margin: 0;
        }

        .hizmet-binasi {
            font-size: clamp(0.8rem, 1.5vh, 1.2rem);
            opacity: 0.9;
        }

        .marquee-container {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 1.5vh 1vw;
            margin-bottom: 1.5vh;
            height: 8vh;
            min-height: 50px;
            max-height: 80px;
            display: flex;
            align-items: center;
            overflow: hidden;
            flex-shrink: 0;
        }

        .marquee-text {
            font-size: clamp(1rem, 2.5vh, 2rem);
            font-weight: bold;
            color: #2c3e50;
            white-space: nowrap;
        }

        .video-container {
            border-radius: 15px;
            overflow: hidden;
            flex: 1;
            background: #000;
            min-height: 0;
            position: relative;
        }

            .video-container video {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .clock-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            padding: 2vh 1.5vw;
            text-align: center;
            box-shadow: 0 8px 32px rgba(0,0,0,0.1);
            flex-shrink: 0;
            min-height: 120px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .clock-time {
            font-size: clamp(2rem, 5vh, 4rem);
            font-weight: bold;
            color: #667eea;
            margin-bottom: 0.5vh;
        }

        .clock-date {
            font-size: clamp(1rem, 2.5vh, 2rem);
            color: #764ba2;
            font-weight: 600;
        }

        .empty-state {
            text-align: center;
            padding: 5vh 2vw;
            color: #7f8c8d;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100%;
        }

            .empty-state i {
                font-size: clamp(3rem, 8vh, 5rem);
                margin-bottom: 2vh;
                opacity: 0.3;
            }

            .empty-state p {
                font-size: clamp(1rem, 2.5vh, 1.5rem);
            }

        /* Resolution Specific Optimizations */

        /* 720p (1280x720) - Küçük TV'ler için */
        @@media (max-height: 720px) {
            .tv-header {
                padding: 1vh 2vw;
            }
            .tv-logo {
                height: 5vh;
            }
            .banko-card {
                padding: 1vh 1vw;
            }
            #siraListe {
                gap: 0.8vh;
            }
            .clock-card {
                min-height: 90px;
                padding: 1.5vh 1.5vw;
            }
        }

        /* 768p (1366x768) - Orta boyut */
        @@media (min-height: 721px) and (max-height: 900px) {
            .tv-header {
                padding: 1.2vh 2vw;
            }
            .tv-logo {
                height: 6vh;
            }
            .clock-card {
                min-height: 100px;
            }
        }

        /* 1080p (1920x1080) - Büyük TV'ler için */
        @@media (min-height: 901px) {
            .tv-header {
                padding: 1.5vh 2vw;
            }
            .tv-logo {
                height: 7vh;
            }
            .clock-card {
                min-height: 140px;
            }
        }

        /* Dinamik sıra sayısı kontrolü */
        @@media (max-height: 720px) {
            #siraListe .banko-card:nth-child(n+5) {
                display: none;
            }
        }

        @@media (min-height: 721px) and (max-height: 900px) {
            #siraListe .banko-card:nth-child(n+6) {
                display: none;
            }
        }

        @@media (min-height: 901px) {
            #siraListe .banko-card:nth-child(n+8) {
                display: none;
            }
        }

        /* Landscape Orientation */
        @@media (orientation: landscape) {
            .tv-content {
                flex-direction: row;
            }
        }

        /* Portrait Orientation */
        @@media (orientation: portrait) {
            .tv-content {
                flex-direction: column;
            }
            .sira-panel {
                max-height: 55vh;
            }
            .duyuru-panel {
                max-height: 40vh;
            }
        }

        /* Tam ekran modda header/footer gizleme */
        .fullscreen .tv-header {
            padding: 1vh 1.5vw;
        }

        /* ═══════════════════════════════════════════════════════ */
        /* SIRA ÇAĞRILDI OVERLAY POPUP */
        /* ═══════════════════════════════════════════════════════ */
        #siraCalledOverlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.98) 0%, rgba(118, 75, 162, 0.98) 100%);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 9999;
            animation: fadeIn 0.3s ease-out;
        }

        #siraCalledOverlay.fade-out {
            animation: fadeOut 0.5s ease-out forwards;
        }

        .sira-called-content {
            text-align: center;
            color: white;
            animation: scaleIn 0.4s ease-out;
        }

        .sira-called-icon {
            font-size: clamp(4rem, 10vh, 8rem);
            margin-bottom: 2vh;
        }

        .sira-called-icon i {
            color: #FFD700;
            filter: drop-shadow(0 0 20px rgba(255, 215, 0, 0.5));
        }

        .sira-called-title {
            font-size: clamp(2rem, 5vh, 4rem);
            font-weight: bold;
            letter-spacing: 0.3em;
            margin-bottom: 3vh;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }

        .sira-called-number {
            font-size: clamp(6rem, 20vh, 15rem);
            font-weight: 900;
            line-height: 1;
            margin-bottom: 3vh;
            text-shadow: 4px 4px 8px rgba(0,0,0,0.3);
            animation: pulse 1s ease-in-out infinite;
        }

        .sira-called-banko {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 2vw;
            margin-bottom: 2vh;
        }

        .sira-called-banko .banko-label {
            font-size: clamp(1.5rem, 4vh, 3rem);
            font-weight: 600;
            opacity: 0.9;
        }

        .sira-called-banko .banko-number {
            font-size: clamp(4rem, 12vh, 10rem);
            font-weight: 900;
            background: rgba(255,255,255,0.2);
            padding: 1vh 3vw;
            border-radius: 20px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }

        .sira-called-kat {
            font-size: clamp(1.2rem, 3vh, 2rem);
            opacity: 0.8;
            margin-top: 1vh;
        }

        @@keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        @@keyframes fadeOut {
            from { opacity: 1; }
            to { opacity: 0; }
        }

        @@keyframes scaleIn {
            from { transform: scale(0.8); opacity: 0; }
            to { transform: scale(1); opacity: 1; }
        }

        @@keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }
    </style>
</HeadContent>

<div class="tv-container">
        <!-- Header -->
        <div class="tv-header d-flex justify-content-between align-items-center">
            <img src="/Logo/sgk-logo.svg" alt="SGK" class="tv-logo">
            <div class="text-center flex-grow-1">
                <h1 class="tv-title">@hizmetBinasiAdi</h1>
                <p class="tv-subtitle">İzmir Sosyal Güvenlik İl Müdürlüğü</p>
            </div>
            <div class="text-end">
                <small class="text-muted" style="font-size: clamp(0.7rem, 1.2vh, 0.9rem);">TV: @TvId | @katTipi</small>
            </div>
        </div>

        <!-- Content -->
        <div class="tv-content">
            <!-- Sol Panel - Sıralar -->
            <div class="sira-panel">
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="empty-state">
                        <i class="bx bx-error-circle text-danger"></i>
                        <p class="fs-4 text-danger">@errorMessage</p>
                    </div>
                }
                else if (isLoading)
                {
                    <div class="empty-state">
                        <div class="spinner-border text-primary" style="width: 4rem; height: 4rem;" role="status">
                            <span class="visually-hidden">Yükleniyor...</span>
                        </div>
                        <p class="mt-3">Sıralar yükleniyor...</p>
                    </div>
                }
                else if (!siralar.Any())
                {
                    <div class="empty-state">
                        <i class="bx bx-info-circle"></i>
                        <p>Henüz sıra bulunmuyor</p>
                    </div>
                }
                else
                {
                    <div id="siraListe" class="sira-cards-container" data-max-rows="@_maxVisibleRows">
                        @foreach (var sira in siralar)
                        {
                            <div class="banko-card sira-card" id="banko_@sira.BankoId" data-sira="@sira.SiraNo">
                                <div class="banko-info">
                                    <div class="banko-label">@sira.BankoTipi</div>
                                    <div class="banko-no">@sira.BankoNo</div>
                                    <div class="banko-kat">@sira.KatTipi</div>
                                </div>
                                <div class="sira-info">
                                    <div class="sira-label">SIRA NO</div>
                                    <div class="sira-no">@sira.SiraNo</div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>

            <!-- Sağ Panel - Duyuru & Saat -->
            <div class="duyuru-panel">
                <!-- Duyuru -->
                <div class="duyuru-card">
                    <div class="duyuru-header">
                        <h3 class="duyuru-title">DUYURU</h3>
                        <span class="hizmet-binasi">@hizmetBinasiAdi</span>
                    </div>
                    <div class="marquee-container">
                        <marquee behavior="scroll" direction="left" scrollamount="5">
                            <p class="marquee-text" id="duyuruText">@tvAciklama</p>
                        </marquee>
                    </div>
                    <div class="video-container">
                        <video id="tvVideo" autoplay loop muted playsinline>
                            <source src="/Video/video.mp4" type="video/mp4">
                            Tarayıcınız video oynatmayı desteklemiyor.
                        </video>
                    </div>
                </div>

                <!-- Saat -->
                <div class="clock-card">
                    <div class="clock-time" id="saat">00:00:00</div>
                    <div class="clock-date" id="tarih">-</div>
                </div>
            </div>
        </div>
    </div>

<!-- Ding Dong Ses Dosyası -->
<audio id="dingDongSound" preload="auto">
    <source src="/Sounds/dingdong.mp3" type="audio/mpeg">
</audio>

