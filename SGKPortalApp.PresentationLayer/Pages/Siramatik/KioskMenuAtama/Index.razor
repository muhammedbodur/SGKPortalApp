@page "/siramatik/kiosk-menu-atama"
@using SGKPortalApp.BusinessObjectLayer.DTOs.Response.SiramatikIslemleri
@using SGKPortalApp.BusinessObjectLayer.Enums.Common
@attribute [Authorize]

<PageTitle>Kiosk Menü Ataması - SGK Portal</PageTitle>

<div class="container-xxl flex-grow-1 container-p-y">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold mb-1">
                <i class="bx bx-link me-2"></i>Kiosk Menü Ataması
            </h4>
            <p class="text-muted mb-0">
                Kiosk cihazlarına menü atayın ve yönetin
            </p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-secondary" @onclick="RefreshAsync" disabled="@isLoading">
                <i class="bx bx-refresh"></i>
            </button>
            <a href="/siramatik/kiosk-menu-atama/manage" class="btn btn-primary">
                <i class="bx bx-plus me-1"></i>Yeni Atama
            </a>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Hizmet Binası</label>
                    <select class="form-select" value="@selectedHizmetBinasiId" @onchange="OnHizmetBinasiChanged" disabled="@isLoading">
                        <option value="0">Tümü</option>
                        @foreach (var bina in hizmetBinalari)
                        {
                            <option value="@bina.HizmetBinasiId">@bina.HizmetBinasiAdi</option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Kiosk</label>
                    <select class="form-select" value="@selectedKioskId" @onchange="OnKioskChanged" disabled="@isLoading">
                        <option value="0">Tümü</option>
                        @foreach (var kiosk in kiosklar)
                        {
                            <option value="@kiosk.KioskId">@kiosk.KioskAdi</option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Durum</label>
                    <select class="form-select" @onchange="OnAktiflikChanged" disabled="@isLoading">
                        <option value="">Tümü</option>
                        <option value="@((int)Aktiflik.Aktif)">Aktif</option>
                        <option value="@((int)Aktiflik.Pasif)">Pasif</option>
                    </select>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col">
                    <div class="d-flex gap-4 text-muted small flex-wrap">
                        <span><i class="bx bx-list-ul text-primary"></i> Toplam: <strong>@allAtamalar.Count</strong></span>
                        <span><i class="bx bx-check-circle text-success"></i> Aktif: <strong>@allAtamalar.Count(a => a.Aktiflik == Aktiflik.Aktif)</strong></span>
                        <span><i class="bx bx-x-circle text-danger"></i> Pasif: <strong>@allAtamalar.Count(a => a.Aktiflik == Aktiflik.Pasif)</strong></span>
                        <span><i class="bx bx-filter-alt text-warning"></i> Filtrelenen: <strong>@filteredAtamalar.Count</strong></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Yükleniyor...</span>
            </div>
            <p class="text-muted mt-2">Atamalar yükleniyor...</p>
        </div>
    }
    else if (!filteredAtamalar.Any())
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bx bx-folder-open display-1 text-muted mb-3"></i>
                <h5 class="text-muted">Henüz atama yok</h5>
                <p class="text-muted mb-3">Kiosk cihazlarına menü atamak için yeni atama oluşturun</p>
                <a href="/siramatik/kiosk-menu-atama/manage" class="btn btn-primary">
                    <i class="bx bx-plus me-1"></i>İlk Atamayı Oluştur
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var atama in filteredAtamalar.OrderByDescending(a => a.AtamaTarihi))
            {
                <div class="col">
                    <div class="card h-100 @(atama.Aktiflik == Aktiflik.Pasif ? "border-warning" : "")">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <span class="badge @(atama.Aktiflik == Aktiflik.Aktif ? "bg-label-success" : "bg-label-danger")">
                                        @(atama.Aktiflik == Aktiflik.Aktif ? "Aktif" : "Pasif")
                                    </span>
                                </div>
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-icon" type="button" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li>
                                            <a class="dropdown-item" href="/siramatik/kiosk-menu-atama/manage/@atama.KioskMenuAtamaId">
                                                <i class="bx bx-edit me-2"></i>Düzenle
                                            </a>
                                        </li>
                                        <li>
                                            <button class="dropdown-item" @onclick="() => ToggleAktiflik(atama)">
                                                <i class="bx @(atama.Aktiflik == Aktiflik.Aktif ? "bx-x" : "bx-check") me-2"></i>
                                                @(atama.Aktiflik == Aktiflik.Aktif ? "Pasif Yap" : "Aktif Yap")
                                            </button>
                                        </li>
                                        <li><hr class="dropdown-divider" /></li>
                                        <li>
                                            <button class="dropdown-item text-danger" @onclick="() => ShowDeleteConfirm(atama)">
                                                <i class="bx bx-trash me-2"></i>Sil
                                            </button>
                                        </li>
                                    </ul>
                                </div>
                            </div>

                            <h5 class="card-title mb-3">
                                <i class="bx bx-desktop me-2"></i>@atama.KioskMenuAdi
                            </h5>

                            <div class="mb-2">
                                <small class="text-muted d-block">Hizmet Binası</small>
                                <span class="badge bg-label-info">@atama.HizmetBinasiAdi</span>
                            </div>

                            <div class="mb-3">
                                <small class="text-muted d-block">Kiosk Adı</small>
                                <span class="badge bg-label-primary">@atama.KioskAdi</span>
                            </div>

                            <div class="border-top pt-3 mt-auto">
                                <small class="text-muted">Atama Tarihi</small>
                                <div class="fw-semibold">@atama.AtamaTarihi.ToString("dd.MM.yyyy HH:mm")</div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- Delete Confirmation Modal -->
@if (showDeleteModal && selectedAtama != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bx bx-trash me-2"></i>Atamayı Sil
                    </h5>
                    <button type="button" class="btn-close" @onclick="HideDeleteConfirm" disabled="@isDeleting"></button>
                </div>
                <div class="modal-body">
                    <p class="mb-0">
                        <strong>@selectedAtama.KioskAdi</strong> kiosk'unun 
                        <strong>@selectedAtama.KioskMenuAdi</strong> menü atamasını silmek istediğinize emin misiniz?
                    </p>
                    <p class="text-muted mb-0 mt-2">
                        <i class="bx bx-info-circle me-1"></i>Bu işlem geri alınamaz.
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideDeleteConfirm" disabled="@isDeleting">
                        İptal
                    </button>
                    <button type="button" class="btn btn-danger" @onclick="DeleteAtama" disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        else
                        {
                            <i class="bx bx-trash me-1"></i>
                        }
                        Sil
                    </button>
                </div>
            </div>
        </div>
    </div>
}
