@page "/siramatik/alt-kanal"
@using SGKPortalApp.BusinessObjectLayer.DTOs.Response.SiramatikIslemleri
@using SGKPortalApp.BusinessObjectLayer.Enums.Common
@attribute [Authorize]

<PageTitle>Alt Kanal Yönetimi - SGK Portal</PageTitle>

<div class="container-xxl flex-grow-1 container-p-y">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold mb-1">
                <i class="bx bx-category me-2"></i>Alt Kanal Yönetimi
            </h4>
            <p class="text-muted mb-0">
                Sıramatik sisteminde kullanılacak alt kanal tanımlarını yönetin
            </p>
        </div>

        <div class="d-flex gap-2">
            <!-- Excel Export -->
            <button class="btn btn-success" @onclick="ExportToExcel" disabled="@isLoading">
                @if (isLoading)
                {
                    <span class="spinner-border spinner-border-sm me-1"></span>
                }
                else
                {
                    <i class="bx bx-download me-1"></i>
                }
                Excel
            </button>

            <!-- PDF Export -->
            <button class="btn btn-danger" @onclick="ExportToPdf" disabled="@isLoading">
                @if (isLoading)
                {
                    <span class="spinner-border spinner-border-sm me-1"></span>
                }
                else
                {
                    <i class="bx bxs-file-pdf me-1"></i>
                }
                PDF
            </button>

            <!-- Yeni Alt Kanal -->
            <a href="/siramatik/alt-kanal/manage" class="btn btn-primary">
                <i class="bx bx-plus me-1"></i>Yeni Alt Kanal
            </a>
        </div>
    </div>

    <!-- Filtreleme -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row g-3">
                <!-- Arama -->
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bx bx-search"></i></span>
                        <input type="text" class="form-control" placeholder="Alt kanal adı ara..." 
                               @bind="searchText" @bind:event="oninput" @onkeyup="FilterKanalAltlar" />
                    </div>
                </div>

                <!-- Ana Kanal Filtresi -->
                <div class="col-md-3">
                    <select class="form-select" @bind="selectedKanalId" @bind:after="FilterKanalAltlar">
                        <option value="0">Tüm Ana Kanallar</option>
                        @foreach (var kanal in anaKanallar)
                        {
                            <option value="@kanal.KanalId">@kanal.KanalAdi</option>
                        }
                    </select>
                </div>

                <!-- Aktiflik Filtresi -->
                <div class="col-md-2">
                    <select class="form-select" @bind="selectedAktiflik" @bind:after="FilterKanalAltlar">
                        <option value="">Tüm Durumlar</option>
                        <option value="@Aktiflik.Aktif">Aktif</option>
                        <option value="@Aktiflik.Pasif">Pasif</option>
                    </select>
                </div>

                <!-- Sıralama -->
                <div class="col-md-2">
                    <select class="form-select" @bind="sortBy" @bind:after="FilterKanalAltlar">
                        <option value="name-asc">İsim (A-Z)</option>
                        <option value="name-desc">İsim (Z-A)</option>
                        <option value="date-desc">En Yeni</option>
                        <option value="date-asc">En Eski</option>
                    </select>
                </div>

                <!-- Temizle -->
                <div class="col-md-1">
                    <button class="btn btn-outline-secondary w-100" @onclick="ClearFilters">
                        <i class="bx bx-x"></i>
                    </button>
                </div>
            </div>

            <!-- İstatistikler -->
            <div class="row mt-3">
                <div class="col">
                    <div class="d-flex gap-4">
                        <small class="text-muted">
                            <i class="bx bx-list-ul me-1"></i>
                            Toplam: <strong>@allKanalAltlar.Count</strong>
                        </small>
                        <small class="text-muted">
                            <i class="bx bx-check-circle me-1 text-success"></i>
                            Aktif: <strong>@allKanalAltlar.Count(k => k.Aktiflik == Aktiflik.Aktif)</strong>
                        </small>
                        <small class="text-muted">
                            <i class="bx bx-x-circle me-1 text-danger"></i>
                            Pasif: <strong>@allKanalAltlar.Count(k => k.Aktiflik == Aktiflik.Pasif)</strong>
                        </small>
                        <small class="text-muted">
                            <i class="bx bx-filter me-1"></i>
                            Filtrelenen: <strong>@filteredKanalAltlar.Count</strong>
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Alt Kanal Listesi -->
    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Yükleniyor...</span>
            </div>
            <p class="mt-3 text-muted">Alt kanallar yükleniyor...</p>
        </div>
    }
    else if (!filteredKanalAltlar.Any())
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bx bx-category display-1 text-muted mb-3"></i>
                <h5 class="text-muted">Alt Kanal Bulunamadı</h5>
                <p class="text-muted mb-4">
                    @if (string.IsNullOrEmpty(searchText) && selectedAktiflik == null && selectedKanalId == 0)
                    {
                        <span>Henüz hiç alt kanal tanımlanmamış. Yeni bir alt kanal ekleyerek başlayın.</span>
                    }
                    else
                    {
                        <span>Arama kriterlerinize uygun alt kanal bulunamadı.</span>
                    }
                </p>
                <a href="/siramatik/alt-kanal/manage" class="btn btn-primary">
                    <i class="bx bx-plus me-1"></i>İlk Alt Kanalı Ekle
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
            @foreach (var kanalAlt in filteredKanalAltlar)
            {
                <div class="col">
                    <div class="card h-100 @(kanalAlt.Aktiflik == Aktiflik.Pasif ? "border-danger" : "")">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div class="flex-grow-1">
                                    <span class="badge @(kanalAlt.Aktiflik == Aktiflik.Aktif ? "bg-label-success" : "bg-label-danger") mb-2">
                                        @(kanalAlt.Aktiflik == Aktiflik.Aktif ? "Aktif" : "Pasif")
                                    </span>
                                </div>
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-icon" type="button" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li>
                                            <a class="dropdown-item" href="/siramatik/alt-kanal/manage/@kanalAlt.KanalAltId">
                                                <i class="bx bx-edit me-2"></i>
                                                Düzenle
                                            </a>
                                        </li>
                                        <li>
                                            <button class="dropdown-item" @onclick="() => ToggleAktiflik(kanalAlt)">
                                                <i class="bx @(kanalAlt.Aktiflik == Aktiflik.Aktif ? "bx-x" : "bx-check") me-2"></i>
                                                @(kanalAlt.Aktiflik == Aktiflik.Aktif ? "Pasif Yap" : "Aktif Yap")
                                            </button>
                                        </li>
                                        <li><hr class="dropdown-divider" /></li>
                                        <li>
                                            <button class="dropdown-item text-danger" @onclick="() => ShowDeleteConfirm(kanalAlt)">
                                                <i class="bx bx-trash me-2"></i>
                                                Sil
                                            </button>
                                        </li>
                                    </ul>
                                </div>
                            </div>

                            <h5 class="card-title mb-2">
                                <i class="bx bx-category me-2"></i>@kanalAlt.KanalAltAdi
                            </h5>

                            <p class="text-muted small mb-3">
                                <i class="bx bx-sitemap me-1"></i>
                                Ana Kanal: <strong>@kanalAlt.KanalAdi</strong>
                            </p>

                            <div class="border-top pt-3">
                                <div class="row text-center">
                                    <div class="col-12">
                                        <small class="text-muted d-block">Alt İşlem Sayısı</small>
                                        <strong class="text-primary">@kanalAlt.KanalAltIslemSayisi</strong>
                                    </div>
                                </div>
                            </div>

                            <div class="border-top mt-3 pt-3">
                                <small class="text-muted">
                                    <i class="bx bx-time me-1"></i>
                                    @kanalAlt.EklenmeTarihi.ToString("dd.MM.yyyy HH:mm")
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- Delete Confirmation Modal -->
@if (showDeleteModal && selectedKanalAlt != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bx bx-trash text-danger me-2"></i>
                        Alt Kanal Sil
                    </h5>
                    <button type="button" class="btn-close" @onclick="HideDeleteConfirm"></button>
                </div>
                <div class="modal-body">
                    <p class="mb-0">
                        <strong>@selectedKanalAlt.KanalAltAdi</strong> alt kanalını silmek istediğinizden emin misiniz?
                    </p>
                    @if (selectedKanalAlt.KanalAltIslemSayisi > 0)
                    {
                        <div class="alert alert-warning mt-3 mb-0">
                            <i class="bx bx-error me-2"></i>
                            <strong>Dikkat!</strong> Bu alt kanala ait 
                            <strong>@selectedKanalAlt.KanalAltIslemSayisi</strong> alt işlem de silinecektir.
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideDeleteConfirm">İptal</button>
                    <button type="button" class="btn btn-danger" @onclick="DeleteKanalAlt" disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        <span>Sil</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
}
