@page "/siramatik/kanal-alt-islem/manage"
@page "/siramatik/kanal-alt-islem/manage/{KanalAltIslemId:int}"
@using SGKPortalApp.BusinessObjectLayer.DTOs.Request.SiramatikIslemleri
@using SGKPortalApp.BusinessObjectLayer.Enums.Common
@using System.ComponentModel.DataAnnotations
@attribute [Authorize]

<PageTitle>@(IsEditMode ? "Alt İşlem Düzenle" : "Yeni Alt İşlem") - SGK Portal</PageTitle>

<div class="container-xxl flex-grow-1 container-p-y">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb breadcrumb-style1">
            <li class="breadcrumb-item">
                <a href="/">
                    <i class="bx bx-home-alt me-1"></i>Ana Sayfa
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="/siramatik/kanal-alt-islem">
                    Kanal Alt İşlem Yönetimi
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                @(IsEditMode ? "Düzenle" : "Yeni Alt İşlem")
            </li>
        </ol>
    </nav>

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold mb-1">
                <i class="bx @(IsEditMode ? "bx-edit" : "bx-plus-circle") me-2"></i>
                @(IsEditMode ? "Kanal Alt İşlem Düzenle" : "Yeni Kanal Alt İşlem Ekle")
            </h4>
            <p class="text-muted mb-0">
                @(IsEditMode ? "Kanal alt işlem bilgilerini güncelleyin" : "Yeni bir kanal alt işlem oluşturun")
            </p>
        </div>

        <button class="btn btn-outline-secondary" @onclick="NavigateBack">
            <i class="bx bx-arrow-back me-1"></i>Geri Dön
        </button>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Yükleniyor...</span>
            </div>
            <p class="mt-3 text-muted">Veriler yükleniyor...</p>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8 col-xl-6 mx-auto">
                <div class="card">
                    <div class="card-header d-flex align-items-center justify-content-between">
                        <h5 class="mb-0">
                            <i class="bx bx-info-circle me-2"></i>Kanal Alt İşlem Bilgileri
                        </h5>
                        @if (IsEditMode)
                        {
                            <span class="badge bg-label-info">ID: @KanalAltIslemId</span>
                        }
                    </div>

                    <div class="card-body">
                        <EditForm Model="@model" OnValidSubmit="HandleSubmit">
                            <DataAnnotationsValidator />

                            <!-- Kanal İşlem Seçimi -->
                            <div class="mb-3">
                                <label class="form-label required">
                                    <i class="bx bx-list-ul me-1"></i>Kanal İşlem
                                </label>
                                <InputSelect @bind-Value="model.KanalIslemId" 
                                             class="form-select"
                                             disabled="@isSaving">
                                    <option value="0">-- Kanal İşlem Seçin --</option>
                                    @foreach (var kanal in kanalIslemler)
                                    {
                                        <option value="@kanal.KanalIslemId">@kanal.KanalIslemAdi</option>
                                    }
                                </InputSelect>
                                <ValidationMessage For="@(() => model.KanalIslemId)" class="text-danger small mt-1" />
                            </div>

                            <!-- Sıra -->
                            <div class="mb-3">
                                <label class="form-label fw-bold">
                                    Sıra Numarası <span class="text-danger">*</span>
                                </label>
                                <InputNumber @bind-Value="model.Sira" 
                                             class="form-control" 
                                             placeholder="1" />
                                <small class="text-muted">Alt işlemlerin sıralanmasında kullanılır</small>
                                <ValidationMessage For="@(() => model.Sira)" class="text-danger" />
                            </div>

                            <!-- Aktiflik -->
                            <div class="mb-0">
                                <label class="form-label fw-bold">
                                    Durum <span class="text-danger">*</span>
                                </label>
                                <div class="form-check form-switch">
                                    <InputCheckbox @bind-Value="isAktif" class="form-check-input" id="aktiflikSwitch" />
                                    <label class="form-check-label" for="aktiflikSwitch">
                                        @(isAktif ? "Aktif" : "Pasif")
                                    </label>
                                </div>
                                <small class="text-muted">
                                    Pasif alt işlemler sıramatik cihazında görünmez
                                </small>
                            </div>

                            <!-- Action Buttons -->
                            <div class="mt-4 d-flex justify-content-between align-items-center">
                                <button type="button" @onclick="NavigateBack" class="btn btn-secondary" disabled="@isSaving">
                                    <i class="bx bx-x me-1"></i>
                                    İptal
                                </button>
                                <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                    @if (isSaving)
                                    {
                                        <span class="spinner-border spinner-border-sm me-1"></span>
                                        <span>Kaydediliyor...</span>
                                    }
                                    else
                                    {
                                        <i class="bx bx-save me-1"></i>
                                        <span>@(IsEditMode ? "Değişiklikleri Kaydet" : "Alt İşlem Ekle")</span>
                                    }
                                </button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>

            <!-- Info Panel -->
            <div class="col-lg-4">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="bx bx-help-circle me-2"></i>
                                Bilgilendirme
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-info mb-3">
                                <h6 class="alert-heading">
                                    <i class="bx bx-info-circle me-1"></i>
                                    Alt İşlem Nedir?
                                </h6>
                                <p class="mb-0 small">
                                    Alt işlemler, kanal işlemlerin altında yer alan detaylı hizmet türleridir. 
                                    Vatandaşlar sıramatik cihazından önce kanal işlem, sonra alt işlem seçer.
                                </p>
                            </div>

                            <div class="alert alert-warning mb-0">
                                <h6 class="alert-heading">
                                    <i class="bx bx-error me-1"></i>
                                    Önemli Notlar
                                </h6>
                                <ul class="mb-0 small ps-3">
                                    <li>Önce kanal işlem seçilmelidir</li>
                                    <li>Alt işlem adı benzersiz olmalıdır</li>
                                    <li>Sıra numarası 1'den başlamalıdır</li>
                                    <li>Pasif alt işlemler cihazda görünmez</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    @if (IsEditMode)
                    {
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">
                                    <i class="bx bx-time me-2"></i>
                                    Kayıt Bilgileri
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-2">
                                    <small class="text-muted d-block">Eklenme Tarihi</small>
                                    <strong>@eklenmeTarihi.ToString("dd.MM.yyyy HH:mm")</strong>
                                </div>
                                @if (duzenlenmeTarihi.HasValue)
                                {
                                    <div>
                                        <small class="text-muted d-block">Son Düzenleme</small>
                                        <strong>@duzenlenmeTarihi.Value.ToString("dd.MM.yyyy HH:mm")</strong>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    }
</div>
