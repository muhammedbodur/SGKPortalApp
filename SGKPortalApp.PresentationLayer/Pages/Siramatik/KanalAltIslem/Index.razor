@page "/siramatik/kanal-alt-islem"
@using SGKPortalApp.BusinessObjectLayer.DTOs.Response.SiramatikIslemleri
@using SGKPortalApp.BusinessObjectLayer.Enums.Common
@attribute [Authorize]

<PageTitle>Kanal Alt İşlem Yönetimi - SGK Portal</PageTitle>

<div class="container-xxl flex-grow-1 container-p-y">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold mb-1">
                <i class="bx bx-subdirectory-right me-2"></i>Kanal Alt İşlem Yönetimi
            </h4>
            <p class="text-muted mb-0">
                Tüm kanal alt işlemlerini görüntüleyin ve yönetin
            </p>
        </div>

        <div class="d-flex gap-2">
            <!-- Excel Export -->
            <button class="btn btn-success" @onclick="ExportToExcel" disabled="@isLoading">
                <i class="bx bx-download me-1"></i>
                Excel
            </button>

            <!-- PDF Export -->
            <button class="btn btn-danger" @onclick="ExportToPdf" disabled="@isLoading">
                <i class="bx bxs-file-pdf me-1"></i>
                PDF
            </button>

            <!-- Yeni Alt İşlem -->
            <a href="/siramatik/kanal-alt-islem/manage" class="btn btn-primary">
                <i class="bx bx-plus me-1"></i>Yeni Alt İşlem
            </a>
        </div>
    </div>

    <!-- Filters -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <label class="form-label fw-bold">
                        <i class="bx bx-filter me-1"></i>
                        Kanal İşlem
                    </label>
                    <select class="form-select" @onchange="OnKanalIslemChanged">
                        <option value="0">Tümü</option>
                        @foreach (var kanal in kanalIslemler)
                        {
                            <option value="@kanal.KanalIslemId">@kanal.KanalAdi</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <label class="form-label fw-bold">
                        <i class="bx bx-search me-1"></i>
                        Ara
                    </label>
                    <input type="text" class="form-control" placeholder="Alt işlem adı ile ara..."
                           @bind="searchText" @bind:event="oninput" @onkeyup="OnSearchChanged" />
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <label class="form-label fw-bold">
                        <i class="bx bx-filter me-1"></i>
                        Durum
                    </label>
                    <select class="form-select" @onchange="OnAktiflikChanged">
                        <option value="">Tümü</option>
                        <option value="@((int)Aktiflik.Aktif)">Aktif</option>
                        <option value="@((int)Aktiflik.Pasif)">Pasif</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-label-info">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <small class="text-muted d-block">Toplam Alt İşlem</small>
                            <h5 class="mb-0">@filteredAltIslemler.Count</h5>
                        </div>
                        <div class="avatar">
                            <span class="avatar-initial rounded bg-label-info">
                                <i class="bx bx-subdirectory-right fs-4"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Yükleniyor...</span>
            </div>
            <p class="mt-3 text-muted">Alt işlemler yükleniyor...</p>
        </div>
    }
    else if (filteredAltIslemler.Any())
    {
        <!-- Alt İşlem Listesi -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 50px;">Sıra</th>
                                        <th>Alt İşlem Adı</th>
                                        <th>Kanal İşlem</th>
                                        <th>Açıklama</th>
                                        <th style="width: 100px;">Durum</th>
                                        <th style="width: 150px;">Eklenme Tarihi</th>
                                        <th style="width: 100px;" class="text-center">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var altIslem in filteredAltIslemler)
                                    {
                                        <tr class="@(altIslem.Aktiflik == Aktiflik.Pasif ? "table-danger" : "")">
                                            <td>
                                                <span class="badge bg-label-secondary">@altIslem.Sira</span>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar avatar-sm me-2">
                                                        <span class="avatar-initial rounded bg-label-primary">
                                                            <i class="bx bx-subdirectory-right"></i>
                                                        </span>
                                                    </div>
                                                    <strong>@altIslem.KanalAltAdi</strong>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-label-info">
                                                    <i class="bx bx-list-ul me-1"></i>
                                                    @altIslem.KanalAdi
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge @(altIslem.Aktiflik == Aktiflik.Aktif ? "bg-success" : "bg-danger")">
                                                    @(altIslem.Aktiflik == Aktiflik.Aktif ? "Aktif" : "Pasif")
                                                </span>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    <i class="bx bx-time me-1"></i>
                                                    @altIslem.EklenmeTarihi.ToString("dd.MM.yyyy")
                                                </small>
                                            </td>
                                            <td class="text-center">
                                                <div class="dropdown">
                                                    <button class="btn btn-sm btn-icon" type="button" data-bs-toggle="dropdown">
                                                        <i class="bx bx-dots-vertical-rounded"></i>
                                                    </button>
                                                    <ul class="dropdown-menu dropdown-menu-end">
                                                        <li>
                                                            <a class="dropdown-item" href="/siramatik/kanal-alt-islem/manage/@altIslem.KanalAltIslemId">
                                                                <i class="bx bx-edit me-2"></i>
                                                                Düzenle
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <button class="dropdown-item" @onclick="() => ToggleAktiflik(altIslem)">
                                                                <i class="bx @(altIslem.Aktiflik == Aktiflik.Aktif ? "bx-x" : "bx-check") me-2"></i>
                                                                @(altIslem.Aktiflik == Aktiflik.Aktif ? "Pasif Yap" : "Aktif Yap")
                                                            </button>
                                                        </li>
                                                        <li><hr class="dropdown-divider" /></li>
                                                        <li>
                                                            <button class="dropdown-item text-danger" @onclick="() => ShowDeleteConfirm(altIslem)">
                                                                <i class="bx bx-trash me-2"></i>
                                                                Sil
                                                            </button>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="bx bx-search" style="font-size: 4rem; color: #ddd;"></i>
                        <h5 class="mt-3 text-muted">Alt işlem bulunamadı</h5>
                        <p class="text-muted">@(string.IsNullOrEmpty(searchText) ? "Henüz alt işlem eklenmemiş." : "Arama kriterlerine uygun sonuç bulunamadı.")</p>
                        @if (string.IsNullOrEmpty(searchText))
                        {
                            <a href="/siramatik/kanal-alt-islem/manage" class="btn btn-primary mt-3">
                                <i class="bx bx-plus me-1"></i>
                                İlk Alt İşlemi Ekle
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Delete Confirmation Modal -->
@if (showDeleteModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bx bx-trash text-danger me-2"></i>
                        Alt İşlem Sil
                    </h5>
                    <button type="button" class="btn-close" @onclick="HideDeleteConfirm"></button>
                </div>
                <div class="modal-body">
                    <p class="mb-0">
                        <strong>@selectedAltIslem?.KanalAltAdi</strong> alt işlemini silmek istediğinizden emin misiniz?
                    </p>
                    <div class="alert alert-warning mt-3 mb-0">
                        <i class="bx bx-error me-2"></i>
                        <strong>Dikkat!</strong> Bu işlem geri alınamaz.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideDeleteConfirm">İptal</button>
                    <button type="button" class="btn btn-danger" @onclick="DeleteAltIslem" disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        else
                        {
                            <i class="bx bx-trash me-1"></i>
                        }
                        Sil
                    </button>
                </div>
            </div>
        </div>
    </div>
}
