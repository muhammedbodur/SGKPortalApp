@page "/siramatik/kiosk/manage"
@page "/siramatik/kiosk/manage/{KioskId:int}"
@using SGKPortalApp.BusinessObjectLayer.Enums.Common
@attribute [Authorize]

<PageTitle>@(IsEditMode ? "Kiosk Düzenle" : "Yeni Kiosk") - SGK Portal</PageTitle>

<div class="container-xxl flex-grow-1 container-p-y">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb breadcrumb-style1">
            <li class="breadcrumb-item">
                <a href="/">
                    <i class="bx bx-home-alt me-1"></i>Ana Sayfa
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="/siramatik/kiosk/list">
                    Kiosk Yönetimi
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                @(IsEditMode ? "Düzenle" : "Yeni Kiosk")
            </li>
        </ol>
    </nav>

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold mb-1">
                <i class="bx @(IsEditMode ? "bx-edit" : "bx-plus-circle") me-2"></i>
                @(IsEditMode ? "Kiosk Düzenle" : "Yeni Kiosk Ekle")
            </h4>
            <p class="text-muted mb-0">
                @(IsEditMode ? "Kiosk bilgilerini güncelleyin" : "Yeni bir kiosk oluşturun")
            </p>
        </div>

        <button class="btn btn-outline-secondary" @onclick="NavigateBack" disabled="@isSaving">
            <i class="bx bx-arrow-back me-1"></i>Geri Dön
        </button>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Yükleniyor...</span>
            </div>
            <p class="mt-3 text-muted">Veriler yükleniyor...</p>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8 col-xl-6 mx-auto">
                <div class="card">
                    <div class="card-header d-flex align-items-center justify-content-between">
                        <h5 class="mb-0">
                            <i class="bx bx-info-circle me-2"></i>Kiosk Bilgileri
                        </h5>
                        @if (IsEditMode)
                        {
                            <span class="badge bg-label-info">ID: @KioskId</span>
                        }
                    </div>

                    <div class="card-body">
                        <EditForm Model="@model" OnValidSubmit="HandleSubmit">
                            <DataAnnotationsValidator />
                            <ValidationSummary />

                            <!-- Hizmet Binası -->
                            <div class="mb-3">
                                <label class="form-label required">
                                    <i class="bx bx-building me-1"></i>Hizmet Binası
                                </label>
                                <InputSelect @bind-Value="model.HizmetBinasiId" class="form-select" disabled="@isSaving">
                                    <option value="0">-- Hizmet Binası Seçiniz --</option>
                                    @foreach (var bina in hizmetBinalari)
                                    {
                                        <option value="@bina.HizmetBinasiId">@bina.HizmetBinasiAdi</option>
                                    }
                                </InputSelect>
                                <ValidationMessage For="@(() => model.HizmetBinasiId)" class="text-danger small mt-1" />
                            </div>

                            <!-- Kiosk Adı -->
                            <div class="mb-3">
                                <label class="form-label required">
                                    <i class="bx bx-terminal me-1"></i>Kiosk Adı
                                </label>
                                <InputText @bind-Value="model.KioskAdi"
                                           class="form-control"
                                           maxlength="100"
                                           placeholder="Örn: Zemin Kat Kiosk-1"
                                           disabled="@isSaving" />
                                <ValidationMessage For="@(() => model.KioskAdi)" class="text-danger small mt-1" />
                                <div class="form-text">@model.KioskAdi.Length / 100 karakter</div>
                            </div>

                            <!-- Kiosk IP -->
                            <div class="mb-3">
                                <label class="form-label">
                                    <i class="bx bx-wifi me-1"></i>Kiosk IP (Opsiyonel)
                                </label>
                                <InputText @bind-Value="model.KioskIp"
                                           class="form-control"
                                           maxlength="16"
                                           placeholder="Örn: 192.168.1.25"
                                           disabled="@isSaving" />
                                <ValidationMessage For="@(() => model.KioskIp)" class="text-danger small mt-1" />
                            </div>

                            <!-- Aktiflik -->
                            <div class="mb-0">
                                <label class="form-label fw-bold">
                                    Durum <span class="text-danger">*</span>
                                </label>
                                <div class="form-check form-switch">
                                    <InputCheckbox @bind-Value="isAktif" class="form-check-input" id="aktiflikSwitch" />
                                    <label class="form-check-label" for="aktiflikSwitch">
                                        @(isAktif ? "Aktif" : "Pasif")
                                    </label>
                                </div>
                                <small class="text-muted">Pasif kiosklara bilet yönlendirilmez.</small>
                            </div>

                            <!-- Actions -->
                            <div class="mt-4 d-flex justify-content-between align-items-center">
                                <button type="button" class="btn btn-secondary" @onclick="NavigateBack" disabled="@isSaving">
                                    <i class="bx bx-x me-1"></i><span>İptal</span>
                                </button>
                                <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                    @if (isSaving)
                                    {
                                        <span class="spinner-border spinner-border-sm me-1"></span>
                                        <span>Kaydediliyor...</span>
                                    }
                                    else
                                    {
                                        <i class="bx bx-save me-1"></i>
                                        <span>Değişiklikleri Kaydet</span>
                                    }
                                </button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>

            <!-- Info Panel -->
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h6 class="mb-0">
                            <i class="bx bx-info-circle me-1"></i>Bilgi
                        </h6>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled mb-0 text-muted small">
                            <li class="mb-2">
                                <i class="bx bx-chevron-right"></i> Her kiosk bir hizmet binasına bağlıdır.
                            </li>
                            <li class="mb-2">
                                <i class="bx bx-chevron-right"></i> Menü seçimi, kiosk ekranında hangi kartların görüneceğini belirler.
                            </li>
                            <li class="mb-2">
                                <i class="bx bx-chevron-right"></i> IP alanı opsiyoneldir; sadece cihaz takibi için tutulur.
                            </li>
                            <li>
                                <i class="bx bx-chevron-right"></i> Pasif kiosklarda vatandaş işlemi alınmaz.
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
