@page "/"
@using Microsoft.AspNetCore.Components.Web
@namespace SGKPortalApp.PresentationLayer.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="tr" class="light-style layout-navbar-fixed layout-menu-fixed layout-compact" dir="ltr"
      data-theme="theme-default"
      data-assets-path="/portal/assets/"
      data-template="vertical-menu-template">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />
    <title>SGK Portal - İzmir Sosyal Güvenlik İl Müdürlüğü</title>
    <base href="~/" />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/portal/assets/img/favicon/favicon.ico" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet">

    <!-- Icons -->
    <link rel="stylesheet" href="/portal/assets/vendor/fonts/boxicons.css" />
    <link rel="stylesheet" href="/portal/assets/vendor/fonts/fontawesome.css" />
    <link rel="stylesheet" href="/portal/assets/vendor/fonts/flag-icons.css" />

    <!-- Core CSS -->
    <link rel="stylesheet" href="/portal/assets/vendor/css/core.css" class="template-customizer-core-css" />
    <link rel="stylesheet" href="/portal/assets/vendor/css/theme-default.css" class="template-customizer-theme-css" />
    <link rel="stylesheet" href="/portal/assets/css/demo.css" />

    <!-- Vendors CSS -->
    <link rel="stylesheet" href="/portal/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.css" />
    <link rel="stylesheet" href="/portal/assets/vendor/libs/typeahead-js/typeahead.css" />

    <!-- Custom Site CSS -->
    <link rel="stylesheet" href="/css/site.css">

    <!-- Helpers -->
    <script src="/portal/assets/vendor/js/helpers.js"></script>
    <script src="/portal/assets/vendor/js/template-customizer.js"></script>
    <script src="/portal/assets/js/config.js"></script>

    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            Bir hata oluştu.
        </environment>
        <environment include="Development">
            İstenmeyen bir hata oluştu. Daha fazla detay için tarayıcı konsolunu kontrol edin.
        </environment>
        <a href="" class="reload">Yeniden Yükle</a>
        <a class="dismiss">🗙</a>
    </div>

    <!-- Core JS -->
    <script src="/portal/assets/vendor/libs/jquery/jquery.js"></script>
    <script src="/portal/assets/vendor/libs/popper/popper.js"></script>
    <script src="/portal/assets/vendor/js/bootstrap.js"></script>
    <script src="/portal/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="/portal/assets/vendor/libs/hammer/hammer.js"></script>
    <script src="/portal/assets/vendor/libs/i18n/i18n.js"></script>
    <script src="/portal/assets/vendor/libs/typeahead-js/typeahead.js"></script>
    <script src="/portal/assets/vendor/js/menu.js"></script>

    <!-- Main JS -->
    <script src="/portal/assets/js/main.js"></script>

    <!-- Blazor Framework Custom Türkçe Uyarılar -->
    <script src="js/custom-blazor.js"></script>

    <!-- Blazor Framework -->
    <script src="_framework/blazor.server.js"></script>

    <!-- Blazor Sneat Init -->
    <script src="/js/blazor-sneat-init.js"></script>
</body>
</html>