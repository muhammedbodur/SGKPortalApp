    <script src="/portal/assets/vendor/js/template-customizer.js"></script>
    <script src="/portal/assets/js/config.js"></script>

    <!-- ================== BLAZOR RECONNECTION CSS ================== -->
    <style type="text/css">
        /* Blazor'ın varsayılan reconnection modal'ını gizle */
        #components-reconnect-modal {
            display: none !important;
        }

        /* Kendi reconnection modal'ımız için stilleri */
        .custom-reconnect-modal {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: 9999;
            background-color: rgba(0,0,0,0.6);
            backdrop-filter: blur(3px);
            transition: all 0.3s ease;
        }

        .custom-reconnect-content {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: white;
            padding: 2rem;
            border-radius: 0.75rem;
            box-shadow: 0 10px 25px rgba(0,0,0,0.2);
            max-width: 400px;
            width: 90%;
            text-align: center;
            font-family: 'Public Sans', sans-serif;
            animation: modalSlideIn 0.3s ease-out;
        }

        @@keyframes modalSlideIn {
            from {
                opacity: 0;
                transform: translate(-50%, -60%);
            }

            to {
                opacity: 1;
                transform: translate(-50%, -50%);
            }
        }

        .reconnect-spinner {
            width: 3rem;
            height: 3rem;
            border: 4px solid #e3f2fd;
            border-top: 4px solid #1976d2;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin: 0 auto 1rem auto;
        }

        @@keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }
    </style>

    <!-- Custom Site CSS - EN SONDA YÜKLENMELİ -->
    <link rel="stylesheet" href="/css/site.css" asp-append-version="true">
    
    <!-- Sıramatik Module CSS -->
    <link rel="stylesheet" href="/css/modules/siramatik.css" asp-append-version="true">

    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    @* <!-- ================== BLAZOR ERROR UI ================== -->
    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            Bir hata oluştu.
        </environment>
        <environment include="Development">
            İstenmeyen bir hata oluştu. Daha fazla detay için tarayıcı konsolunu kontrol edin.
        </environment>
        <a href="" class="reload">Yeniden Yükle</a>
        <a class="dismiss">🗙</a>
    </div> *@

    <!-- ================== BLAZOR RECONNECTION TÜRKÇE UI ================== -->
    <div id="custom-blazor-reconnect-modal" class="custom-reconnect-modal" style="display: none;">
        <div class="custom-reconnect-content">
            <!-- Yeniden bağlanıyor -->
            <div class="reconnect-state-connecting">
                <div class="reconnect-spinner"></div>
                <h5 class="mb-2" style="color: #1976d2; font-weight: 600;">🔄 Bağlantı koptu</h5>
                <p class="text-muted mb-3">Sunucuya yeniden bağlanılıyor...</p>

                <!-- Sadece sonraki deneme süresi -->
                <div class="reconnect-timer" id="reconnect-timer-container" style="display: none;">
                    <div class="d-flex justify-content-center align-items-center">
                        <span class="badge bg-info fs-6" id="next-retry-time">Yeniden deneniyor...</span>
                    </div>
                </div>

                <small class="text-muted">Lütfen bekleyin</small>
            </div>

            <!-- Bağlantı başarısız -->
            <div class="reconnect-state-failed" style="display: none;">
                <i class="bx bx-error-circle text-danger mb-3" style="font-size: 3rem;"></i>
                <h5 class="mb-2" style="color: #d32f2f; font-weight: 600;">❌ Bağlantı başarısız</h5>
                <p class="text-muted mb-3">
                    <span id="max-retries-reached">8 deneme</span> yapıldı ancak sunucuya bağlanılamadı.<br>
                    Lütfen sayfayı manuel olarak yenileyin.
                </p>
                <button onclick="location.reload()" class="btn btn-primary" style="padding: 0.5rem 1.5rem;">
                    <i class="bx bx-refresh me-1"></i>
                    Sayfayı Yenile
                </button>
            </div>

            <!-- Bağlantı reddedildi -->
            <div class="reconnect-state-rejected" style="display: none;">
                <i class="bx bx-block text-danger mb-3" style="font-size: 3rem;"></i>
                <h5 class="mb-2" style="color: #d32f2f; font-weight: 600;">🚫 Bağlantı reddedildi</h5>
                <p class="text-muted mb-3">Sunucu bağlantıyı reddetti. Oturum süreniz dolmuş olabilir.</p>
                <button onclick="location.reload()" class="btn btn-primary" style="padding: 0.5rem 1.5rem;">
                    <i class="bx bx-refresh me-1"></i>
                    Yeniden Giriş Yap
                </button>
            </div>
        </div>
    </div>

