    <link rel="stylesheet" href="/portal/assets/vendor/fonts/boxicons.css" />
    <link rel="stylesheet" href="/portal/assets/vendor/fonts/fontawesome.css" />
    <link rel="stylesheet" href="/portal/assets/vendor/fonts/flag-icons.css" />

