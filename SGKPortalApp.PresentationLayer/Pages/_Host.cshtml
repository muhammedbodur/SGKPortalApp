@page "/"
@using Microsoft.AspNetCore.Components.Web
@namespace SGKPortalApp.PresentationLayer.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="tr" class="light-style layout-navbar-fixed layout-menu-fixed layout-compact" dir="ltr"
      data-theme="theme-default"
      data-assets-path="/portal/assets/"
      data-template="vertical-menu-template">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />
    <title>SGK Portal - İzmir Sosyal Güvenlik İl Müdürlüğü</title>
    <base href="~/" />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/portal/assets/img/favicon/favicon.ico" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet">

    <!-- Icons -->
    <link rel="stylesheet" href="/portal/assets/vendor/fonts/boxicons.css" />
    <link rel="stylesheet" href="/portal/assets/vendor/fonts/fontawesome.css" />
    <link rel="stylesheet" href="/portal/assets/vendor/fonts/flag-icons.css" />

    <!-- Core CSS -->
    <link rel="stylesheet" href="/portal/assets/vendor/css/core.css" class="template-customizer-core-css" />
    <link rel="stylesheet" href="/portal/assets/vendor/css/theme-default.css" class="template-customizer-theme-css" />
    <link rel="stylesheet" href="/portal/assets/css/demo.css" />

    <!-- Vendors CSS -->
    <link rel="stylesheet" href="/portal/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.css" />
    <link rel="stylesheet" href="/portal/assets/vendor/libs/typeahead-js/typeahead.css" />

    <!-- Custom Site CSS -->
    <link rel="stylesheet" href="/css/site.css">

    <!-- Helpers -->
    <script src="/portal/assets/vendor/js/helpers.js"></script>
    <script src="/portal/assets/vendor/js/template-customizer.js"></script>
    <script src="/portal/assets/js/config.js"></script>

    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <!-- ================== BLAZOR ERROR UI ================== -->
    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            Bir hata oluştu.
        </environment>
        <environment include="Development">
            İstenmeyen bir hata oluştu. Daha fazla detay için tarayıcı konsolunu kontrol edin.
        </environment>
        <a href="" class="reload">Yeniden Yükle</a>
        <a class="dismiss">🗙</a>
    </div>

    <!-- ================== BLAZOR RECONNECTION TÜRKÇE UI ================== -->
    <div id="blazor-reconnect-modal" style="display: none; position: fixed; top: 0; left: 0; right: 0; bottom: 0; z-index: 9999; background-color: rgba(0,0,0,0.6);">
        <div style="position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); background: white; padding: 2rem; border-radius: 0.5rem; box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15); max-width: 400px; text-align: center; font-family: 'Public Sans', sans-serif;">

            <!-- Yeniden bağlanıyor -->
            <div class="components-reconnect-show">
                <div class="spinner-border text-primary mb-3" role="status" style="width: 3rem; height: 3rem;">
                    <span class="visually-hidden">Yükleniyor...</span>
                </div>
                <h5 class="mb-2">🔄 Bağlantı koptu</h5>
                <p class="text-muted mb-0">Sunucuya yeniden bağlanılıyor...</p>
                <small class="text-muted">Lütfen bekleyin</small>
            </div>

            <!-- Bağlantı başarısız -->
            <div class="components-reconnect-failed" style="display: none;">
                <i class="bx bx-error-circle text-danger mb-3" style="font-size: 3rem;"></i>
                <h5 class="mb-2">❌ Bağlantı başarısız</h5>
                <p class="text-muted mb-3">Sunucuya bağlanılamadı. Lütfen sayfayı yenileyin.</p>
                <button onclick="location.reload()" class="btn btn-primary">
                    <i class="bx bx-refresh me-1"></i>
                    Sayfayı Yenile
                </button>
            </div>

            <!-- Bağlantı reddedildi -->
            <div class="components-reconnect-rejected" style="display: none;">
                <i class="bx bx-block text-danger mb-3" style="font-size: 3rem;"></i>
                <h5 class="mb-2">🚫 Bağlantı reddedildi</h5>
                <p class="text-muted mb-3">Sunucu bağlantıyı reddetti. Oturum süreniz dolmuş olabilir.</p>
                <button onclick="location.reload()" class="btn btn-primary">
                    <i class="bx bx-refresh me-1"></i>
                    Sayfayı Yenile
                </button>
            </div>
        </div>
    </div>

    <!-- ================== CORE JS FILES ================== -->
    <script src="/portal/assets/vendor/libs/jquery/jquery.js"></script>
    <script src="/portal/assets/vendor/libs/popper/popper.js"></script>
    <script src="/portal/assets/vendor/js/bootstrap.js"></script>
    <script src="/portal/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="/portal/assets/vendor/libs/hammer/hammer.js"></script>
    <script src="/portal/assets/vendor/libs/i18n/i18n.js"></script>
    <script src="/portal/assets/vendor/libs/typeahead-js/typeahead.js"></script>
    <script src="/portal/assets/vendor/js/menu.js"></script>

    <!-- ================== MAIN JS ================== -->
    <script src="/portal/assets/js/main.js"></script>

    <!-- ================== BLAZOR RECONNECTION CONTROL ================== -->
    <script>
        // Blazor bağlantı durumu yönetimi
        document.addEventListener('DOMContentLoaded', function() {
            // Blazor.start özelleştirmesi
            window.blazorStartOptions = {
                reconnectionHandler: {
                    onConnectionDown: () => {
                        console.log('🔴 Blazor bağlantısı koptu');
                        const modal = document.getElementById('blazor-reconnect-modal');
                        if (modal) {
                            modal.style.display = 'block';
                            // Show state'i göster
                            const showElement = modal.querySelector('.components-reconnect-show');
                            const failedElement = modal.querySelector('.components-reconnect-failed');
                            const rejectedElement = modal.querySelector('.components-reconnect-rejected');

                            if (showElement) showElement.style.display = 'block';
                            if (failedElement) failedElement.style.display = 'none';
                            if (rejectedElement) rejectedElement.style.display = 'none';
                        }
                    },
                    onConnectionUp: () => {
                        console.log('🟢 Blazor bağlantısı kuruldu');
                        const modal = document.getElementById('blazor-reconnect-modal');
                        if (modal) {
                            modal.style.display = 'none';
                        }
                    }
                },
                reconnectionOptions: {
                    maxRetries: 8,
                    retryIntervalMilliseconds: retryCount => {
                        // İlk 3 deneme: 1 saniye, sonraki denemeler: artarak 30 saniyeye kadar
                        return Math.min(1000 * Math.pow(2, retryCount), 30000);
                    }
                }
            };
        });

        // Blazor.start'ı override et
        const originalBlazorStart = window.Blazor && window.Blazor.start;
        if (window.Blazor) {
            window.Blazor.start = function(options) {
                const mergedOptions = Object.assign({}, window.blazorStartOptions || {}, options || {});
                return originalBlazorStart ? originalBlazorStart.call(this, mergedOptions) : Promise.resolve();
            };
        }
    </script>

    <!-- ================== BLAZOR FRAMEWORK ================== -->
    <script src="_framework/blazor.server.js"></script>

    <!-- ================== BLAZOR SNEAT INIT ================== -->
    <script src="/js/blazor-sneat-init.js"></script>
</body>
</html>