@page "/log"
@page "/log/list"
@using SGKPortalApp.PresentationLayer.Services.ApiServices.Interfaces.Common
@using SGKPortalApp.BusinessObjectLayer.DTOs.AuditLog
@using SGKPortalApp.BusinessObjectLayer.Enums.Common
@inject IAuditLogApiService AuditLogApiService
@inject NavigationManager NavigationManager

<PageTitle>Log Listeleme - SGK Portal</PageTitle>

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h3>üìã Log Listeleme</h3>
            <p class="text-muted">Sistemdeki t√ºm deƒüi≈üiklikleri g√∂r√ºnt√ºleyin</p>
        </div>
    </div>

    @* Arama ve Filtreler *@
    <div class="card mb-3">
        <div class="card-header">
            <h5 class="mb-0">üîç Arama ve Filtreler</h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Ad Soyad / TC / Sicil</label>
                    <input type="text" class="form-control" @bind="SearchText" placeholder="Arama..." />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Ba≈ülangƒ±√ß Tarihi</label>
                    <input type="date" class="form-control" @bind="Filter.StartDate" @bind:format="yyyy-MM-dd" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Biti≈ü Tarihi</label>
                    <input type="date" class="form-control" @bind="Filter.EndDate" @bind:format="yyyy-MM-dd" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Tablo Adƒ±</label>
                    <input type="text" class="form-control" @bind="Filter.TableName" placeholder="Personel, User..." />
                </div>
                <div class="col-md-3">
                    <label class="form-label">ƒ∞≈ülem T√ºr√º</label>
                    <select class="form-select" @bind="Filter.Action">
                        <option value="">T√ºm√º</option>
                        <option value="@DatabaseAction.INSERT">INSERT</option>
                        <option value="@DatabaseAction.UPDATE">UPDATE</option>
                        <option value="@DatabaseAction.DELETE">DELETE</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Sayfa Ba≈üƒ±na Kayƒ±t</label>
                    <select class="form-select" @bind="Filter.PageSize">
                        <option value="10">10</option>
                        <option value="25">25</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>
                </div>
                <div class="col-md-6 d-flex align-items-end">
                    <button class="btn btn-primary me-2" @onclick="SearchAsync" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        Ara
                    </button>
                    <button class="btn btn-secondary" @onclick="ResetFilters" disabled="@isLoading">
                        Temizle
                    </button>
                </div>
            </div>
        </div>
    </div>

    @* Sonu√ßlar *@
    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Y√ºkleniyor...</span>
            </div>
            <p class="mt-2">Log'lar y√ºkleniyor...</p>
        </div>
    }
    else if (result != null && result.Logs.Any())
    {
        @* Pagination √úst *@
        <div class="card mb-2">
            <div class="card-body p-2">
                <div class="d-flex justify-content-between align-items-center">
                    <span class="badge bg-primary">Toplam: @result.TotalCount kayƒ±t</span>
                    <nav>
                        <ul class="pagination pagination-sm mb-0">
                            <li class="page-item @(!result.HasPreviousPage ? "disabled" : "")">
                                <button class="page-link" @onclick="() => GoToPage(result.PageNumber - 1)" disabled="@(!result.HasPreviousPage)">
                                    √ñnceki
                                </button>
                            </li>
                            @for (int i = Math.Max(1, result.PageNumber - 2); i <= Math.Min(result.TotalPages, result.PageNumber + 2); i++)
                            {
                                var pageNum = i;
                                <li class="page-item @(pageNum == result.PageNumber ? "active" : "")">
                                    <button class="page-link" @onclick="() => GoToPage(pageNum)">@pageNum</button>
                                </li>
                            }
                            <li class="page-item @(!result.HasNextPage ? "disabled" : "")">
                                <button class="page-link" @onclick="() => GoToPage(result.PageNumber + 1)" disabled="@(!result.HasNextPage)">
                                    Sonraki
                                </button>
                            </li>
                        </ul>
                    </nav>
                    <small class="text-muted">Sayfa @result.PageNumber / @result.TotalPages</small>
                </div>
            </div>
        </div>

        @* Transaction Gruplarƒ± *@
        @foreach (var group in GetTransactionGroups())
        {
            var groupLogs = group.Logs.OrderBy(l => l.IslemZamani).ToList();
            var firstLog = groupLogs.First();

            <div class="card mb-3">
                <div class="card-header bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-0">
                                üîó ƒ∞≈ülem Grubu
                                @if (group.TransactionId.HasValue)
                                {
                                    <span class="text-muted">#@group.TransactionId.Value.ToString().Substring(0, 8)</span>
                                }
                            </h6>
                            <small class="text-muted">
                                @firstLog.IslemZamaniText - TC: @firstLog.TcKimlikNo
                                @if (group.TransactionId.HasValue)
                                {
                                    <span class="badge bg-info ms-2">@groupLogs.Count deƒüi≈üiklik</span>
                                }
                            </small>
                        </div>
                        <div>
                            <small class="text-muted">IP: @(firstLog.IpAddress ?? "-")</small>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Tablo</th>
                                    <th>ƒ∞≈ülem</th>
                                    <th>Deƒüi≈üen Alanlar</th>
                                    <th>Depolama</th>
                                    <th>Boyut</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var log in groupLogs)
                                {
                                    <tr>
                                        <td><span class="badge bg-info">@log.TabloAdi</span></td>
                                        <td>
                                            <span class="badge @GetActionBadgeClass(log.IslemTuru)">
                                                @log.IslemTuruText
                                            </span>
                                        </td>
                                        <td>
                                            @if (log.ChangedFieldCount.HasValue)
                                            {
                                                <small class="text-muted">@log.ChangedFieldCount alan</small>
                                            }
                                            else
                                            {
                                                <small class="text-muted">-</small>
                                            }
                                        </td>
                                        <td><small class="text-muted">@log.StorageTypeText</small></td>
                                        <td><small class="text-muted">@log.DataSizeText</small></td>
                                        <td>
                                            <a href="/log/detail/@log.DatabaseLogId" class="btn btn-sm btn-outline-primary">
                                                Detay
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }

        @* Pagination Alt *@
        <div class="card">
            <div class="card-body p-2">
                <nav>
                    <ul class="pagination pagination-sm justify-content-center mb-0">
                        <li class="page-item @(!result.HasPreviousPage ? "disabled" : "")">
                            <button class="page-link" @onclick="() => GoToPage(result.PageNumber - 1)" disabled="@(!result.HasPreviousPage)">
                                √ñnceki
                            </button>
                        </li>
                        @for (int i = Math.Max(1, result.PageNumber - 2); i <= Math.Min(result.TotalPages, result.PageNumber + 2); i++)
                        {
                            var pageNum = i;
                            <li class="page-item @(pageNum == result.PageNumber ? "active" : "")">
                                <button class="page-link" @onclick="() => GoToPage(pageNum)">@pageNum</button>
                            </li>
                        }
                        <li class="page-item @(!result.HasNextPage ? "disabled" : "")">
                            <button class="page-link" @onclick="() => GoToPage(result.PageNumber + 1)" disabled="@(!result.HasNextPage)">
                                Sonraki
                            </button>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    }
    else if (!isLoading && result != null)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Se√ßili filtrelere uygun kayƒ±t bulunamadƒ±.
        </div>
    }
</div>

@code {
    private AuditLogFilterDto Filter = new()
    {
        StartDate = DateTime.Now.AddDays(-7),
        EndDate = DateTime.Now,
        PageNumber = 1,
        PageSize = 25
    };

    private string SearchText = "";
    private AuditLogPagedResultDto? result;
    private bool isLoading = false;

    protected override async Task OnInitializedAsync()
    {
        await SearchAsync();
    }

    private async Task SearchAsync()
    {
        // SearchText'i TcKimlikNo olarak kullan (ilerisi i√ßin Ad Soyad, Sicil arama eklenebilir)
        if (!string.IsNullOrWhiteSpace(SearchText))
        {
            Filter.TcKimlikNo = SearchText;
        }

        isLoading = true;
        try
        {
            result = await AuditLogApiService.GetLogsAsync(Filter);
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task GoToPage(int pageNumber)
    {
        if (pageNumber < 1 || pageNumber > (result?.TotalPages ?? 1))
            return;

        Filter.PageNumber = pageNumber;
        await SearchAsync();
    }

    private void ResetFilters()
    {
        Filter = new AuditLogFilterDto
        {
            StartDate = DateTime.Now.AddDays(-7),
            EndDate = DateTime.Now,
            PageNumber = 1,
            PageSize = 25
        };
        SearchText = "";
    }

    private List<TransactionGroup> GetTransactionGroups()
    {
        if (result == null || !result.Logs.Any())
            return new List<TransactionGroup>();

        return result.Logs
            .GroupBy(l => l.TransactionId ?? Guid.Empty)
            .Select(g => new TransactionGroup
            {
                TransactionId = g.Key == Guid.Empty ? null : g.Key,
                Logs = g.ToList()
            })
            .OrderByDescending(g => g.Logs.Max(l => l.IslemZamani))
            .ToList();
    }

    private string GetActionBadgeClass(DatabaseAction action)
    {
        return action switch
        {
            DatabaseAction.INSERT or DatabaseAction.CREATE_COMPLETE => "bg-success",
            DatabaseAction.UPDATE or DatabaseAction.UPDATE_COMPLETE => "bg-warning text-dark",
            DatabaseAction.DELETE => "bg-danger",
            _ => "bg-secondary"
        };
    }

    private class TransactionGroup
    {
        public Guid? TransactionId { get; set; }
        public List<AuditLogDto> Logs { get; set; } = new();
    }
}
