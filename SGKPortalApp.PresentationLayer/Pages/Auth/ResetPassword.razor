@page "/auth/reset-password"
@layout EmptyLayout
@using SGKPortalApp.BusinessObjectLayer.DTOs.Request.Auth

<PageTitle>≈ûifre Sƒ±fƒ±rla - SGK Portal</PageTitle>

<!-- Content -->
<div class="container-xxl">
    <div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication-inner">
            <!-- Reset Password Card -->
            <div class="card">
                <div class="card-body">
                    <!-- Logo -->
                    <div class="app-brand justify-content-center mb-4">
                        <a href="/" class="app-brand-link gap-2">
                            <SgkLogo Width="120" Height="48" />
                            <span class="app-brand-text demo text-body fw-bold fs-4">SGK Portal</span>
                        </a>
                    </div>
                    <!-- /Logo -->
                    
                    <h4 class="mb-2">Yeni ≈ûifre Belirle üîê</h4>
                    <p class="mb-4">L√ºtfen yeni ≈üifrenizi giriniz</p>

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible" role="alert">
                            <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
                            <i class="bx bx-error-circle me-2"></i>
                            @errorMessage
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(successMessage))
                    {
                        <div class="alert alert-success alert-dismissible" role="alert">
                            <i class="bx bx-check-circle me-2"></i>
                            @successMessage
                        </div>
                    }

                    <EditForm Model="@resetModel" OnValidSubmit="HandleResetPassword" class="mb-3">
                        <DataAnnotationsValidator />
                        
                        <!-- Yeni ≈ûifre -->
                        <div class="mb-3 form-password-toggle">
                            <label class="form-label" for="newPassword">Yeni ≈ûifre</label>
                            <div class="input-group input-group-merge">
                                <InputText type="@(showNewPassword ? "text" : "password")" 
                                           @bind-Value="resetModel.NewPassword" 
                                           class="form-control" 
                                           id="newPassword" 
                                           placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
                                           autofocus />
                                <span class="input-group-text cursor-pointer" @onclick="() => showNewPassword = !showNewPassword">
                                    <i class="bx @(showNewPassword ? "bx-show" : "bx-hide")"></i>
                                </span>
                            </div>
                            <ValidationMessage For="@(() => resetModel.NewPassword)" class="text-danger" />
                        </div>

                        <!-- ≈ûifre Tekrar -->
                        <div class="mb-3 form-password-toggle">
                            <label class="form-label" for="confirmPassword">≈ûifre Tekrar</label>
                            <div class="input-group input-group-merge">
                                <InputText type="@(showConfirmPassword ? "text" : "password")" 
                                           @bind-Value="resetModel.ConfirmPassword" 
                                           class="form-control" 
                                           id="confirmPassword" 
                                           placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" />
                                <span class="input-group-text cursor-pointer" @onclick="() => showConfirmPassword = !showConfirmPassword">
                                    <i class="bx @(showConfirmPassword ? "bx-show" : "bx-hide")"></i>
                                </span>
                            </div>
                            <ValidationMessage For="@(() => resetModel.ConfirmPassword)" class="text-danger" />
                        </div>

                        <!-- ≈ûifre Gereksinimleri -->
                        <div class="mb-3">
                            <small class="text-muted">
                                <i class="bx bx-info-circle me-1"></i>
                                ≈ûifreniz en az 6 karakter olmalƒ±dƒ±r.
                            </small>
                        </div>

                        <!-- Kaydet Butonu -->
                        <div class="mb-3">
                            <button class="btn btn-primary d-grid w-100" type="submit" disabled="@isLoading">
                                @if (isLoading)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                    <span>Kaydediliyor...</span>
                                }
                                else
                                {
                                    <span>≈ûifreyi Kaydet</span>
                                }
                            </button>
                        </div>

                        <div class="text-center">
                            <a href="/auth/login" class="d-flex align-items-center justify-content-center">
                                <i class="bx bx-chevron-left scaleX-n1-rtl bx-sm"></i>
                                Giri≈ü sayfasƒ±na d√∂n
                            </a>
                        </div>
                    </EditForm>
                </div>
            </div>
            <!-- /Reset Password Card -->
        </div>
    </div>
</div>
<!-- / Content -->

