                    <EditForm Model="@verifyModel" OnValidSubmit="HandleVerify" class="mb-3">
                        <DataAnnotationsValidator />
                        
                        <!-- TC Kimlik No -->
                        <div class="mb-3">
                            <label for="tcKimlikNo" class="form-label">TC Kimlik No</label>
                            <InputText @bind-Value="verifyModel.TcKimlikNo" 
                                       class="form-control" 
                                       id="tcKimlikNo" 
                                       placeholder="11 haneli TC Kimlik No" 
                                       maxlength="11"
                                       autofocus />
                            <ValidationMessage For="@(() => verifyModel.TcKimlikNo)" class="text-danger" />
                        </div>

                        <!-- Sicil No -->
                        <div class="mb-3">
                            <label for="sicilNo" class="form-label">Sicil No</label>
