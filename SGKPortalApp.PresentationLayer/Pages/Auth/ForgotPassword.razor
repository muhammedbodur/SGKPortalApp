                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label for="email" class="form-label">Email Adresi</label>
                            <InputText @bind-Value="verifyModel.Email" 
                                       type="email"
                                       class="form-control" 
                                       id="email" 
                                       placeholder="ornek@sgk.gov.tr" />
                            <ValidationMessage For="@(() => verifyModel.Email)" class="text-danger" />
                        </div>

                        <!-- DoÄŸrula Butonu -->
                        <div class="mb-3">
                            <button class="btn btn-primary d-grid w-100" type="submit" disabled="@isLoading">
