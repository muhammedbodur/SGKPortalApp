@page "/hesap/sifremi-unuttum"
@page "/account/forgot-password"
@layout SGKPortalApp.PresentationLayer.Layout.AuthLayout
@inject NavigationManager Navigation

<PageTitle>Şifremi Unuttum - SGK Portal</PageTitle>

<div class="authentication-wrapper authentication-cover">
    <div class="authentication-inner row m-0">
        <!-- Left Side - Illustration -->
        <div class="d-none d-lg-flex col-lg-7 col-xl-8 align-items-center p-5" style="background: linear-gradient(135deg, #696cff 0%, #5f61e6 100%);">
            <div class="w-100 d-flex flex-column align-items-center justify-content-center">
                <img src="/portal/assets/img/illustrations/forgot-password-illustration.png"
                     class="img-fluid mb-4"
                     alt="Şifremi Unuttum"
                     style="max-width: 400px;"
                     onerror="this.style.display='none'" />
                <div class="text-center text-white">
                    <h3 class="mb-2">SGK İzmir İl Müdürlüğü</h3>
                    <p class="opacity-75">Kurum İçi Portal Sistemi</p>
                </div>
            </div>
        </div>

        <!-- Right Side - Form -->
        <div class="d-flex col-12 col-lg-5 col-xl-4 align-items-center authentication-bg p-sm-5 p-4">
            <div class="w-px-400 mx-auto">
                <!-- Logo -->
                <div class="text-center mb-4">
                    <img src="/portal/assets/img/sgk-logo.png" alt="SGK Logo" style="height: 60px;" onerror="this.style.display='none'" />
                </div>

                @if (!EmailSent)
                {
                    <!-- Initial Form -->
                    <h4 class="mb-2 text-center">Şifremi Unuttum</h4>
                    <p class="mb-4 text-center text-muted">
                        E-posta adresinizi girin, size şifre sıfırlama bağlantısı gönderelim.
                    </p>

                    @if (!string.IsNullOrEmpty(ErrorMessage))
                    {
                        <div class="alert alert-danger d-flex align-items-center" role="alert">
                            <i class="bx bx-error-circle me-2"></i>
                            <span>@ErrorMessage</span>
                        </div>
                    }

                    <EditForm Model="Model" OnValidSubmit="HandleSubmit">
                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <label class="form-label" for="email">E-posta Adresi</label>
                            <div class="input-group input-group-merge">
                                <span class="input-group-text"><i class="bx bx-envelope"></i></span>
                                <InputText @bind-Value="Model.Email"
                                           id="email"
                                           type="email"
                                           class="form-control"
                                           placeholder="kullanici@sgk.gov.tr"
                                           autofocus />
                            </div>
                            <ValidationMessage For="@(() => Model.Email)" class="text-danger small" />
                        </div>

                        <button type="submit" class="btn btn-primary d-grid w-100 mb-3" disabled="@IsSubmitting">
                            @if (IsSubmitting)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                                <span>Gönderiliyor...</span>
                            }
                            else
                            {
                                <span>Sıfırlama Bağlantısı Gönder</span>
                            }
                        </button>

                        <div class="text-center">
                            <a href="/login" class="d-flex align-items-center justify-content-center text-decoration-none">
                                <i class="bx bx-chevron-left me-1"></i>
                                Giriş Sayfasına Dön
                            </a>
                        </div>
                    </EditForm>
                }
                else
                {
                    <!-- Success Message -->
                    <div class="text-center">
                        <div class="avatar avatar-lg mx-auto mb-4" style="width: 100px; height: 100px;">
                            <span class="avatar-initial rounded-circle bg-label-success" style="width: 100px; height: 100px; line-height: 100px; font-size: 3rem;">
                                <i class="bx bx-check"></i>
                            </span>
                        </div>

                        <h4 class="mb-2">E-posta Gönderildi!</h4>
                        <p class="text-muted mb-4">
                            <strong>@Model.Email</strong> adresine şifre sıfırlama bağlantısı gönderdik.
                            Lütfen gelen kutunuzu kontrol edin.
                        </p>

                        <div class="alert alert-light text-start">
                            <h6 class="alert-heading mb-2">
                                <i class="bx bx-info-circle me-1"></i>
                                E-posta gelmediyse
                            </h6>
                            <ul class="list-unstyled mb-0 small">
                                <li class="mb-1">
                                    <i class="bx bx-check text-success me-1"></i>
                                    Spam/Gereksiz klasörünü kontrol edin
                                </li>
                                <li class="mb-1">
                                    <i class="bx bx-check text-success me-1"></i>
                                    E-posta adresinin doğru olduğundan emin olun
                                </li>
                                <li>
                                    <i class="bx bx-check text-success me-1"></i>
                                    Birkaç dakika bekleyip tekrar deneyin
                                </li>
                            </ul>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button class="btn btn-outline-primary" @onclick="ResendEmail" disabled="@(IsSubmitting || ResendCooldown > 0)">
                                @if (ResendCooldown > 0)
                                {
                                    <span>Tekrar Gönder (@ResendCooldown s)</span>
                                }
                                else
                                {
                                    <i class="bx bx-refresh me-1"></i>
                                    <span>Tekrar Gönder</span>
                                }
                            </button>
                            <a href="/login" class="btn btn-primary">
                                <i class="bx bx-log-in me-1"></i>
                                Giriş Sayfasına Dön
                            </a>
                        </div>
                    </div>
                }

                <!-- Footer -->
                <div class="text-center mt-5">
                    <p class="small text-muted mb-0">
                        &copy; @DateTime.Now.Year SGK İzmir İl Müdürlüğü
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .authentication-wrapper {
        min-height: 100vh;
    }
    .authentication-bg {
        background-color: #fff;
    }
    .input-group-merge .input-group-text {
        border-right: none;
        background: transparent;
    }
    .input-group-merge .form-control {
        border-left: none;
    }
    .input-group-merge .form-control:focus {
        border-color: #696cff;
        box-shadow: none;
    }
    .input-group-merge:focus-within .input-group-text {
        border-color: #696cff;
    }
</style>

@code {
    private ForgotPasswordModel Model = new();
    private bool IsSubmitting = false;
    private bool EmailSent = false;
    private string? ErrorMessage;
    private int ResendCooldown = 0;
    private System.Timers.Timer? cooldownTimer;

    private async Task HandleSubmit()
    {
        if (string.IsNullOrWhiteSpace(Model.Email))
        {
            ErrorMessage = "Lütfen e-posta adresinizi girin.";
            return;
        }

        IsSubmitting = true;
        ErrorMessage = null;

        try
        {
            // API çağrısı burada yapılacak
            await Task.Delay(1500); // Simülasyon

            EmailSent = true;
            StartResendCooldown();
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Bir hata oluştu: {ex.Message}";
        }
        finally
        {
            IsSubmitting = false;
        }
    }

    private async Task ResendEmail()
    {
        if (ResendCooldown > 0) return;

        IsSubmitting = true;
        try
        {
            // API çağrısı burada yapılacak
            await Task.Delay(1000); // Simülasyon
            StartResendCooldown();
        }
        finally
        {
            IsSubmitting = false;
        }
    }

    private void StartResendCooldown()
    {
        ResendCooldown = 60;
        cooldownTimer?.Dispose();
        cooldownTimer = new System.Timers.Timer(1000);
        cooldownTimer.Elapsed += (s, e) =>
        {
            ResendCooldown--;
            if (ResendCooldown <= 0)
            {
                cooldownTimer?.Stop();
            }
            InvokeAsync(StateHasChanged);
        };
        cooldownTimer.Start();
    }

    public void Dispose()
    {
        cooldownTimer?.Dispose();
    }

    private class ForgotPasswordModel
    {
        public string? Email { get; set; }
    }
}
