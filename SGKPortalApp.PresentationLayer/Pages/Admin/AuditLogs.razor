@page "/admin/audit-logs"
@using SGKPortalApp.PresentationLayer.Services.ApiServices.Interfaces.Common
@using SGKPortalApp.BusinessObjectLayer.DTOs.AuditLog
@using SGKPortalApp.BusinessObjectLayer.Enums.Common
@inject IAuditLogApiService AuditLogApiService
@inject NavigationManager NavigationManager

<PageTitle>Audit Log'larƒ± - SGK Portal</PageTitle>

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h3>üìã Audit Log G√∂r√ºnt√ºleme</h3>
            <p class="text-muted">Sistem √ºzerindeki t√ºm deƒüi≈üiklikleri g√∂r√ºnt√ºleyin</p>
        </div>
    </div>

    @* Filtreler *@
    <div class="card mb-3">
        <div class="card-header">
            <h5 class="mb-0">üîç Filtreler</h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Ba≈ülangƒ±√ß Tarihi</label>
                    <input type="date" class="form-control" @bind="Filter.StartDate" @bind:format="yyyy-MM-dd" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Biti≈ü Tarihi</label>
                    <input type="date" class="form-control" @bind="Filter.EndDate" @bind:format="yyyy-MM-dd" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">TC Kimlik No</label>
                    <input type="text" class="form-control" @bind="Filter.TcKimlikNo" placeholder="12345678901" maxlength="11" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Tablo Adƒ±</label>
                    <input type="text" class="form-control" @bind="Filter.TableName" placeholder="Personel" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">ƒ∞≈ülem T√ºr√º</label>
                    <select class="form-select" @bind="Filter.Action">
                        <option value="">T√ºm√º</option>
                        <option value="@DatabaseAction.INSERT">INSERT</option>
                        <option value="@DatabaseAction.UPDATE">UPDATE</option>
                        <option value="@DatabaseAction.DELETE">DELETE</option>
                        <option value="@DatabaseAction.CREATE_COMPLETE">CREATE_COMPLETE</option>
                        <option value="@DatabaseAction.UPDATE_COMPLETE">UPDATE_COMPLETE</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Sayfa Ba≈üƒ±na Kayƒ±t</label>
                    <select class="form-select" @bind="Filter.PageSize">
                        <option value="25">25</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                        <option value="200">200</option>
                    </select>
                </div>
                <div class="col-md-6 d-flex align-items-end">
                    <button class="btn btn-primary me-2" @onclick="LoadLogsAsync" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        Filtrele
                    </button>
                    <button class="btn btn-secondary" @onclick="ResetFilters" disabled="@isLoading">
                        Temizle
                    </button>
                </div>
            </div>
        </div>
    </div>

    @* Sonu√ßlar - Transaction Gruplu G√∂r√ºn√ºm *@
    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Y√ºkleniyor...</span>
            </div>
            <p class="mt-2">Log'lar y√ºkleniyor...</p>
        </div>
    }
    else if (result != null && result.Logs.Any())
    {
        @* Sayfalama √úst *@
        <div class="card mb-2">
            <div class="card-body p-2">
                <div class="d-flex justify-content-between align-items-center">
                    <span class="badge bg-primary">Toplam: @result.TotalCount kayƒ±t</span>
                    <nav>
                        <ul class="pagination pagination-sm mb-0">
                            <li class="page-item @(!result.HasPreviousPage ? "disabled" : "")">
                                <button class="page-link" @onclick="() => GoToPage(result.PageNumber - 1)" disabled="@(!result.HasPreviousPage)">
                                    √ñnceki
                                </button>
                            </li>
                            @for (int i = Math.Max(1, result.PageNumber - 2); i <= Math.Min(result.TotalPages, result.PageNumber + 2); i++)
                            {
                                var pageNum = i;
                                <li class="page-item @(pageNum == result.PageNumber ? "active" : "")">
                                    <button class="page-link" @onclick="() => GoToPage(pageNum)">
                                        @pageNum
                                    </button>
                                </li>
                            }
                            <li class="page-item @(!result.HasNextPage ? "disabled" : "")">
                                <button class="page-link" @onclick="() => GoToPage(result.PageNumber + 1)" disabled="@(!result.HasNextPage)">
                                    Sonraki
                                </button>
                            </li>
                        </ul>
                    </nav>
                    <small class="text-muted">
                        Sayfa @result.PageNumber / @result.TotalPages
                    </small>
                </div>
            </div>
        </div>

        @* Transaction Gruplarƒ± - Hepsi Alt Alta A√ßƒ±k *@
        @foreach (var transactionGroup in GetTransactionGroups())
        {
            var groupLogs = transactionGroup.Logs.OrderBy(l => l.IslemZamani).ToList();
            var firstLog = groupLogs.First();

            <div class="card mb-3 border-primary">
                @* Grup Ba≈ülƒ±ƒüƒ± *@
                <div class="card-header bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-0">
                                üîó ƒ∞≈ülem Grubu #@(transactionGroup.TransactionId?.ToString().Substring(0, 8) ?? "Tekil")
                            </h6>
                            <small class="text-muted">
                                @firstLog.IslemZamaniText - @firstLog.TcKimlikNo
                                @if (transactionGroup.TransactionId.HasValue)
                                {
                                    <span class="badge bg-info ms-2">@groupLogs.Count deƒüi≈üiklik</span>
                                }
                            </small>
                        </div>
                        <div>
                            <small class="text-muted">IP: @(firstLog.IpAddress ?? "-")</small>
                        </div>
                    </div>
                </div>

                @* Grup ƒ∞√ßeriƒüi - Alt Alta A√ßƒ±k *@
                <div class="card-body">
                    @foreach (var log in groupLogs)
                    {
                        <div class="border-start border-3 @GetBorderClass(log.IslemTuru) ps-3 mb-3">
                            @* Log Ba≈ülƒ±ƒüƒ± *@
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div>
                                    <strong>@log.TabloAdi</strong>
                                    <span class="badge @GetActionBadgeClass(log.IslemTuru) ms-2">
                                        @log.IslemTuruText
                                    </span>
                                    @if (log.ChangedFieldCount.HasValue)
                                    {
                                        <span class="badge bg-secondary ms-1">@log.ChangedFieldCount alan</span>
                                    }
                                </div>
                                <div>
                                    <small class="text-muted">@log.StorageTypeText | @log.DataSizeText</small>
                                </div>
                            </div>

                            @* Deƒüi≈üiklik Detaylarƒ± - Eƒüer y√ºklendiyse *@
                            @if (expandedLogIds.Contains(log.DatabaseLogId) && logDetails.ContainsKey(log.DatabaseLogId))
                            {
                                var detail = logDetails[log.DatabaseLogId];

                                @if (detail.FieldChanges.Any())
                                {
                                    <div class="table-responsive">
                                        <table class="table table-sm table-bordered">
                                            <thead class="table-light">
                                                <tr>
                                                    <th style="width: 30%">Alan Adƒ±</th>
                                                    <th style="width: 35%">Eski Deƒüer</th>
                                                    <th style="width: 35%">Yeni Deƒüer</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var change in detail.FieldChanges)
                                                {
                                                    <tr class="@(change.IsChanged ? "table-warning" : "")">
                                                        <td><strong>@change.FieldName</strong></td>
                                                        <td><code>@(change.OldValue ?? "null")</code></td>
                                                        <td><code>@(change.NewValue ?? "null")</code></td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-info alert-sm mb-0">
                                        Detay bilgisi yok
                                    </div>
                                }
                            }
                            else
                            {
                                @* Detay G√∂ster Butonu *@
                                <button class="btn btn-sm btn-outline-primary" @onclick="() => ToggleLogDetail(log.DatabaseLogId)">
                                    <i class="bx bx-show me-1"></i> Detayƒ± G√∂ster
                                </button>
                            }
                        </div>
                    }
                </div>
            </div>
        }

        @* Sayfalama Alt *@
        <div class="card">
            <div class="card-body p-2">
                <nav>
                    <ul class="pagination pagination-sm justify-content-center mb-0">
                        <li class="page-item @(!result.HasPreviousPage ? "disabled" : "")">
                            <button class="page-link" @onclick="() => GoToPage(result.PageNumber - 1)" disabled="@(!result.HasPreviousPage)">
                                √ñnceki
                            </button>
                        </li>
                        @for (int i = Math.Max(1, result.PageNumber - 2); i <= Math.Min(result.TotalPages, result.PageNumber + 2); i++)
                        {
                            var pageNum = i;
                            <li class="page-item @(pageNum == result.PageNumber ? "active" : "")">
                                <button class="page-link" @onclick="() => GoToPage(pageNum)">
                                    @pageNum
                                </button>
                            </li>
                        }
                        <li class="page-item @(!result.HasNextPage ? "disabled" : "")">
                            <button class="page-link" @onclick="() => GoToPage(result.PageNumber + 1)" disabled="@(!result.HasNextPage)">
                                Sonraki
                            </button>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    }
    else if (!isLoading && result != null)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Se√ßili filtrelere uygun kayƒ±t bulunamadƒ±.
        </div>
    }
</div>

@code {
    private AuditLogFilterDto Filter = new()
    {
        StartDate = DateTime.Now.AddDays(-7),
        EndDate = DateTime.Now,
        PageNumber = 1,
        PageSize = 50
    };

    private AuditLogPagedResultDto? result;
    private bool isLoading = false;
    private HashSet<int> expandedLogIds = new();
    private Dictionary<int, AuditLogDetailDto> logDetails = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadLogsAsync();
    }

    private async Task LoadLogsAsync()
    {
        isLoading = true;
        try
        {
            result = await AuditLogApiService.GetLogsAsync(Filter);
            expandedLogIds.Clear();
            logDetails.Clear();
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task GoToPage(int pageNumber)
    {
        if (pageNumber < 1 || pageNumber > (result?.TotalPages ?? 1))
            return;

        Filter.PageNumber = pageNumber;
        await LoadLogsAsync();
    }

    private async Task ToggleLogDetail(int logId)
    {
        if (expandedLogIds.Contains(logId))
        {
            expandedLogIds.Remove(logId);
            logDetails.Remove(logId);
        }
        else
        {
            expandedLogIds.Add(logId);
            var detail = await AuditLogApiService.GetLogDetailAsync(logId);
            if (detail != null)
            {
                logDetails[logId] = detail;
            }
        }
    }

    private void ResetFilters()
    {
        Filter = new AuditLogFilterDto
        {
            StartDate = DateTime.Now.AddDays(-7),
            EndDate = DateTime.Now,
            PageNumber = 1,
            PageSize = 50
        };
    }

    private List<TransactionGroup> GetTransactionGroups()
    {
        if (result == null || !result.Logs.Any())
            return new List<TransactionGroup>();

        return result.Logs
            .GroupBy(l => l.TransactionId ?? Guid.Empty)
            .Select(g => new TransactionGroup
            {
                TransactionId = g.Key == Guid.Empty ? null : g.Key,
                Logs = g.ToList()
            })
            .ToList();
    }

    private string GetActionBadgeClass(DatabaseAction action)
    {
        return action switch
        {
            DatabaseAction.INSERT or DatabaseAction.CREATE_COMPLETE => "bg-success",
            DatabaseAction.UPDATE or DatabaseAction.UPDATE_COMPLETE => "bg-warning text-dark",
            DatabaseAction.DELETE => "bg-danger",
            _ => "bg-secondary"
        };
    }

    private string GetBorderClass(DatabaseAction action)
    {
        return action switch
        {
            DatabaseAction.INSERT or DatabaseAction.CREATE_COMPLETE => "border-success",
            DatabaseAction.UPDATE or DatabaseAction.UPDATE_COMPLETE => "border-warning",
            DatabaseAction.DELETE => "border-danger",
            _ => "border-secondary"
        };
    }

    private class TransactionGroup
    {
        public Guid? TransactionId { get; set; }
        public List<AuditLogDto> Logs { get; set; } = new();
    }
}
