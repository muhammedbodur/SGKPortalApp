<PageTitle>Audit Log'larƒ± - SGK Portal</PageTitle>

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h3>üìã Audit Log G√∂r√ºnt√ºleme</h3>
            <p class="text-muted">Sistem √ºzerindeki t√ºm deƒüi≈üiklikleri g√∂r√ºnt√ºleyin</p>
        </div>
    </div>

    @* Filtreler *@
    <div class="card mb-3">
        <div class="card-header">
            <h5 class="mb-0">üîç Filtreler</h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Ba≈ülangƒ±√ß Tarihi</label>
                    <input type="date" class="form-control" @bind="Filter.StartDate" @bind:format="yyyy-MM-dd" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Biti≈ü Tarihi</label>
                    <input type="date" class="form-control" @bind="Filter.EndDate" @bind:format="yyyy-MM-dd" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">TC Kimlik No</label>
                    <input type="text" class="form-control" @bind="Filter.TcKimlikNo" placeholder="12345678901" maxlength="11" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Tablo Adƒ±</label>
                    <input type="text" class="form-control" @bind="Filter.TableName" placeholder="Personel" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">ƒ∞≈ülem T√ºr√º</label>
                    <select class="form-select" @bind="Filter.Action">
                        <option value="">T√ºm√º</option>
                        <option value="@DatabaseAction.INSERT">INSERT</option>
                        <option value="@DatabaseAction.UPDATE">UPDATE</option>
                        <option value="@DatabaseAction.DELETE">DELETE</option>
                        <option value="@DatabaseAction.CREATE_COMPLETE">CREATE_COMPLETE</option>
                        <option value="@DatabaseAction.UPDATE_COMPLETE">UPDATE_COMPLETE</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Sayfa Ba≈üƒ±na Kayƒ±t</label>
                    <select class="form-select" @bind="Filter.PageSize">
                        <option value="25">25</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                        <option value="200">200</option>
                    </select>
                </div>
                <div class="col-md-6 d-flex align-items-end">
                    <button class="btn btn-primary me-2" @onclick="LoadLogsAsync" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        Filtrele
                    </button>
                    <button class="btn btn-secondary" @onclick="ResetFilters" disabled="@isLoading">
                        Temizle
                    </button>
                </div>
            </div>
        </div>
    </div>

    @* Sonu√ßlar *@
    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Y√ºkleniyor...</span>
            </div>
            <p class="mt-2">Log'lar y√ºkleniyor...</p>
        </div>
    }
    else if (result != null && result.Logs.Any())
    {
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">üìä Sonu√ßlar</h5>
                <span class="badge bg-primary">Toplam: @result.TotalCount kayƒ±t</span>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-sm mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Tarih/Saat</th>
                                <th>Kullanƒ±cƒ±</th>
                                <th>Tablo</th>
                                <th>ƒ∞≈ülem</th>
                                <th>Deƒüi≈üen Alanlar</th>
                                <th>Depolama</th>
                                <th>Boyut</th>
                                <th>IP</th>
                                <th>ƒ∞≈ülemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var log in result.Logs)
                            {
                                <tr>
                                    <td class="text-nowrap">
                                        <small>@log.IslemZamaniText</small>
                                    </td>
                                    <td>
                                        <small>@log.TcKimlikNo</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@log.TabloAdi</span>
                                    </td>
                                    <td>
                                        <span class="badge @GetActionBadgeClass(log.IslemTuru)">
                                            @log.IslemTuruText
                                        </span>
                                    </td>
                                    <td>
                                        @if (log.ChangedFieldCount.HasValue)
                                        {
                                            <small class="text-muted">@log.ChangedFieldCount alan</small>
                                        }
                                        else
                                        {
                                            <small class="text-muted">-</small>
                                        }
                                    </td>
                                    <td>
                                        <small class="text-muted">@log.StorageTypeText</small>
                                    </td>
                                    <td>
                                        <small class="text-muted">@log.DataSizeText</small>
                                    </td>
                                    <td>
                                        <small class="text-muted">@(log.IpAddress ?? "-")</small>
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary" @onclick="() => ShowDetailAsync(log.DatabaseLogId)">
                                            Detay
                                        </button>
                                        @if (log.TransactionId.HasValue)
                                        {
                                            <button class="btn btn-sm btn-outline-secondary ms-1"
                                                    @onclick="() => ShowTransactionLogsAsync(log.TransactionId.Value)">
                                                Grup
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer">
                <nav>
                    <ul class="pagination pagination-sm justify-content-center mb-0">
                        <li class="page-item @(!result.HasPreviousPage ? "disabled" : "")">
                            <button class="page-link" @onclick="() => GoToPage(result.PageNumber - 1)" disabled="@(!result.HasPreviousPage)">
                                √ñnceki
                            </button>
                        </li>

                        @for (int i = Math.Max(1, result.PageNumber - 2); i <= Math.Min(result.TotalPages, result.PageNumber + 2); i++)
                        {
                            var pageNum = i;
                            <li class="page-item @(pageNum == result.PageNumber ? "active" : "")">
                                <button class="page-link" @onclick="() => GoToPage(pageNum)">
                                    @pageNum
                                </button>
                            </li>
                        }

                        <li class="page-item @(!result.HasNextPage ? "disabled" : "")">
                            <button class="page-link" @onclick="() => GoToPage(result.PageNumber + 1)" disabled="@(!result.HasNextPage)">
                                Sonraki
                            </button>
                        </li>
                    </ul>
                </nav>
                <div class="text-center mt-2">
                    <small class="text-muted">
                        Sayfa @result.PageNumber / @result.TotalPages
                        (@result.Logs.Count kayƒ±t g√∂steriliyor)
                    </small>
                </div>
            </div>
        </div>
    }
    else if (!isLoading && result != null)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Se√ßili filtrelere uygun kayƒ±t bulunamadƒ±.
        </div>
    }
</div>

@* Detay Modal *@
@if (selectedDetail != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-xl modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">üìã Audit Log Detayƒ±</h5>
                    <button type="button" class="btn-close" @onclick="CloseDetail"></button>
                </div>
                <div class="modal-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p><strong>Tarih/Saat:</strong> @selectedDetail.IslemZamani.ToLocalTime().ToString("dd.MM.yyyy HH:mm:ss")</p>
                            <p><strong>Kullanƒ±cƒ±:</strong> @selectedDetail.TcKimlikNo</p>
                            <p><strong>Tablo:</strong> @selectedDetail.TabloAdi</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>ƒ∞≈ülem T√ºr√º:</strong> @selectedDetail.IslemTuru</p>
                            <p><strong>Depolama:</strong> @selectedDetail.StorageType</p>
                            <p><strong>IP Adresi:</strong> @(selectedDetail.IpAddress ?? "-")</p>
                        </div>
                    </div>

                    @if (selectedDetail.FieldChanges.Any())
                    {
                        <h6>üîÑ Deƒüi≈üiklikler</h6>
                        <div class="table-responsive">
                            <table class="table table-bordered table-sm">
                                <thead>
                                    <tr>
                                        <th>Alan Adƒ±</th>
                                        <th>Eski Deƒüer</th>
                                        <th>Yeni Deƒüer</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var change in selectedDetail.FieldChanges)
                                    {
                                        <tr class="@(change.IsChanged ? "table-warning" : "")">
                                            <td><strong>@change.FieldName</strong></td>
                                            <td><code>@(change.OldValue ?? "null")</code></td>
                                            <td><code>@(change.NewValue ?? "null")</code></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }

                    @if (selectedDetail.RelatedLogs?.Any() == true)
                    {
                        <h6 class="mt-4">üîó Transaction Grubu</h6>
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Tablo</th>
                                        <th>ƒ∞≈ülem</th>
                                        <th>Tarih/Saat</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var related in selectedDetail.RelatedLogs)
                                    {
                                        <tr>
                                            <td>@related.TabloAdi</td>
                                            <td><span class="badge @GetActionBadgeClass(related.IslemTuru)">@related.IslemTuruText</span></td>
                                            <td>@related.IslemZamaniText</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseDetail">Kapat</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private AuditLogFilterDto Filter = new()
    {
        StartDate = DateTime.Now.AddDays(-7),
        EndDate = DateTime.Now,
        PageNumber = 1,
        PageSize = 50
    };

    private AuditLogPagedResultDto? result;
    private AuditLogDetailDto? selectedDetail;
    private bool isLoading = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadLogsAsync();
    }

    private async Task LoadLogsAsync()
    {
        isLoading = true;
        try
        {
            result = await AuditLogService.GetLogsAsync(Filter);
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task GoToPage(int pageNumber)
    {
        if (pageNumber < 1 || pageNumber > (result?.TotalPages ?? 1))
            return;

        Filter.PageNumber = pageNumber;
        await LoadLogsAsync();
    }

    private async Task ShowDetailAsync(int logId)
    {
        selectedDetail = await AuditLogService.GetLogDetailAsync(logId);
    }

    private async Task ShowTransactionLogsAsync(Guid transactionId)
    {
        Filter.TransactionId = transactionId;
        Filter.PageNumber = 1;
        await LoadLogsAsync();
    }

    private void CloseDetail()
    {
        selectedDetail = null;
    }

    private void ResetFilters()
    {
        Filter = new AuditLogFilterDto
        {
            StartDate = DateTime.Now.AddDays(-7),
            EndDate = DateTime.Now,
            PageNumber = 1,
            PageSize = 50
        };
    }

    private string GetActionBadgeClass(DatabaseAction action)
    {
        return action switch
        {
            DatabaseAction.INSERT or DatabaseAction.CREATE_COMPLETE => "bg-success",
            DatabaseAction.UPDATE or DatabaseAction.UPDATE_COMPLETE => "bg-warning text-dark",
            DatabaseAction.DELETE => "bg-danger",
            _ => "bg-secondary"
        };
    }
}
