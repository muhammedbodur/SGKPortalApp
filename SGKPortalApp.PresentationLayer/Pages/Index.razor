@page "/"
@using SGKPortalApp.PresentationLayer.Components.Common
@using SGKPortalApp.PresentationLayer.Services.ApiServices.Interfaces.Common
@using SGKPortalApp.BusinessObjectLayer.DTOs.Response.Dashboard
@using Microsoft.AspNetCore.Components.Authorization
@inject IDashboardApiService DashboardApi
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>SGK Portal - Ana Sayfa</PageTitle>

<div class="container-xxl flex-grow-1 container-p-y">
    @if (IsLoading)
    {
        <div class="d-flex justify-content-center align-items-center" style="min-height: 400px;">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Yükleniyor...</span>
            </div>
        </div>
    }
    else
    {
        <!-- ====== MAIN CONTENT AREA ====== -->
        <div class="row">
            <!-- ====== LEFT COLUMN (8 cols) ====== -->
            <div class="col-xl-9 col-lg-7">

                <!-- ====== IMAGE SLIDER / CAROUSEL ====== -->
                <div class="card mb-4 shadow-sm slider-card">
                    <div class="card-body p-0">
                        @if (SliderDuyurular.Any())
                        {
                            <div id="duyuruCarousel" class="carousel slide" data-bs-ride="carousel">
                                <div class="carousel-indicators">
                                    @for (int i = 0; i < SliderDuyurular.Count; i++)
                                    {
                                        var index = i;
                                        <button type="button" data-bs-target="#duyuruCarousel" data-bs-slide-to="@index"
                                                class="@(i == 0 ? "active" : "")" aria-current="@(i == 0 ? "true" : "false")"></button>
                                    }
                                </div>
                                <div class="carousel-inner rounded-3">
                                    @for (int i = 0; i < SliderDuyurular.Count; i++)
                                    {
                                        var duyuru = SliderDuyurular[i];
                                        <div class="carousel-item @(i == 0 ? "active" : "")">
                                            <div class="slider-item" style="position: relative;">
                                                <img src="@(duyuru.GorselUrl ?? "/portal/assets/img/elements/18.jpg")"
                                                     class="d-block w-100"
                                                     style="height: 340px; object-fit: cover;"
                                                     alt="@duyuru.Baslik" />
                                                <div class="slider-overlay">
                                                    <div class="slider-content">
                                                        <h4 class="text-white mb-2 fw-bold">@duyuru.Baslik</h4>
                                                        <p class="text-white-50 mb-2 slider-description">
                                                            @(duyuru.Icerik?.Length > 150 ? duyuru.Icerik.Substring(0, 150) + "..." : duyuru.Icerik)
                                                        </p>
                                                        <div class="d-flex justify-content-between align-items-center">
                                                            <span class="text-white-50 small">
                                                                <i class="bx bx-calendar me-1"></i>
                                                                @duyuru.YayinTarihi.ToString("dd.MM.yyyy")
                                                            </span>
                                                            <a href="/duyurular" class="btn btn-sm btn-primary">
                                                                Tüm Haberler <i class="bx bx-chevron-right"></i>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                                <button class="carousel-control-prev" type="button" data-bs-target="#duyuruCarousel" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                </button>
                                <button class="carousel-control-next" type="button" data-bs-target="#duyuruCarousel" data-bs-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                </button>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="bx bx-image-alt bx-lg text-muted mb-3"></i>
                                <p class="text-muted mb-0">Henüz slider duyurusu bulunmuyor.</p>
                            </div>
                        }
                    </div>
                </div>

                <!-- ====== QUICK ACCESS CARDS ====== -->
                <div class="card mb-4 shadow-sm">
                    <div class="card-header border-0 pb-0">
                        <h5 class="mb-0">
                            <i class="bx bx-plus-circle text-primary me-2"></i>
                            Kısa Erişim Kartları
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            @foreach (var program in QuickAccessPrograms)
                            {
                                <div class="col-md-4 col-6">
                                    <a href="@program.Url" target="@(program.Url.StartsWith("http") ? "_blank" : "_self")" class="text-decoration-none">
                                        <div class="quick-access-card p-3 rounded-3 h-100">
                                            <div class="d-flex align-items-start">
                                                <div class="avatar avatar-md me-3 flex-shrink-0">
                                                    <span class="avatar-initial rounded bg-label-@program.Color">
                                                        <i class="bx @program.Icon fs-4"></i>
                                                    </span>
                                                </div>
                                                <div>
                                                    <h6 class="mb-1 fw-semibold text-dark">@program.Name</h6>
                                                    <small class="text-muted">@program.Description</small>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- ====== İZMİR SGK DUYURULARI ====== -->
                <div class="card mb-4 shadow-sm">
                    <div class="card-header d-flex justify-content-between align-items-center border-0">
                        <h5 class="mb-0">
                            <i class="bx bx-news text-info me-2"></i>
                            İzmir SGK Duyuruları
                        </h5>
                        <a href="/duyurular/izmir" class="text-primary small">
                            Tüm Duyurular <i class="bx bx-chevron-right"></i>
                        </a>
                    </div>
                    <div class="card-body pt-0">
                        @if (ListeDuyurular.Any())
                        {
                            <div class="timeline-list">
                                @foreach (var duyuru in ListeDuyurular.Take(4))
                                {
                                    <div class="timeline-item d-flex mb-3 pb-3 border-bottom">
                                        <div class="timeline-icon me-3">
                                            <div class="avatar avatar-sm">
                                                <span class="avatar-initial rounded bg-label-primary">
                                                    <i class="bx bx-file-blank"></i>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="timeline-content flex-grow-1">
                                            <h6 class="mb-1 fw-semibold">@duyuru.Baslik</h6>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <small class="text-muted">
                                                    <i class="bx bx-calendar me-1"></i>
                                                    @duyuru.YayinTarihi.ToString("dd.MM.yyyy")
                                                </small>
                                                <a href="#" class="btn btn-sm btn-outline-secondary">
                                                    ŞUBE <i class="bx bx-chevron-right"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="bx bx-news bx-lg text-muted mb-2"></i>
                                <p class="text-muted mb-0">Henüz duyuru bulunmuyor.</p>
                            </div>
                        }
                    </div>
                </div>

                <!-- ====== SGK GENEL MÜDÜRLÜK DUYURULARI ====== -->
                <div class="card mb-4 shadow-sm">
                    <div class="card-header d-flex justify-content-between align-items-center border-0">
                        <h5 class="mb-0">
                            <i class="bx bx-building-house text-warning me-2"></i>
                            SGK Genel Müdürlük Duyuruları
                        </h5>
                        <a href="/duyurular/genel" class="text-primary small">
                            Tüm Duyurular <i class="bx bx-chevron-right"></i>
                        </a>
                    </div>
                    <div class="card-body pt-0">
                        <div class="table-responsive">
                            <table class="table table-borderless mb-0">
                                <thead>
                                    <tr>
                                        <th class="text-muted small fw-normal">İzmir SGK Duyuruları</th>
                                        <th class="text-muted small fw-normal text-center">Dağıtım</th>
                                        <th class="text-muted small fw-normal text-end">Dağıtım</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (GenelMudurlukDuyurulari.Any())
                                    {
                                        @foreach (var duyuru in GenelMudurlukDuyurulari.Take(4))
                                        {
                                            <tr>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <span class="badge bg-@duyuru.BadgeColor me-2">@duyuru.BadgeText</span>
                                                        <span class="fw-medium">@duyuru.Baslik</span>
                                                    </div>
                                                </td>
                                                <td class="text-center">
                                                    <span class="text-muted">@duyuru.YayinTarihi.ToString("dd.MM.yyyy")</span>
                                                </td>
                                                <td class="text-end">
                                                    <span class="text-muted">@duyuru.YayinTarihi.ToString("dd.MM.yyyy")</span>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="3" class="text-center py-4">
                                                <i class="bx bx-news bx-lg text-muted mb-2 d-block"></i>
                                                <span class="text-muted">Henüz duyuru bulunmuyor.</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ====== RIGHT COLUMN (4 cols) ====== -->
            <div class="col-xl-3 col-lg-5">

                <TakvimWidget />

                <!-- ====== BUGÜN DOĞAN PERSONELLER ====== -->
                <div class="card mb-4 shadow-sm">
                    <div class="card-header border-0">
                        <h5 class="mb-0">
                            <i class="bx bx-cake text-success me-2"></i>
                            Bugün Doğan Personeller
                        </h5>
                    </div>
                    <div class="card-body pt-0">
                        @if (BugunDoganlar.Any())
                        {
                            <div class="birthday-list">
                                @foreach (var personel in BugunDoganlar.Take(4))
                                {
                                    <div class="birthday-item d-flex align-items-center mb-3 p-2 rounded-3 cursor-pointer"
                                         @onclick="@(() => NavigateToPersonel(personel.TcKimlikNo))">
                                        <div class="avatar me-3">
                                            @if (!string.IsNullOrEmpty(personel.Resim))
                                            {
                                                <img src="@personel.Resim" alt="@personel.AdSoyad" class="rounded-circle" />
                                            }
                                            else
                                            {
                                                <span class="avatar-initial rounded-circle bg-label-primary">
                                                    @(personel.AdSoyad?.Length > 0 ? personel.AdSoyad.Substring(0, 1).ToUpper() : "?")
                                                </span>
                                            }
                                        </div>
                                        <div class="flex-grow-1">
                                            <h6 class="mb-0 fw-semibold">@personel.AdSoyad</h6>
                                            <small class="text-muted">@(personel.DepartmanAdi ?? "Birim belirtilmemiş")</small>
                                        </div>
                                        <div class="avatar avatar-sm">
                                            <span class="avatar-initial rounded-circle bg-label-warning">
                                                <i class="bx bx-cake"></i>
                                            </span>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="bx bx-cake bx-lg text-muted mb-2"></i>
                                <p class="text-muted mb-0">Bugün doğum günü olan personel yok.</p>
                            </div>
                        }
                    </div>
                </div>

                <!-- ====== GÜNÜN MENÜSÜ ====== -->
                <div class="card mb-4 shadow-sm">
                    <div class="card-header border-0">
                        <h5 class="mb-0">
                            <i class="bx bx-restaurant text-warning me-2"></i>
                            Günün Menüsü
                        </h5>
                    </div>
                    <div class="card-body pt-0">
                        @if (GununMenusu != null && !string.IsNullOrEmpty(GununMenusu.Icerik))
                        {
                            <ul class="list-unstyled mb-0">
                                @foreach (var item in GetMenuItems())
                                {
                                    <li class="d-flex align-items-center mb-2">
                                        <i class="bx bx-check-circle text-success me-2"></i>
                                        <span>@item</span>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <div class="text-center py-3">
                                <i class="bx bx-dish bx-lg text-muted mb-2"></i>
                                <p class="text-muted mb-0">Bugün için menü bilgisi yok.</p>
                            </div>
                        }
                    </div>
                </div>

                <!-- ====== ÖNEMLİ LİNKLER ====== -->
                <div class="card mb-4 shadow-sm">
                    <div class="card-header border-0">
                        <h5 class="mb-0">
                            <i class="bx bx-link text-info me-2"></i>
                            Önemli Linkler
                        </h5>
                    </div>
                    <div class="card-body pt-0">
                        @if (OnemliLinkler.Any())
                        {
                            <ul class="list-unstyled mb-0">
                                @foreach (var link in OnemliLinkler.Take(7))
                                {
                                    <li class="mb-2">
                                        <a href="@link.Url" target="_blank" class="d-flex align-items-center text-decoration-none text-body link-item p-2 rounded-2">
                                            <i class="bx bx-chevron-right text-primary me-2"></i>
                                            <span>@link.LinkAdi</span>
                                        </a>
                                    </li>
                                }
                            </ul>
                            <div class="text-end mt-3">
                                <a href="/linkler" class="text-primary small">
                                    Tüm Linkler <i class="bx bx-chevron-right"></i>
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-3">
                                <i class="bx bx-link bx-lg text-muted mb-2"></i>
                                <p class="text-muted mb-0">Henüz link tanımlanmamış.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    /* Slider Card */
    .slider-card {
        border-radius: 12px;
        overflow: hidden;
        border: none;
    }

    .slider-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: linear-gradient(to top, rgba(0,0,0,0.9) 0%, rgba(0,0,0,0.5) 50%, transparent 100%);
        padding: 60px 24px 24px;
    }

    .slider-content h4 {
        font-size: 1.25rem;
        line-height: 1.4;
    }

    .slider-description {
        font-size: 0.875rem;
        line-height: 1.5;
    }

    .carousel-control-prev,
    .carousel-control-next {
        width: 48px;
        height: 48px;
        top: 50%;
        transform: translateY(-50%);
        background: rgba(255,255,255,0.9);
        border-radius: 50%;
        opacity: 1;
        margin: 0 16px;
    }

    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        filter: invert(1) grayscale(100);
    }

    .carousel-indicators {
        bottom: 20px;
    }

    .carousel-indicators button {
        width: 10px;
        height: 10px;
        border-radius: 50%;
        margin: 0 4px;
    }

    /* Quick Access Cards */
    .quick-access-card {
        background: #f8f9fa;
        border: 1px solid #e9ecef;
        transition: all 0.3s ease;
    }

    .quick-access-card:hover {
        background: #fff;
        border-color: #696cff;
        box-shadow: 0 4px 20px rgba(105, 108, 255, 0.15);
        transform: translateY(-2px);
    }

    /* Birthday List */
    .birthday-item {
        transition: all 0.2s ease;
    }

    .birthday-item:hover {
        background: rgba(40, 199, 111, 0.08);
    }

    /* Link Items */
    .link-item {
        transition: all 0.2s ease;
    }

    .link-item:hover {
        background: rgba(105, 108, 255, 0.08);
    }

    /* Cards General */
    .card {
        border-radius: 12px;
        border: none;
    }

    .card-header {
        background: transparent;
        padding: 1.25rem 1.5rem;
    }

    .card-body {
        padding: 1.25rem 1.5rem;
    }

    /* Timeline */
    .timeline-item:last-child {
        border-bottom: none !important;
        margin-bottom: 0 !important;
        padding-bottom: 0 !important;
    }

    /* Cursor */
    .cursor-pointer {
        cursor: pointer;
    }

    /* Badge Colors */
    .badge.bg-primary { background-color: #696cff !important; }
    .badge.bg-info { background-color: #03c3ec !important; }
    .badge.bg-warning { background-color: #ffab00 !important; }
    .badge.bg-success { background-color: #71dd37 !important; }
    .badge.bg-danger { background-color: #ff3e1d !important; }

    /* Shadow */
    .shadow-sm {
        box-shadow: 0 2px 6px rgba(67, 89, 113, 0.08) !important;
    }
</style>

@code {
    private bool IsLoading = true;
    private string UserName = "Kullanıcı";
    private List<DuyuruResponseDto> SliderDuyurular = new();
    private List<DuyuruResponseDto> ListeDuyurular = new();
    private List<DuyuruResponseDto> GenelMudurlukDuyurulari = new();
    private List<SikKullanilanProgramResponseDto> SikKullanilanProgramlar = new();
    private List<OnemliLinkResponseDto> OnemliLinkler = new();
    private GununMenusuResponseDto? GununMenusu;
    private List<BugunDoganResponseDto> BugunDoganlar = new();

    // Quick Access Programs (Static for now)
    private List<QuickAccessItem> QuickAccessPrograms = new()
    {
        new QuickAccessItem { Name = "İşveren Uygulama Rehberi", Description = "Güncel Enim Ann Versions", Icon = "bx-book-reader", Color = "primary", Url = "#" },
        new QuickAccessItem { Name = "Tevkifat Kontrol", Description = "e-Rehber", Icon = "bx-check-shield", Color = "info", Url = "#" },
        new QuickAccessItem { Name = "Yetki Talep", Description = "Kobileri", Icon = "bx-key", Color = "warning", Url = "/yetki/talep" },
        new QuickAccessItem { Name = "Destek Talep", Description = "Se sin 3admin", Icon = "bx-support", Color = "success", Url = "/destek" },
        new QuickAccessItem { Name = "Ankara Görüşler", Description = "Merkez İletişim", Icon = "bx-conversation", Color = "danger", Url = "#" },
        new QuickAccessItem { Name = "Daha Fazlası", Description = "Tüm Uygulamalar", Icon = "bx-plus", Color = "secondary", Url = "#" }
    };

    protected override async Task OnInitializedAsync()
    {
        await GetUserName();
        await LoadDashboardData();
    }

    private async Task GetUserName()
    {
        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            if (user.Identity?.IsAuthenticated == true)
            {
                UserName = user.Identity.Name ?? user.FindFirst("name")?.Value ?? "Kullanıcı";
            }
        }
        catch
        {
            UserName = "Kullanıcı";
        }
    }

    private async Task LoadDashboardData()
    {
        try
        {
            IsLoading = true;
            var response = await DashboardApi.GetDashboardDataAsync();

            if (response.Success && response.Data != null)
            {
                SliderDuyurular = response.Data.SliderDuyurular ?? new();
                ListeDuyurular = response.Data.ListeDuyurular ?? new();
                GenelMudurlukDuyurulari = response.Data.ListeDuyurular?.Take(4).Select((d, i) => new DuyuruResponseDto
                {
                    Baslik = d.Baslik,
                    YayinTarihi = d.YayinTarihi,
                    BadgeColor = GetBadgeColor(i),
                    BadgeText = GetBadgeText(i)
                }).ToList() ?? new();
                SikKullanilanProgramlar = response.Data.SikKullanilanProgramlar ?? new();
                OnemliLinkler = response.Data.OnemliLinkler ?? new();
                GununMenusu = response.Data.GununMenusu;
                BugunDoganlar = response.Data.BugunDoganlar ?? new();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Dashboard veri yükleme hatası: {ex.Message}");
        }
        finally
        {
            IsLoading = false;
        }
    }

    private string GetFirstMenuItem()
    {
        if (GununMenusu?.Icerik == null) return "";
        var items = GununMenusu.Icerik.Split(new[] { '\n', '\r', ',', '-' }, StringSplitOptions.RemoveEmptyEntries);
        return items.FirstOrDefault()?.Trim() ?? "";
    }

    private List<string> GetMenuItems()
    {
        if (GununMenusu?.Icerik == null) return new();
        return GununMenusu.Icerik
            .Split(new[] { '\n', '\r' }, StringSplitOptions.RemoveEmptyEntries)
            .Select(x => x.Trim())
            .Where(x => !string.IsNullOrWhiteSpace(x))
            .Take(5)
            .ToList();
    }

    private string GetBadgeColor(int index) => index switch
    {
        0 => "info",
        1 => "warning",
        2 => "success",
        _ => "primary"
    };

    private string GetBadgeText(int index) => index switch
    {
        0 => "Mavi",
        1 => "Turuncu",
        2 => "Yeşil",
        _ => "Genel"
    };

    private void NavigateToPersonel(string tcKimlikNo)
    {
        Navigation.NavigateTo($"/personel/detail/{tcKimlikNo}");
    }

    private class QuickAccessItem
    {
        public string Name { get; set; } = "";
        public string Description { get; set; } = "";
        public string Icon { get; set; } = "";
        public string Color { get; set; } = "";
        public string Url { get; set; } = "#";
    }
}
