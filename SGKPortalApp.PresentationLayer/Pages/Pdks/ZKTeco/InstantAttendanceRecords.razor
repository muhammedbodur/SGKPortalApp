@page "/pdks/zkteco/instant-attendance"
@using SGKPortalApp.BusinessObjectLayer.DTOs.Request.ZKTeco
@using SGKPortalApp.BusinessObjectLayer.DTOs.Response.ZKTeco
@using SGKPortalApp.BusinessObjectLayer.DTOs.Response.Shared.ZKTeco
@using SGKPortalApp.BusinessObjectLayer.Enums.PdksIslemleri
@using SGKPortalApp.PresentationLayer.Components.Permission
@inherits SGKPortalApp.PresentationLayer.Components.Base.FieldPermissionPageBase

<PageTitle>PDKS Attendance Kayƒ±tlarƒ±</PageTitle>

@if (!CanViewPage)
{
    <div class="alert alert-danger" role="alert">
        <i class="bx bx-lock-alt me-2"></i>
        Bu sayfayƒ± g√∂r√ºnt√ºleme yetkiniz bulunmuyor.
    </div>
}
else
{
    <FieldPermissionScope PageKey="@ResolvedPermissionKey" IsEditMode="false">
        <div class="container-fluid">
    <!-- Header -->
    <div class="row mb-3">
        <div class="col">
            <h3>üìã PDKS Anlƒ±k Attendance Kayƒ±tlarƒ±</h3>
            <p class="text-muted">Cihazdan √ßekilen kayƒ±tlar otomatik olarak personel bilgileri ile e≈üle≈ütirilir</p>
        </div>
        <div class="col-auto">
            <div class="d-flex gap-2">
                @if (IsActionVisible("EXCEL_EXPORT"))
                {
                    <button class="btn btn-success" @onclick="ExportToExcel" disabled="@(selectedDeviceId == 0 || IsExporting || filteredRecords.Count == 0)">
                        @if (IsExporting && ExportType == "excel")
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        else
                        {
                            <i class="bx bx-download me-1"></i>
                        }
                        Excel
                    </button>
                }

                @if (IsActionVisible("PDF_EXPORT"))
                {
                    <button class="btn btn-danger" @onclick="ExportToPdf" disabled="@(selectedDeviceId == 0 || IsExporting || filteredRecords.Count == 0)">
                        @if (IsExporting && ExportType == "pdf")
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        else
                        {
                            <i class="bx bxs-file-pdf me-1"></i>
                        }
                        PDF
                    </button>
                }

                <button class="btn btn-primary" @onclick="() => LoadRecords()" disabled="@(selectedDeviceId == 0 || isLoading)">
                    <i class="bx bx-refresh"></i> Yenile
                </button>
            </div>
        </div>
    </div>

    <!-- Device Selection -->
    <div class="card mb-3">
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <label class="form-label">Cihaz Se√ßin *</label>
                    <select class="form-select" @onchange="OnDeviceChanged" disabled="@isLoading">
                        <option value="0">-- Cihaz Se√ßin --</option>
                        @foreach (var device in devices)
                        {
                            <option value="@device.DeviceId" selected="@(device.DeviceId == selectedDeviceId)">
                                @device.DeviceName (@device.IpAddress)
                            </option>
                        }
                    </select>
                </div>
                @if (selectedDeviceId > 0)
                {
                    <div class="col-md-8">
                        <label class="form-label">ƒ∞statistikler</label>
                        <div class="d-flex gap-3">
                            <div class="badge bg-label-primary p-2">
                                Toplam: <strong>@totalCount</strong>
                            </div>
                            <div class="badge bg-label-success p-2">
                                G√∂sterilen: <strong>@filteredRecords.Count</strong>
                            </div>
                            <div class="badge bg-label-info p-2">
                                E≈üle≈üen Personel: <strong>@filteredRecords.Count(r => !string.IsNullOrEmpty(r.PersonelAdSoyad))</strong>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Filters -->
    @if (selectedDeviceId > 0)
    {
        <div class="card mb-3">
            <div class="card-body">
                <h6 class="card-title">üîç Filtreler</h6>
                <div class="row">
                    <div class="col-md-3">
                        <label class="form-label">Ba≈ülangƒ±√ß Tarihi</label>
                        <input type="text" class="form-control flatpickr-date" @bind="startDate" @bind:format="dd.MM.yyyy" @bind:after="ApplyFilters" placeholder="GG.AA.YYYY" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Biti≈ü Tarihi</label>
                        <input type="text" class="form-control flatpickr-date" @bind="endDate" @bind:format="dd.MM.yyyy" @bind:after="ApplyFilters" placeholder="GG.AA.YYYY" />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Kayƒ±t No</label>
                        <input type="text" class="form-control" placeholder="Ara..." @bind="enrollNumberFilter" @bind:event="oninput" @onkeyup="ApplyFilters" />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Sicil No</label>
                        <input type="text" class="form-control" placeholder="Ara..." @bind="sicilNoFilter" @bind:event="oninput" @onkeyup="ApplyFilters" />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">TC Kimlik No</label>
                        <input type="text" class="form-control" placeholder="Ara..." @bind="tcKimlikNoFilter" @bind:event="oninput" @onkeyup="ApplyFilters" />
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col">
                        <button class="btn btn-sm btn-outline-secondary" @onclick="ClearFilters">
                            <i class="bx bx-x"></i> Filtreleri Temizle
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Y√ºkleniyor...</span>
            </div>
            <p class="mt-2">Kayƒ±tlar y√ºkleniyor...</p>
        </div>
    }
    else if (selectedDeviceId == 0)
    {
        <div class="alert alert-info">
            <i class="bx bx-info-circle me-2"></i>
            L√ºtfen yukarƒ±dan bir cihaz se√ßin
        </div>
    }
    else if (!filteredRecords.Any())
    {
        <div class="alert alert-warning">
            <i class="bx bx-search-alt me-2"></i>
            Kayƒ±t bulunamadƒ±
        </div>
    }
    else
    {
        <!-- Records Table -->
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover table-sm">
                        <thead>
                            <tr>
                                <th>Kayƒ±t No</th>
                                <th>Tarih/Saat</th>
                                <th>Personel</th>
                                <th>Sicil No</th>
                                <th>TC Kimlik No</th>
                                <th>Departman</th>
                                <th>Servis</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var record in pagedRecords)
                            {
                                <tr class="@(string.IsNullOrEmpty(record.PersonelAdSoyad) ? "table-warning" : "")">
                                    <td><code>@record.EnrollNumber</code></td>
                                    <td>
                                        <div>@record.DateTime.ToString("dd.MM.yyyy")</div>
                                        <small class="text-muted">@record.DateTime.ToString("HH:mm:ss")</small>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(record.PersonelAdSoyad))
                                        {
                                            <strong>@record.PersonelAdSoyad</strong>
                                        }
                                        else
                                        {
                                            <span class="text-muted">
                                                <i class="bx bx-user-x"></i> E≈üle≈ümedi
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(record.PersonelSicilNo))
                                        {
                                            <span class="badge bg-label-secondary">@record.PersonelSicilNo</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(record.PersonelTcKimlikNo))
                                        {
                                            <code class="text-primary">@record.PersonelTcKimlikNo</code>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <small class="text-muted">@(record.PersonelDepartman ?? "-")</small>
                                    </td>
                                    <td>
                                        <small class="text-muted">@(record.PersonelServis ?? "-")</small>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (totalPages > 1)
                {
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <div>
                            <span class="text-muted">Sayfa @currentPage / @totalPages (Toplam: @filteredRecords.Count kayƒ±t)</span>
                        </div>
                        <nav>
                            <ul class="pagination pagination-sm mb-0">
                                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                    <button class="page-link" @onclick="PreviousPage" disabled="@(currentPage == 1)">
                                        <i class="bx bx-chevron-left"></i>
                                    </button>
                                </li>

                                @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                                {
                                    var pageNum = i;
                                    <li class="page-item @(currentPage == pageNum ? "active" : "")">
                                        <button class="page-link" @onclick="() => GoToPage(pageNum)">
                                            @pageNum
                                        </button>
                                    </li>
                                }

                                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                    <button class="page-link" @onclick="NextPage" disabled="@(currentPage == totalPages)">
                                        <i class="bx bx-chevron-right"></i>
                                    </button>
                                </li>
                            </ul>
                        </nav>
                    </div>
                }
            </div>
        </div>
    }
        </div>
    </FieldPermissionScope>
}
