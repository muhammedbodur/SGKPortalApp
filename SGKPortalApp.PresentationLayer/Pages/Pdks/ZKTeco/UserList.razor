<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h3>ðŸ‘¥ ZKTeco KullanÄ±cÄ± YÃ¶netimi</h3>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-auto">
            <select class="form-select" @onchange="OnDeviceChanged">
                <option value="">TÃ¼m KullanÄ±cÄ±lar</option>
                @if (devices != null)
                {
                    @foreach (var device in devices)
                    {
                        <option value="@device.Id">@device.DeviceName (@device.IpAddress)</option>
                    }
                }
            </select>
        </div>
        <div class="col-auto">
            <button class="btn btn-success" @onclick="SyncFromDevice" disabled="@(selectedDeviceId == 0)">
                <i class="bx bx-download"></i> Cihazdan Senkronize Et
            </button>
        </div>
    </div>

    @if (users == null)
    {
        <p><em>YÃ¼kleniyor...</em></p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Sicil No</th>
                        <th>Ad Soyad</th>
                        <th>Kart No</th>
                        <th>Yetki</th>
                        <th>Durum</th>
                        <th>Son Sync</th>
                        <th>Ä°ÅŸlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in users)
                    {
                        <tr>
                            <td>@user.EnrollNumber</td>
                            <td>@user.Name</td>
