@page "/pdks/zkteco/users"
@using SGKPortalApp.BusinessObjectLayer.DTOs.Response.PersonelIslemleri
@using SGKPortalApp.PresentationLayer.Services.ApiServices.Interfaces.Personel
@using SGKPortalApp.PresentationLayer.Services.UIServices.Interfaces
@inject IPersonelApiService _personelApiService
@inject IToastService _toastService

<PageTitle>PDKS Kullanıcıları - SGK Portal</PageTitle>

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold mb-1">
                <i class="bx bx-user me-2"></i>PDKS Kullanıcıları
            </h4>
            <p class="text-muted mb-0">
                Personel listesi ve PDKS kayıt bilgileri
            </p>
        </div>
    </div>

    @if (IsLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Yükleniyor...</span>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Sicil No</th>
                                <th>Ad Soyad</th>
                                <th>Departman</th>
                                <th>Kayıt No</th>
                                <th>Kart No</th>
                                <th>Durum</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var personel in Personeller)
                            {
                                <tr>
                                    <td>@personel.SicilNo</td>
                                    <td>@personel.AdSoyad</td>
                                    <td>@personel.DepartmanAdi</td>
                                    <td>-</td>
                                    <td>-</td>
                                    <td>
                                        <span class="badge bg-label-@(personel.PersonelAktiflikDurum == BusinessObjectLayer.Enums.PersonelIslemleri.PersonelAktiflikDurum.Aktif ? "success" : "secondary")">
                                            @personel.PersonelAktiflikDurum
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
