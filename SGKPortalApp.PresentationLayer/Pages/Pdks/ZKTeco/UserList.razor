@page "/pdks/zkteco/users"
@using SGKPortalApp.BusinessObjectLayer.DTOs.ZKTeco
@using System.Net.Http.Json
@inject HttpClient Http
@inject IConfiguration Configuration
@inject IJSRuntime JS

