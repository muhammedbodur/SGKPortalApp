@page "/pdks/mesai/listele"
@using SGKPortalApp.BusinessObjectLayer.DTOs.Response.PdksIslemleri
@using SGKPortalApp.Common.Extensions
@using SGKPortalApp.PresentationLayer.Components.Permission
@inherits SGKPortalApp.PresentationLayer.Components.Base.FieldPermissionPageBase

<PageTitle>Mesai Listeleme - SGK Portal</PageTitle>

@if (!CanViewPage)
{
    <div class="alert alert-danger" role="alert">
        <i class="bx bx-lock-alt me-2"></i>
        Bu sayfayı görüntüleme yetkiniz bulunmuyor.
    </div>
}
else
{
    <FieldPermissionScope PageKey="@ResolvedPermissionKey" IsEditMode="false">
        <div class="container-xxl flex-grow-1 container-p-y">
            <!-- Başlık Bilgileri -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bx bx-user"></i> Personel Bilgileri
                    </h5>
                    <div class="btn-group">
                        @if (IsActionVisible("EXCEL_EXPORT"))
                        {
                            <button class="btn btn-success btn-sm" @onclick="ExportToExcel" disabled="@IsExporting">
                                @if (IsExporting && ExportType == "excel")
                                {
                                    <span class="spinner-border spinner-border-sm me-1"></span>
                                }
                                else
                                {
                                    <i class="bx bx-file me-1"></i>
                                }
                                Excel
                            </button>
                        }
                        @if (IsActionVisible("PDF_EXPORT"))
                        {
                            <button class="btn btn-danger btn-sm" @onclick="ExportToPdf" disabled="@IsExporting">
                                @if (IsExporting && ExportType == "pdf")
                                {
                                    <span class="spinner-border spinner-border-sm me-1"></span>
                                }
                                else
                                {
                                    <i class="bx bxs-file-pdf me-1"></i>
                                }
                                PDF
                            </button>
                        }
                    </div>
                </div>
        <div class="card-body">
            @if (BaslikBilgi != null)
            {
                <div class="row">
                    <div class="col-md-4">
                        <strong>Adı Soyadı:</strong> @BaslikBilgi.AdSoyad
                    </div>
                    <div class="col-md-4">
                        <strong>Sicil No:</strong> @BaslikBilgi.SicilNo
                    </div>
                    <div class="col-md-4">
                        <strong>Departman:</strong> @BaslikBilgi.DepartmanAdi
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Filtre -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <label class="form-label">Başlangıç Tarihi</label>
                    <input type="text" class="form-control flatpickr-date" @bind="baslangicTarihi" @bind:format="dd.MM.yyyy" placeholder="GG.AA.YYYY" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Bitiş Tarihi</label>
                    <input type="text" class="form-control flatpickr-date" @bind="bitisTarihi" @bind:format="dd.MM.yyyy" placeholder="GG.AA.YYYY" />
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button class="btn btn-primary w-100" @onclick="LoadMesaiList" disabled="@IsLoading">
                        @if (IsLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        <i class="bx bx-search"></i> Listele
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Mesai Listesi -->
    @if (IsLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Yükleniyor...</span>
            </div>
        </div>
    }
    else if (MesaiListesi.Any())
    {
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <h5 class="mb-0">Mesai Kayıtları</h5>
                <span class="badge bg-label-primary">@MesaiListesi.Count kayıt</span>
            </div>
            <div class="table-responsive">
                <table class="table table-sm table-hover">
                    <thead>
                        <tr>
                            <th>Tarih</th>
                            <th>Sicil No</th>
                            <th>Departman</th>
                            <th>Servis</th>
                            <th>Giriş S.</th>
                            <th>Çıkış S.</th>
                            <th>Mesai Süresi</th>
                            <th>Detay</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var kayit in MesaiListesi)
                        {
                            var satirClass = kayit.HaftaSonu ? "table-info" :
                                           kayit.GecKalma ? "table-danger" : "";

                            <tr class="@satirClass">
                                <td>@kayit.Tarih.ToString("dd.MM.yyyy")</td>
                                <td>@kayit.SicilNo</td>
                                <td>@kayit.DepartmanAdi</td>
                                <td>@kayit.ServisAdi</td>
                                <td>@FormatSaat(kayit.GirisSaati)</td>
                                <td>@FormatSaat(kayit.CikisSaati)</td>
                                <td>@kayit.MesaiSuresi</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(kayit.Detay))
                                    {
                                        <span class="badge bg-label-warning">@kayit.Detay</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else if (!IsLoading)
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bx bx-calendar-x display-1 text-muted"></i>
                <h5 class="mt-3">Kayıt Bulunamadı</h5>
                <p class="text-muted">Seçilen tarih aralığında mesai kaydı bulunamadı.</p>
            </div>
        </div>
    }
        </div>
    </FieldPermissionScope>
}
