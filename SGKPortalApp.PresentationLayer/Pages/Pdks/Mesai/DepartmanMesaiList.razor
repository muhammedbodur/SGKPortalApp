@page "/pdks/mesai/departman-rapor"
@using SGKPortalApp.BusinessObjectLayer.DTOs.Response.PdksIslemleri
@using SGKPortalApp.PresentationLayer.Components.Permission
@inherits SGKPortalApp.PresentationLayer.Components.Base.FieldPermissionPageBase

<PageTitle>Departman Mesai Raporu - SGK Portal</PageTitle>

@if (!CanViewPage)
{
    <div class="alert alert-danger" role="alert">
        <i class="bx bx-lock-alt me-2"></i>
        Bu sayfayı görüntüleme yetkiniz bulunmuyor.
    </div>
}
else
{
    <FieldPermissionScope PageKey="@ResolvedPermissionKey" IsEditMode="false">
        <div class="container-xxl flex-grow-1 container-p-y">
            <!-- Başlık -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bx bx-building"></i> Departman Bazlı Mesai Raporu
                    </h5>
                    <div class="btn-group">
                        @if (IsActionVisible("EXCEL_EXPORT"))
                        {
                            <button class="btn btn-success btn-sm" @onclick="ExportToExcel" disabled="@IsExporting">
                                @if (IsExporting && ExportType == "excel")
                                {
                                    <span class="spinner-border spinner-border-sm me-1"></span>
                                }
                                else
                                {
                                    <i class="bx bx-file me-1"></i>
                                }
                                Excel
                            </button>
                        }
                        @if (IsActionVisible("PDF_EXPORT"))
                        {
                            <button class="btn btn-danger btn-sm" @onclick="ExportToPdf" disabled="@IsExporting">
                                @if (IsExporting && ExportType == "pdf")
                                {
                                    <span class="spinner-border spinner-border-sm me-1"></span>
                                }
                                else
                                {
                                    <i class="bx bxs-file-pdf me-1"></i>
                                }
                                PDF
                            </button>
                        }
                    </div>
                </div>
            </div>

    <!-- Filtre -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                @if (IsFieldVisibleInList("DEPARTMANID"))
                {
                    <div class="col-md-3">
                        <label class="form-label">
                            <i class="bx bx-briefcase me-1"></i>Departman *
                            @if (!CanEditFieldInList("DEPARTMANID"))
                            {
                                <span class="badge bg-label-warning ms-1" title="Sadece görüntüleme yetkiniz var">
                                    <i class="bx bx-lock-alt"></i>
                                </span>
                            }
                        </label>
                        <select class="form-select" value="@filterDepartmanId" @onchange="OnDepartmanChangedEvent" disabled="@IsFieldDisabledInList("DEPARTMANID")" required>
                            <option value="">Seçiniz...</option>
                            @foreach (var departman in Departmanlar)
                            {
                                <option value="@departman.DepartmanId">@departman.DepartmanAdi</option>
                            }
                        </select>
                    </div>
                }
                @if (IsFieldVisibleInList("SERVISID"))
                {
                    <div class="col-md-3">
                        <label class="form-label">
                            <i class="bx bx-sitemap me-1"></i>Servis
                            @if (!CanEditFieldInList("SERVISID"))
                            {
                                <span class="badge bg-label-warning ms-1" title="Sadece görüntüleme yetkiniz var">
                                    <i class="bx bx-lock-alt"></i>
                                </span>
                            }
                        </label>
                        <select class="form-select" value="@filterServisId" @onchange="OnServisChangedEvent" disabled="@IsFieldDisabledInList("SERVISID")">
                            <option value="">Tümü</option>
                            @foreach (var servis in Servisler)
                            {
                                <option value="@servis.ServisId">@servis.ServisAdi</option>
                            }
                        </select>
                    </div>
                }
                <div class="col-md-2">
                    <label class="form-label">Başlangıç Tarihi</label>
                    <input type="text" class="form-control flatpickr-date" @bind="baslangicTarihi" @bind:format="dd.MM.yyyy" placeholder="GG.AA.YYYY" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Bitiş Tarihi</label>
                    <input type="text" class="form-control flatpickr-date" @bind="bitisTarihi" @bind:format="dd.MM.yyyy" placeholder="GG.AA.YYYY" />
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button class="btn btn-primary w-100" @onclick="LoadReport" disabled="@IsLoading">
                        @if (IsLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        <i class="bx bx-bar-chart"></i> Rapor Oluştur
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Rapor -->
    @if (IsLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Yükleniyor...</span>
            </div>
        </div>
    }
    else if (Report != null && Report.Personeller.Any())
    {
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-0">@Report.DepartmanAdi @(Report.ServisAdi != null ? $" - {Report.ServisAdi}" : "")</h5>
                    <small class="text-muted">
                        @Report.BaslangicTarihi.ToString("dd.MM.yyyy") - @Report.BitisTarihi.ToString("dd.MM.yyyy")
                    </small>
                </div>
                <span class="badge bg-label-primary">@Report.Personeller.Count personel</span>
            </div>
            <div class="table-responsive">
                <table class="table table-sm table-hover">
                    <thead>
                        <tr>
                            <th style="width: 30px;"></th>
                            <th>Sicil</th>
                            <th>Ad Soyad</th>
                            <th>Departman</th>
                            <th>Servis</th>
                            <th class="text-center">Toplam Gün</th>
                            <th class="text-center">Çalışılan</th>
                            <th class="text-center">İzinli</th>
                            <th class="text-center">Mazeretli</th>
                            <th class="text-center">Devamsız</th>
                            <th class="text-center">H.Sonu</th>
                            <th class="text-center">Geç</th>
                            <th class="text-end">Toplam Süre</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var personel in Report.Personeller)
                        {
                            var detayAcik = ExpandedRows.Contains(personel.TcKimlikNo);

                            <tr class="@(detayAcik ? "table-active" : "")">
                                <td>
                                    <button class="btn btn-sm btn-link p-0"
                                            @onclick="() => ToggleRow(personel.TcKimlikNo)">
                                        <i class="bx @(detayAcik ? "bx-chevron-down" : "bx-chevron-right")"></i>
                                    </button>
                                </td>
                                <td>@personel.SicilNo</td>
                                <td>@personel.AdSoyad</td>
                                <td><small>@personel.DepartmanAdi</small></td>
                                <td><small>@personel.ServisAdi</small></td>
                                <td class="text-center">@personel.ToplamGun</td>
                                <td class="text-center">
                                    <span class="badge bg-label-success">@personel.CalistigiGun</span>
                                </td>
                                <td class="text-center">
                                    @if (personel.IzinliGun > 0)
                                    {
                                        <span class="badge bg-label-info">@personel.IzinliGun</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (personel.MazeretliGun > 0)
                                    {
                                        <span class="badge bg-label-warning">@personel.MazeretliGun</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (personel.DevamsizGun > 0)
                                    {
                                        <span class="badge bg-label-danger">@personel.DevamsizGun</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (personel.HaftaSonuCalisma > 0)
                                    {
                                        <span class="badge bg-label-primary">@personel.HaftaSonuCalisma</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (personel.GecKalma > 0)
                                    {
                                        <span class="badge bg-label-danger">@personel.GecKalma</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <strong>@personel.ToplamMesaiSuresi</strong>
                                </td>
                            </tr>

                            @if (detayAcik)
                            {
                                <tr>
                                    <td colspan="13" class="p-0">
                                        <div class="p-3 bg-light">
                                            <h6 class="mb-3">Günlük Detay - @personel.AdSoyad</h6>
                                            <div class="table-responsive">
                                                <table class="table table-sm table-bordered mb-0">
                                                    <thead>
                                                        <tr>
                                                            <th>Tarih</th>
                                                            <th>Gün</th>
                                                            <th>Giriş</th>
                                                            <th>Çıkış</th>
                                                            <th>Süre</th>
                                                            <th>Durum</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var gun in personel.GunlukDetay)
                                                        {
                                                            var satirClass = gun.HaftaSonu ? "table-info" :
                                                                           gun.GecKalma ? "table-danger" : "";

                                                            <tr class="@satirClass">
                                                                <td>@gun.Tarih.ToString("dd.MM.yyyy")</td>
                                                                <td>@GetGunAdi(gun.Tarih.DayOfWeek)</td>
                                                                <td>@FormatSaat(gun.GirisSaati)</td>
                                                                <td>@FormatSaat(gun.CikisSaati)</td>
                                                                <td>@gun.MesaiSuresi</td>
                                                                <td>
                                                                    @if (!string.IsNullOrEmpty(gun.Durum))
                                                                    {
                                                                        <span class="badge bg-label-warning">@gun.Durum</span>
                                                                    }
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else if (!IsLoading)
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bx bx-bar-chart-alt-2 display-1 text-muted"></i>
                <h5 class="mt-3">Rapor Bulunamadı</h5>
                <p class="text-muted">Lütfen filtre kriterlerini seçip "Rapor Oluştur" butonuna tıklayın.</p>
            </div>
        </div>
    }
        </div>
    </FieldPermissionScope>
}
