@page "/pdks/devamsizlik"
@using SGKPortalApp.BusinessObjectLayer.DTOs.Response.PdksIslemleri
@using SGKPortalApp.BusinessObjectLayer.Enums.PdksIslemleri
@inherits SGKPortalApp.PresentationLayer.Components.Base.FieldPermissionPageBase

<PageTitle>Devamsızlık/Mazeret Yönetimi - SGK Portal</PageTitle>

<div class="container-xxl flex-grow-1 container-p-y">
    <!-- Başlık -->
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="bx bx-calendar-exclamation"></i> Devamsızlık/Mazeret Yönetimi
            </h5>
            <button class="btn btn-primary btn-sm" @onclick="ShowCreateModal">
                <i class="bx bx-plus"></i> Yeni Kayıt
            </button>
        </div>
    </div>

    <!-- Filtre -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <label class="form-label">Başlangıç Tarihi</label>
                    <input type="date" class="form-control" @bind="filterBaslangic" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Bitiş Tarihi</label>
                    <input type="date" class="form-control" @bind="filterBitis" />
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" @bind="sadeceOnayBekleyenler" />
                        <label class="form-check-label">Sadece Onay Bekleyenler</label>
                    </div>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button class="btn btn-primary w-100" @onclick="LoadList" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        <i class="bx bx-search"></i> Listele
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Liste -->
    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Yükleniyor...</span>
            </div>
        </div>
    }
    else if (list.Any())
    {
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <h5 class="mb-0">Kayıtlar</h5>
                <span class="badge bg-label-primary">@list.Count kayıt</span>
            </div>
            <div class="table-responsive">
                <table class="table table-sm table-hover">
                    <thead>
                        <tr>
                            <th>Tarih</th>
                            <th>Sicil</th>
                            <th>Ad Soyad</th>
                            <th>Tür</th>
                            <th>Dönem</th>
                            <th>Açıklama</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var kayit in list)
                        {
                            <tr>
                                <td><small>@kayit.OlusturmaTarihi.ToString("dd.MM.yyyy HH:mm")</small></td>
                                <td>@kayit.SicilNo</td>
                                <td>@kayit.AdSoyad</td>
                                <td>
                                    <span class="badge bg-label-info">@kayit.TuruAdi</span>
                                </td>
                                <td>
                                    @if (kayit.MazeretTarihi.HasValue)
                                    {
                                        <span>@kayit.MazeretTarihi.Value.ToString("dd.MM.yyyy")</span>
                                        @if (kayit.SaatDilimiAdi != null)
                                        {
                                            <small class="text-muted"> (@kayit.SaatDilimiAdi)</small>
                                        }
                                    }
                                    else if (kayit.BaslangicTarihi.HasValue && kayit.BitisTarihi.HasValue)
                                    {
                                        <span>@kayit.BaslangicTarihi.Value.ToString("dd.MM") - @kayit.BitisTarihi.Value.ToString("dd.MM.yyyy")</span>
                                    }
                                </td>
                                <td><small>@kayit.Aciklama</small></td>
                                <td>
                                    @if (kayit.OnayDurumu)
                                    {
                                        <span class="badge bg-label-success">Onaylandı</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-label-warning">Onay Bekliyor</span>
                                    }
                                </td>
                                <td>
                                    @if (!kayit.OnayDurumu)
                                    {
                                        <button class="btn btn-sm btn-outline-success me-1"
                                                @onclick="() => OnaylaKayit(kayit.Id)"
                                                title="Onayla">
                                            <i class="bx bx-check"></i>
                                        </button>
                                    }
                                    <button class="btn btn-sm btn-outline-danger"
                                            @onclick="() => SilKayit(kayit.Id)"
                                            title="Sil">
                                        <i class="bx bx-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else if (!isLoading)
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bx bx-calendar-x display-1 text-muted"></i>
                <h5 class="mt-3">Kayıt Bulunamadı</h5>
                <p class="text-muted">Seçilen kriterlere uygun kayıt bulunamadı.</p>
            </div>
        </div>
    }
</div>

<!-- Create Modal -->
@if (showModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Yeni Devamsızlık/Mazeret Kaydı</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Tür *</label>
                        <select class="form-select" @bind="newKayit.Turu">
                            @foreach (IzinMazeretTuru tur in Enum.GetValues(typeof(IzinMazeretTuru)))
                            {
                                <option value="@tur">@tur</option>
                            }
                        </select>
                    </div>

                    @if (newKayit.Turu == IzinMazeretTuru.Mazeret)
                    {
                        <div class="mb-3">
                            <label class="form-label">Mazeret Tarihi *</label>
                            <input type="date" class="form-control" @bind="newKayit.MazeretTarihi" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Saat Dilimi</label>
                            <select class="form-select" @bind="newKayit.SaatDilimi">
                                <option value="">Seçiniz...</option>
                                @foreach (SaatDilimi dilim in Enum.GetValues(typeof(SaatDilimi)))
                                {
                                    <option value="@dilim">@dilim</option>
                                }
                            </select>
                        </div>
                    }
                    else
                    {
                        <div class="mb-3">
                            <label class="form-label">Başlangıç Tarihi *</label>
                            <input type="date" class="form-control" @bind="newKayit.BaslangicTarihi" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Bitiş Tarihi *</label>
                            <input type="date" class="form-control" @bind="newKayit.BitisTarihi" />
                        </div>
                    }

                    <div class="mb-3">
                        <label class="form-label">Açıklama</label>
                        <textarea class="form-control" rows="3" @bind="newKayit.Aciklama"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseModal">İptal</button>
                    <button type="button" class="btn btn-primary" @onclick="CreateKayit" disabled="@isSaving">
                        @if (isSaving)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        Kaydet
                    </button>
                </div>
            </div>
        </div>
    </div>
}
