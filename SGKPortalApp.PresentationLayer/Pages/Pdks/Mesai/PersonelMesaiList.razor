@page "/pdks/mesai/personel-listesi"
@using SGKPortalApp.BusinessObjectLayer.DTOs.Response.PdksIslemleri
@using SGKPortalApp.PresentationLayer.Components.Permission
@inherits SGKPortalApp.PresentationLayer.Components.Base.FieldPermissionPageBase

<PageTitle>Personel Mesai Listesi - SGK Portal</PageTitle>

@if (!CanViewPage)
{
    <div class="alert alert-danger" role="alert">
        <i class="bx bx-lock-alt me-2"></i>
        Bu sayfayı görüntüleme yetkiniz bulunmuyor.
    </div>
}
else
{
    <FieldPermissionScope PageKey="@ResolvedPermissionKey" IsEditMode="false">
        <div class="container-xxl flex-grow-1 container-p-y">
            <!-- Başlık -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bx bx-user-check"></i> Personel Mesai Listesi
                    </h5>
                    <div class="d-flex gap-2">
                        <button class="btn btn-success" @onclick="ExportToExcel" disabled="@IsExporting">
                            @if (IsExporting && ExportType == "excel")
                            {
                                <span class="spinner-border spinner-border-sm me-1"></span>
                            }
                            else
                            {
                                <i class="bx bx-download me-1"></i>
                            }
                            Excel
                        </button>
                        <button class="btn btn-danger" @onclick="ExportToPdf" disabled="@IsExporting">
                            @if (IsExporting && ExportType == "pdf")
                            {
                                <span class="spinner-border spinner-border-sm me-1"></span>
                            }
                            else
                            {
                                <i class="bx bxs-file-pdf me-1"></i>
                            }
                            PDF
                        </button>
                    </div>
                </div>
            </div>

    <!-- Filtre -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <label class="form-label">Departman</label>
                    <select class="form-select" value="@filterDepartmanId" @onchange="OnDepartmanChangedEvent">
                        <option value="">Tümü</option>
                        @foreach (var dept in Departmanlar)
                        {
                            <option value="@dept.DepartmanId">@dept.DepartmanAdi</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Servis</label>
                    <select class="form-select" value="@filterServisId" @onchange="OnServisChangedEvent">
                        <option value="">Tümü</option>
                        @foreach (var servis in Servisler)
                        {
                            <option value="@servis.ServisId">@servis.ServisAdi</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Arama (Ad/Sicil)</label>
                    <input type="text" class="form-control" @bind="searchTerm" placeholder="Ad soyad veya sicil no" />
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button class="btn btn-primary w-100" @onclick="LoadPersonelList" disabled="@IsLoading">
                        @if (IsLoading)
                        {
                            <span class="spinner-border spinner-border-sm"></span>
                        }
                        else
                        {
                            <i class="bx bx-search"></i>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Personel Listesi -->
    @if (IsLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Yükleniyor...</span>
            </div>
        </div>
    }
    else if (Personeller.Any())
    {
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <h5 class="mb-0">Personeller</h5>
                <span class="badge bg-label-primary">@Personeller.Count kayıt</span>
            </div>
            <div class="table-responsive">
                <table class="table table-sm table-hover">
                    <thead>
                        <tr>
                            <th>Sicil No</th>
                            <th>Ad Soyad</th>
                            <th>Departman</th>
                            <th>Servis</th>
                            <th>Email</th>
                            <th>Cep Telefonu</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var personel in Personeller)
                        {
                            <tr class="@(personel.PersonelAktiflikDurum == SGKPortalApp.BusinessObjectLayer.Enums.PersonelIslemleri.PersonelAktiflikDurum.Aktif ? "" : "table-secondary")">
                                <td>@personel.SicilNo</td>
                                <td>@personel.AdSoyad</td>
                                <td>@personel.DepartmanAdi</td>
                                <td>@personel.ServisAdi</td>
                                <td><small>@personel.Email</small></td>
                                <td>@personel.CepTelefonu</td>
                                <td>
                                    <a href="/pdks/mesai/listele?tc=@personel.TcKimlikNo"
                                       class="btn btn-sm btn-outline-primary"
                                       title="Mesai Detayı">
                                        <i class="bx bx-calendar"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else if (!IsLoading)
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bx bx-user-x display-1 text-muted"></i>
                <h5 class="mt-3">Kayıt Bulunamadı</h5>
                <p class="text-muted">Seçilen kriterlere uygun personel bulunamadı.</p>
            </div>
        </div>
    }
        </div>
    </FieldPermissionScope>
}
