@page "/pdks/giris-cikis/realtime"
@using SGKPortalApp.PresentationLayer.Components.Permission
@inherits SGKPortalApp.PresentationLayer.Components.Base.FieldPermissionPageBase

<PageTitle>PDKS Realtime İzleme</PageTitle>

@if (!CanViewPage)
{
    <div class="alert alert-danger" role="alert">
        <i class="bx bx-lock-alt me-2"></i>
        Bu sayfayı görüntüleme yetkiniz bulunmuyor.
    </div>
}
else
{
    <FieldPermissionScope PageKey="@ResolvedPermissionKey" IsEditMode="false">
        <div class="container-fluid">
    <div class="row mb-3">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="mb-0">
                        <i class="bi bi-broadcast"></i>
                        PDKS Realtime İzleme
                    </h3>
                    <small class="text-muted">ZKTeco cihazlarından gelen giriş/çıkış kayıtlarını canlı izleyin</small>
                </div>
                <div class="d-flex align-items-center gap-2">
                    @if (IsConnected)
                    {
                        <span class="badge bg-success pulse">
                            <i class="bi bi-wifi"></i> SignalR Bağlı
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-danger">
                            <i class="bi bi-wifi-off"></i> SignalR Bağlantı Yok
                        </span>
                    }
                    @if (!IsLoadingDevices)
                    {
                        <span class="badge bg-info">
                            <i class="bi bi-broadcast"></i> @MonitoringDevices.Count Cihaz İzleniyor
                        </span>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- İstatistikler -->
    <div class="row mb-3">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h6 class="card-title">Toplam Event</h6>
                    <h3 class="mb-0">@TotalEvents</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h6 class="card-title">Giriş</h6>
                    <h3 class="mb-0">@CheckInCount</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h6 class="card-title">Çıkış</h6>
                    <h3 class="mb-0">@CheckOutCount</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h6 class="card-title">Son Event</h6>
                    <h3 class="mb-0">@LastEventTime</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- İzlenen Cihazlar -->
    @if (MonitoringDevices.Any())
    {
        <div class="row mb-3">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-info text-white">
                        <i class="bi bi-broadcast"></i> İzlenen Cihazlar (@MonitoringDevices.Count)
                    </div>
                    <div class="card-body p-2">
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var device in MonitoringDevices)
                            {
                                <div class="badge bg-label-info" style="font-size: 0.9rem; padding: 0.5rem 0.75rem;">
                                    <i class="bx bx-broadcast"></i>
                                    <strong>@device.DeviceName</strong>
                                    <span class="text-muted ms-1">(@device.IpAddress)</span>
                                    @if (!string.IsNullOrEmpty(device.DepartmanAdi))
                                    {
                                        <span class="ms-1">- @device.DepartmanAdi</span>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else if (!IsLoadingDevices)
    {
        <div class="row mb-3">
            <div class="col-12">
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i>
                    <strong>Uyarı:</strong> Şu anda izlenen cihaz yok. 
                    <a href="/pdks/zkteco/devices" class="alert-link">Cihaz Yönetimi</a> sayfasından cihazların "Canlı İzleme" özelliğini aktif edin.
                </div>
            </div>
        </div>
    }

    <!-- Realtime Event Tablosu -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <span>
                        <i class="bi bi-table"></i> Canlı Giriş/Çıkış Kayıtları
                        <small class="text-muted ms-2">(Son @MaxEvents kayıt gösteriliyor)</small>
                    </span>
                    <button class="btn btn-sm btn-light" @onclick="ClearEvents">
                        <i class="bi bi-trash"></i> Temizle
                    </button>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive" style="max-height: 600px; overflow-y: auto;">
                        <table class="table table-hover table-striped mb-0">
                            <thead class="table-dark sticky-top">
                                <tr>
                                    <th>Zaman</th>
                                    <th>Sicil No</th>
                                    <th>Ad Soyad</th>
                                    <th>TC Kimlik No</th>
                                    <th>Departman</th>
                                    <th>Tip</th>
                                    <th>Cihaz / Hizmet Binası</th>
                                    <th>Kart No</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Events.Any())
                                {
                                    @foreach (var evt in Events.OrderByDescending(e => e.EventTime))
                                    {
                                        <tr class="event-row-animation">
                                            <td>
                                                <strong>@evt.EventTime.ToString("HH:mm:ss")</strong>
                                                <br />
                                                <small class="text-muted">@evt.EventTime.ToString("dd.MM.yyyy")</small>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(evt.PersonelSicilNo))
                                                {
                                                    <span class="badge bg-secondary">@evt.PersonelSicilNo</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">@evt.EnrollNumber</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(evt.PersonelAdSoyad))
                                                {
                                                    <strong>@evt.PersonelAdSoyad</strong>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Bilinmiyor</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(evt.PersonelTcKimlikNo))
                                                {
                                                    <span class="text-monospace">@evt.PersonelTcKimlikNo</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(evt.PersonelDepartman))
                                                {
                                                    <span class="badge bg-label-info">@evt.PersonelDepartman</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @((MarkupString)GetVerifyMethodBadge(evt.VerifyMethod))
                                            </td>
                                            <td>
                                                @((MarkupString)GetInOutModeBadge(evt.InOutMode))
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(evt.DeviceName))
                                                {
                                                    <strong>@evt.DeviceName</strong>
                                                    @if (!string.IsNullOrEmpty(evt.HizmetBinasiAdi))
                                                    {
                                                        <br />
                                                        <small class="badge bg-label-secondary">@evt.HizmetBinasiAdi</small>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-monospace text-muted">@evt.DeviceIp</span>
                                                }
                                            </td>
                                            <td>
                                                @if (evt.CardNumber.HasValue)
                                                {
                                                    <span class="badge bg-info">@evt.CardNumber.Value</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="9" class="text-center text-muted py-4">
                                            <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                                            <p class="mt-2">Henüz event alınmadı. Cihazlarda kart okutmayı bekliyor...</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
        </div>
    </FieldPermissionScope>
}

<style>
    .pulse {
        animation: pulse-animation 2s infinite;
    }

    @@keyframes pulse-animation {
        0% {
            box-shadow: 0 0 0 0px rgba(0, 255, 0, 0.7);
        }
        100% {
            box-shadow: 0 0 0 10px rgba(0, 255, 0, 0);
        }
    }

    .event-row-animation {
        animation: slideIn 0.5s ease-out;
    }

    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateX(-20px);
            background-color: #fff3cd;
        }
        to {
            opacity: 1;
            transform: translateX(0);
            background-color: transparent;
        }
    }

    .text-monospace {
        font-family: 'Courier New', monospace;
        font-size: 0.9rem;
    }
</style>
