@page "/pdks/izin/sorumlu-atama"
@using SGKPortalApp.BusinessObjectLayer.DTOs.Response.PdksIslemleri
@using SGKPortalApp.BusinessObjectLayer.DTOs.Response.Common
@using SGKPortalApp.PresentationLayer.Components.Permission
@inherits SGKPortalApp.PresentationLayer.Components.Base.FieldPermissionPageBase

<PageTitle>İzin Sorumlu Atama - SGK Portal</PageTitle>

@if (!CanViewPage)
{
    <div class="alert alert-danger" role="alert">
        <i class="bx bx-lock-alt me-2"></i>
        Bu sayfayı görüntüleme yetkiniz bulunmuyor.
    </div>
}
else
{
    <FieldPermissionScope PageKey="@ResolvedPermissionKey" IsEditMode="false">
        <div class="container-xxl flex-grow-1 container-p-y">
            <!-- Başlık -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-0">
                            <i class="bx bx-user-check"></i> İzin Sorumlu Atama
                        </h5>
                        <small class="text-muted">Departman/Servis bazında izin onay Sorumluları</small>
                    </div>
                    <div>
                        @if (CanAction("CREATE"))
                        {
                            <button class="btn btn-primary" @onclick="OpenCreateModal">
                                <i class="bx bx-plus"></i> Yeni Atama
                            </button>
                        }
                    </div>
                </div>
            </div>

            <!-- Filtre -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <label class="form-label">Departman</label>
                            <select class="form-select" @bind="FilterDepartmanId">
                                <option value="">Tümü</option>
                                @foreach (var dep in DepartmanList)
                                {
                                    <option value="@dep.DepartmanId">@dep.DepartmanAdi</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Servis</label>
                            <select class="form-select" @bind="FilterServisId">
                                <option value="">Tümü</option>
                                @foreach (var srv in ServisList)
                                {
                                    <option value="@srv.ServisId">@srv.ServisAdi</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Durum</label>
                            <select class="form-select" @bind="FilterAktif">
                                <option value="">Tümü</option>
                                <option value="true">Aktif</option>
                                <option value="false">Pasif</option>
                            </select>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button class="btn btn-secondary w-100" @onclick="LoadSorumlular" disabled="@IsLoading">
                                <i class="bx bx-search"></i> Filtrele
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Liste -->
            @if (IsLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Yükleniyor...</span>
                    </div>
                </div>
            }
            else if (Sorumlular.Any())
            {
                <div class="card">
                    <div class="card-header">
                        <h6 class="mb-0">Sorumlu Atamaları (@Sorumlular.Count kayıt)</h6>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-sm table-hover">
                            <thead>
                                <tr>
                                    <th>Departman</th>
                                    <th>Servis</th>
                                    <th>Sorumlu Personel</th>
                                    <th>Sicil No</th>
                                    <th>Onay Seviyesi</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Sorumlular)
                                {
                                    <tr class="@(!item.Aktif ? "table-secondary" : "")">
                                        <td>@item.DepartmanAdi</td>
                                        <td>@(item.ServisAdi ?? "-")</td>
                                        <td>@item.SorumluPersonelAdSoyad</td>
                                        <td>@item.SorumluPersonelSicilNo</td>
                                        <td>
                                            <span class="badge @(item.OnaySeviyes == 1 ? "bg-label-primary" : "bg-label-success")">
                                                @item.OnaySeviesiAciklama
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge @(item.Aktif ? "bg-label-success" : "bg-label-secondary")">
                                                @(item.Aktif ? "Aktif" : "Pasif")
                                            </span>
                                        </td>
                                        <td>
                                            @if (CanAction("EDIT"))
                                            {
                                                <button class="btn btn-sm btn-icon btn-outline-primary" @onclick="() => OpenEditModal(item)" title="Düzenle">
                                                    <i class="bx bx-edit"></i>
                                                </button>
                                            }
                                            @if (CanAction("DELETE") && item.Aktif)
                                            {
                                                <button class="btn btn-sm btn-icon btn-outline-warning" @onclick="() => DeactivateSorumlu(item.IzinSorumluId)" title="Pasif Yap">
                                                    <i class="bx bx-power-off"></i>
                                                </button>
                                            }
                                            @if (CanAction("DELETE") && !item.Aktif)
                                            {
                                                <button class="btn btn-sm btn-icon btn-outline-danger" @onclick="() => DeleteSorumlu(item.IzinSorumluId)" title="Sil">
                                                    <i class="bx bx-trash"></i>
                                                </button>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
            else if (!IsLoading)
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="bx bx-user-x display-1 text-muted"></i>
                        <h5 class="mt-3">Kayıt Bulunamadı</h5>
                        <p class="text-muted">Henüz sorumlu ataması yapılmamış veya filtre kriterlerine uygun kayıt yok.</p>
                    </div>
                </div>
            }

            <!-- Modal: Yeni/Düzenle -->
            @if (ShowModal)
            {
                <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">@(IsEditMode ? "Sorumlu Düzenle" : "Yeni Sorumlu Ata")</h5>
                                <button type="button" class="btn-close" @onclick="CloseModal"></button>
                            </div>
                            <div class="modal-body">
                                <div class="mb-3">
                                    <label class="form-label">Departman</label>
                                    <select class="form-select" @bind="EditModel.DepartmanId">
                                        <option value="">Tüm Departmanlar</option>
                                        @foreach (var dep in DepartmanList)
                                        {
                                            <option value="@dep.DepartmanId">@dep.DepartmanAdi</option>
                                        }
                                    </select>
                                    <small class="text-muted">Boş bırakılırsa tüm departmanlar için geçerli olur</small>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Servis</label>
                                    <select class="form-select" @bind="EditModel.ServisId">
                                        <option value="">Tüm Servisler</option>
                                        @foreach (var srv in ServisList)
                                        {
                                            <option value="@srv.ServisId">@srv.ServisAdi</option>
                                        }
                                    </select>
                                    <small class="text-muted">Boş bırakılırsa seçilen departmandaki tüm servisler için geçerli olur</small>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Sorumlu Personel *</label>
                                    <select class="form-select" @bind="EditModel.SorumluPersonelTcKimlikNo">
                                        <option value="">Seçiniz...</option>
                                        @foreach (var per in PersonelList)
                                        {
                                            <option value="@per.TcKimlikNo">@per.AdSoyad (@per.SicilNo)</option>
                                        }
                                    </select>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Onay Seviyesi *</label>
                                    <select class="form-select" @bind="EditModel.OnaySeviyes">
                                        <option value="1">Birinci Onayci (Yönetici/Müdür)</option>
                                        <option value="2">İkinci Onayci (Üst Yönetim)</option>
                                    </select>
                                </div>

                                @if (IsEditMode)
                                {
                                    <div class="mb-3">
                                        <label class="form-label">Durum</label>
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" @bind="EditModel.Aktif">
                                            <label class="form-check-label">Aktif</label>
                                        </div>
                                    </div>
                                }

                                <div class="mb-3">
                                    <label class="form-label">Açıklama</label>
                                    <textarea class="form-control" rows="3" @bind="EditModel.Aciklama" maxlength="500"></textarea>
                                </div>

                                @if (!string.IsNullOrEmpty(ErrorMessage))
                                {
                                    <div class="alert alert-danger">@ErrorMessage</div>
                                }
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" @onclick="CloseModal">İptal</button>
                                <button type="button" class="btn btn-primary" @onclick="SaveSorumlu" disabled="@IsSaving">
                                    @if (IsSaving)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2"></span>
                                    }
                                    Kaydet
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </FieldPermissionScope>
}
