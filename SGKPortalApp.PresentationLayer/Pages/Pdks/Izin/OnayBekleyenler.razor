@page "/pdks/izin/onay-bekleyenler"
@using SGKPortalApp.BusinessObjectLayer.DTOs.Response.PdksIslemleri
@using SGKPortalApp.BusinessObjectLayer.Enums.PdksIslemleri
@using SGKPortalApp.Common.Extensions
@using SGKPortalApp.PresentationLayer.Components.Permission
@inherits SGKPortalApp.PresentationLayer.Components.Base.FieldPermissionPageBase

<PageTitle>Onay Bekleyen Talepler - SGK Portal</PageTitle>

@if (!CanViewPage)
{
    <div class="alert alert-danger" role="alert">
        <i class="bx bx-lock-alt me-2"></i>
        Bu sayfayı görüntüleme yetkiniz bulunmuyor.
    </div>
}
else
{
    <FieldPermissionScope PageKey="@ResolvedPermissionKey" IsEditMode="false">
        <div class="container-xxl flex-grow-1 container-p-y">
    <!-- Başlık -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold mb-1">
                <i class="bx bx-check-circle me-2"></i>Onay Bekleyen Talepler
            </h4>
            <p class="text-muted mb-0">Tarafınıza gelen izin/mazeret Talepleri</p>
        </div>
        <div>
            <div class="d-flex gap-2">
                @if (IsActionVisible("EXCEL_EXPORT"))
                {
                    <button class="btn btn-success" @onclick="ExportToExcel" disabled="@IsExporting">
                        @if (IsExporting && ExportType == "excel")
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        else
                        {
                            <i class="bx bx-download me-1"></i>
                        }
                        Excel
                    </button>
                }
                @if (IsActionVisible("PDF_EXPORT"))
                {
                    <button class="btn btn-danger" @onclick="ExportToPdf" disabled="@IsExporting">
                        @if (IsExporting && ExportType == "pdf")
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        else
                        {
                            <i class="bx bxs-file-pdf me-1"></i>
                        }
                        PDF
                    </button>
                }
                <button class="btn btn-outline-primary" @onclick="LoadTalepler" disabled="@IsLoading">
                    <i class="bx bx-refresh"></i> Yenile
                </button>
            </div>
        </div>
    </div>

    @if (IsLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Yükleniyor...</span>
            </div>
            <p class="mt-3 text-muted">Talepler yükleniyor...</p>
        </div>
    }
    else if (!Talepler.Any())
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bx bx-check-circle display-1 text-success"></i>
                <h5 class="mt-3">Bekleyen Talep Yok</h5>
                <p class="text-muted">Şu anda onayınızı bekleyen bir talep bulunmuyor.</p>
            </div>
        </div>
    }
    else
    {
        <!-- İstatistik Kartları -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="avatar flex-shrink-0 me-3">
                                <span class="avatar-initial rounded bg-label-warning">
                                    <i class="bx bx-time-five"></i>
                                </span>
                            </div>
                            <div>
                                <h6 class="text-muted mb-1">Bekleyen Talepler</h6>
                                <h3 class="mb-0">@Talepler.Count</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="avatar flex-shrink-0 me-3">
                                <span class="avatar-initial rounded bg-label-info">
                                    <i class="bx bx-user"></i>
                                </span>
                            </div>
                            <div>
                                <h6 class="text-muted mb-1">Kalan Talepler</h6>
                                <h3 class="mb-0">@Talepler.Count(t => t.BirinciOnayDurumu == OnayDurumu.Beklemede)</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="avatar flex-shrink-0 me-3">
                                <span class="avatar-initial rounded bg-label-primary">
                                    <i class="bx bx-user-check"></i>
                                </span>
                            </div>
                            <div>
                                <h6 class="text-muted mb-1">2. Onay Bekleyenler</h6>
                                <h3 class="mb-0">@Talepler.Count(t => t.BirinciOnayDurumu == OnayDurumu.Onaylandi && t.IkinciOnayDurumu == OnayDurumu.Beklemede)</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Talepler Tablosu -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Onay Bekleyen Talepler</h5>
                <span class="badge bg-label-warning">@Talepler.Count talep</span>
            </div>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Personel</th>
                            <th>Tür</th>
                            <th>Tarih Aralığı</th>
                            <th>Toplam Gün</th>
                            <th>Talep Tarihi</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var talep in Talepler)
                        {
                            <tr>
                                <td><strong>#@talep.IzinMazeretTalepId</strong></td>
                                <td>
                                    <div>
                                        <div class="fw-bold">@talep.AdSoyad</div>
                                        <small class="text-muted">@talep.TcKimlikNo</small>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-label-info">
                                        @talep.TuruAdi
                                    </span>
                                </td>
                                <td>
                                    @if (talep.MazeretTarihi.HasValue)
                                    {
                                        <div>
                                            <strong>@talep.MazeretTarihi?.ToString("dd.MM.yyyy")</strong><br />
                                            @if (talep.BaslangicSaati.HasValue && talep.BitisSaati.HasValue)
                                            {
                                                <small class="text-muted">@talep.BaslangicSaati.Value.ToString(@"hh\:mm") - @talep.BitisSaati.Value.ToString(@"hh\:mm")</small>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <div>
                                            @talep.BaslangicTarihi?.ToString("dd.MM.yyyy") - @talep.BitisTarihi?.ToString("dd.MM.yyyy")
                                        </div>
                                    }
                                </td>
                                <td>
                                    @if (talep.ToplamGun.HasValue)
                                    {
                                        <span class="badge bg-label-primary">@talep.ToplamGun gün</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <small>@talep.TalepTarihi.ToString("dd.MM.yyyy HH:mm")</small>
                                </td>
                                <td>
                                    @if (talep.BirinciOnayDurumu == OnayDurumu.Beklemede)
                                    {
                                        <span class="badge bg-label-warning">1. Onay Bekliyor</span>
                                        @if (!string.IsNullOrEmpty(talep.BirinciOnayciAdSoyad))
                                        {
                                            <br /><small class="text-muted">Onayci: @talep.BirinciOnayciAdSoyad</small>
                                        }
                                    }
                                    else if (talep.BirinciOnayDurumu == OnayDurumu.Onaylandi && talep.IkinciOnayDurumu == OnayDurumu.Beklemede)
                                    {
                                        <span class="badge bg-label-info">2. Onay Bekliyor</span>
                                        @if (!string.IsNullOrEmpty(talep.IkinciOnayciAdSoyad))
                                        {
                                            <br /><small class="text-muted">Onayci: @talep.IkinciOnayciAdSoyad</small>
                                        }
                                    }
                                </td>
                                <td>
                                    @{
                                        var canApprove = CanApproveTalep(talep);
                                        var disableReason = GetDisableReason(talep);
                                    }
                                    <div class="btn-group" role="group" aria-label="Talep İşlemleri">
                                        @if (!canApprove)
                                        {
                                            <button type="button"
                                                    class="btn btn-sm btn-outline-warning"
                                                    disabled
                                                    title="@disableReason">
                                                <i class="bx bx-info-circle"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button type="button"
                                                    class="btn btn-sm btn-success"
                                                    @onclick="() => OpenApprovalModal(talep, true)"
                                                    title="Onayla">
                                                <i class="bx bx-check"></i>
                                            </button>
                                            <button type="button"
                                                    class="btn btn-sm btn-danger"
                                                    @onclick="() => OpenApprovalModal(talep, false)"
                                                    title="Reddet">
                                                <i class="bx bx-x"></i>
                                            </button>
                                        }
                                        <button type="button"
                                                class="btn btn-sm btn-outline-secondary"
                                                @onclick="() => OpenDetailModal(talep)"
                                                title="Detay Görüntüle">
                                            <i class="bx bx-detail"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    <!-- Onay/Red Modal -->
    @if (ShowApprovalModal && SelectedTalep != null)
    {
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">
                            @if (IsApproving)
                            {
                                <i class="bx bx-check-circle text-success me-2"></i>
                                <text>Talebi Onayla</text>
                            }
                            else
                            {
                                <i class="bx bx-x-circle text-danger me-2"></i>
                                <text>Talebi Reddet</text>
                            }
                        </h5>
                        <button type="button" class="btn-close" @onclick="CloseApprovalModal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <strong>Talep Sahibi:</strong> @SelectedTalep.AdSoyad<br />
                            <strong>Tür:</strong> @SelectedTalep.TuruAdi<br />
                            @if (SelectedTalep.MazeretTarihi.HasValue)
                            {
                                <strong>Tarih:</strong>
                                <text>@SelectedTalep.MazeretTarihi?.ToString("dd.MM.yyyy")</text>
                                @if (SelectedTalep.BaslangicSaati.HasValue && SelectedTalep.BitisSaati.HasValue)
                                {
                                    <text> (@SelectedTalep.BaslangicSaati.Value.ToString(@"hh\:mm") - @SelectedTalep.BitisSaati.Value.ToString(@"hh\:mm"))</text>
                                }
                            }
                            else
                            {
                                <strong>Tarih:</strong>
                                <text>@SelectedTalep.BaslangicTarihi?.ToString("dd.MM.yyyy") - @SelectedTalep.BitisTarihi?.ToString("dd.MM.yyyy")</text>
                            }
                        </div>
                        <div class="mb-3">
                            <label class="form-label">@(IsApproving ? "Onay Notu (Opsiyonel)" : "Red Nedeni *")</label>
                            <textarea class="form-control" rows="3" @bind="OnayNotu"
                                      placeholder="@(IsApproving ? "Onay notunuzu yazın..." : "Red nedenini yazın...")"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" @onclick="CloseApprovalModal">İptal</button>
                        <button type="button"
                                class="btn @(IsApproving ? "btn-success" : "btn-danger")"
                                @onclick="SubmitApproval"
                                disabled="@(!IsApproving && string.IsNullOrWhiteSpace(OnayNotu))">
                            @if (IsApproving)
                            {
                                <i class="bx bx-check"></i>
                                <text> Onayla</text>
                            }
                            else
                            {
                                <i class="bx bx-x"></i>
                                <text> Reddet</text>
                            }
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Detay Modal -->
    @if (ShowDetailModal && SelectedTalep != null)
    {
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-lg modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">
                            <i class="bx bx-detail me-2"></i>Talep Detayı - #@SelectedTalep.IzinMazeretTalepId
                        </h5>
                        <button type="button" class="btn-close" @onclick="CloseDetailModal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <strong>Personel:</strong><br />
                                @SelectedTalep.AdSoyad<br />
                                <small class="text-muted">@SelectedTalep.TcKimlikNo</small>
                            </div>
                            <div class="col-md-6 mb-3">
                                <strong>Tür:</strong><br />
                                <span class="badge bg-label-info">@SelectedTalep.TuruAdi</span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <strong>Talep Tarihi:</strong><br />
                                @SelectedTalep.TalepTarihi.ToString("dd.MM.yyyy HH:mm")
                            </div>
                            <div class="col-md-6 mb-3">
                                <strong>Durum:</strong><br />
                                <span class="badge bg-label-secondary">
                                    @SelectedTalep.GenelDurum
                                </span>
                            </div>
                            @if (SelectedTalep.MazeretTarihi.HasValue)
                            {
                                <div class="col-md-6 mb-3">
                                    <strong>Mazeret Tarihi:</strong><br />
                                    @SelectedTalep.MazeretTarihi?.ToString("dd.MM.yyyy")
                                </div>
                                @if (SelectedTalep.BaslangicSaati.HasValue && SelectedTalep.BitisSaati.HasValue)
                                {
                                    <div class="col-md-6 mb-3">
                                        <strong>Saat Dilimi:</strong><br />
                                        @SelectedTalep.BaslangicSaati.Value.ToString(@"hh\:mm") - @SelectedTalep.BitisSaati.Value.ToString(@"hh\:mm")
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="col-md-6 mb-3">
                                    <strong>Başlangıç Tarihi:</strong><br />
                                    @SelectedTalep.BaslangicTarihi?.ToString("dd.MM.yyyy")
                                </div>
                                <div class="col-md-6 mb-3">
                                    <strong>Bitiş Tarihi:</strong><br />
                                    @SelectedTalep.BitisTarihi?.ToString("dd.MM.yyyy")
                                </div>
                                <div class="col-md-6 mb-3">
                                    <strong>Toplam Gün:</strong><br />
                                    <span class="badge bg-label-primary">@SelectedTalep.ToplamGun gün</span>
                                </div>
                            }
                            <div class="col-12 mb-3">
                                <div class="row">
                                    <div class="col-md-6">
                                        <strong>1. Onay Durumu:</strong><br />
                                        <span class="badge @GetDurumBadgeClass(SelectedTalep.BirinciOnayDurumu)">
                                            @SelectedTalep.BirinciOnayDurumuAdi
                                        </span>
                                    </div>
                                    <div class="col-md-6">
                                        <strong>2. Onay Durumu:</strong><br />
                                        <span class="badge @GetDurumBadgeClass(SelectedTalep.IkinciOnayDurumu)">
                                            @SelectedTalep.IkinciOnayDurumuAdi
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" @onclick="CloseDetailModal">Kapat</button>
                    </div>
                </div>
            </div>
        </div>
    }
        </div>
    </FieldPermissionScope>
}
