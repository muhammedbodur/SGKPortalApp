@page "/personel/servis"
@inherits SGKPortalApp.PresentationLayer.Components.Base.FieldPermissionPageBase
@using SGKPortalApp.BusinessObjectLayer.DTOs.Response.PersonelIslemleri
@using SGKPortalApp.BusinessObjectLayer.Enums.Common

<PageTitle>Servis Yönetimi - SGK Portal</PageTitle>

<div class="container-xxl flex-grow-1 container-p-y">
    @if (!CanViewPage)
    {
        <div class="alert alert-danger" role="alert">
            <i class="bx bx-lock-alt me-2"></i>
            Bu sayfayı görüntüleme yetkiniz bulunmuyor.
        </div>
    }
    else
    {
    <!-- ═══════════════════════════════════════════════════════ -->
    <!-- PAGE HEADER -->
    <!-- ═══════════════════════════════════════════════════════ -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold mb-1">
                <i class="bx bx-buildings me-2"></i>Servis Yönetimi
            </h4>
            <p class="text-muted mb-0">
                Tüm Servislerı görüntüleyin ve yönetin
            </p>
        </div>

        <div class="d-flex gap-2">
            @if (IsActionVisible("EXCEL_EXPORT"))
            {
                <!-- Excel Export -->
                <button class="btn btn-success" @onclick="ExportToExcel" disabled="@IsExporting">
                    @if (IsExporting && ExportType == "excel")
                    {
                        <span class="spinner-border spinner-border-sm me-1"></span>
                    }
                    else
                    {
                        <i class="bx bx-download me-1"></i>
                    }
                    Excel
                </button>
            }

            @if (IsActionVisible("PDF_EXPORT"))
            {
                <!-- PDF Export -->
                <button class="btn btn-danger" @onclick="ExportToPdf" disabled="@IsExporting">
                    @if (IsExporting && ExportType == "pdf")
                    {
                        <span class="spinner-border spinner-border-sm me-1"></span>
                    }
                    else
                    {
                        <i class="bx bxs-file-pdf me-1"></i>
                    }
                    PDF
                </button>
            }

            <!-- Yeni Servis -->
            <button class="btn btn-primary" @onclick="NavigateToCreate">
                <i class="bx bx-plus me-1"></i>Yeni Servis
            </button>
        </div>
    </div>

    <!-- ═══════════════════════════════════════════════════════ -->
    <!-- FILTER CARD -->
    <!-- ═══════════════════════════════════════════════════════ -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row g-3">
                <!-- Arama -->
                <div class="col-md-4">
                    <label class="form-label">Servis Ara</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bx bx-search"></i>
                        </span>
                        <input type="text"
                               class="form-control"
                               placeholder="Servis adı..."
                               @bind="searchTerm"
                               @bind:event="oninput"
                               @onkeyup="OnSearchChanged" />
                    </div>
                </div>

                <!-- Durum Filtresi -->
                <div class="col-md-3">
                    <label class="form-label">Durum</label>
                    <select class="form-select" value="@filterStatus" @onchange="OnFilterStatusChanged">
                        <option value="all">Tümü</option>
                        <option value="active">Aktif</option>
                        <option value="passive">Pasif</option>
                    </select>
                </div>

                <!-- Sıralama -->
                <div class="col-md-3">
                    <label class="form-label">Sıralama</label>
                    <select class="form-select" value="@sortBy" @onchange="OnSortByChanged">
                        <option value="name-asc">İsim (A-Z)</option>
                        <option value="name-desc">İsim (Z-A)</option>
                        <option value="date-newest">En Yeni</option>
                        <option value="date-oldest">En Eski</option>
                        <option value="personel-most">En Çok Personel</option>
                        <option value="personel-least">En Az Personel</option>
                    </select>
                </div>

                <!-- Temizle -->
                <div class="col-md-2 d-flex align-items-end">
                    <button class="btn btn-outline-secondary w-100" @onclick="ClearFilters">
                        <i class="bx bx-reset me-1"></i>Temizle
                    </button>
                </div>
            </div>

            <!-- İstatistikler -->
            <div class="row mt-3">
                <div class="col">
                    <div class="d-flex gap-4 text-muted small">
                        <span>
                            <i class="bx bx-buildings text-primary"></i>
                            Toplam: <strong>@Servisler.Count</strong>
                        </span>
                        <span>
                            <i class="bx bx-check-circle text-success"></i>
                            Aktif: <strong>@Servisler.Count(d => d.Aktiflik == Aktiflik.Aktif)</strong>
                        </span>
                        <span>
                            <i class="bx bx-x-circle text-danger"></i>
                            Pasif: <strong>@Servisler.Count(d => d.Aktiflik == Aktiflik.Pasif)</strong>
                        </span>
                        <span>
                            <i class="bx bx-filter-alt text-info"></i>
                            Filtrelenen: <strong>@FilteredServisler.Count</strong>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- ═══════════════════════════════════════════════════════ -->
    <!-- TABLE CARD -->
    <!-- ═══════════════════════════════════════════════════════ -->
    <div class="card">
        <div class="card-body">
            @if (IsLoading)
            {
                <!-- Loading Spinner -->
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Yükleniyor...</span>
                    </div>
                    <p class="mt-2 text-muted">Servisler yükleniyor...</p>
                </div>
            }
            else if (!FilteredServisler.Any())
            {
                <!-- Empty State -->
                <div class="text-center py-5">
                    <i class="bx bx-search-alt display-1 text-muted"></i>
                    <h5 class="mt-3">Servis Bulunamadı</h5>
                    <p class="text-muted">
                        @if (string.IsNullOrEmpty(searchTerm) && filterStatus == "all")
                        {
                            <span>Henüz Servis eklenmemiş.</span>
                        }
                        else
                        {
                            <span>Arama kriterlerinize uygun Servis bulunamadı.</span>
                        }
                    </p>
                    @if (string.IsNullOrEmpty(searchTerm) && filterStatus == "all")
                    {
                        <button class="btn btn-primary mt-2" @onclick="NavigateToCreate">
                            <i class="bx bx-plus me-1"></i>İlk Servisi Ekle
                        </button>
                    }
                    else
                    {
                        <button class="btn btn-outline-secondary mt-2" @onclick="ClearFilters">
                            <i class="bx bx-reset me-1"></i>Filtreleri Temizle
                        </button>
                    }
                </div>
            }
            else
            {
                <!-- Table -->
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th style="width: 50px;">#</th>
                                <th>Servis Adı</th>
                                <th class="text-center" style="width: 120px;">Personel Sayısı</th>
                                <th class="text-center" style="width: 100px;">Durum</th>
                                <th class="text-center" style="width: 150px;">Eklenme Tarihi</th>
                                <th class="text-center" style="width: 150px;">Son Güncelleme</th>
                                <th class="text-center" style="width: 180px;">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var pagedData = FilteredServisler
                                .Skip((CurrentPage - 1) * PageSize)
                                .Take(PageSize)
                                .ToList();
                            }
                            @foreach (var (Servis, index) in pagedData.Select((d, i) => (d, (CurrentPage - 1) * PageSize + i + 1)))
                            {
                                <tr>
                                    <td>@index</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar avatar-sm me-2">
                                                <span class="avatar-initial rounded-circle bg-label-primary">
                                                    @Servis.ServisAdi.Substring(0, 1).ToUpper()
                                                </span>
                                            </div>
                                            <strong>@Servis.ServisAdi</strong>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-label-info">
                                            <i class="bx bx-user me-1"></i>@Servis.PersonelSayisi
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        @if (Servis.Aktiflik == Aktiflik.Aktif)
                                        {
                                            <span class="badge bg-label-success">
                                                <i class="bx bx-check-circle me-1"></i>Aktif
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-label-danger">
                                                <i class="bx bx-x-circle me-1"></i>Pasif
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center text-muted small">
                                        @Servis.EklenmeTarihi.ToString("dd.MM.yyyy HH:mm")
                                    </td>
                                    <td class="text-center text-muted small">
                                        @Servis.DuzenlenmeTarihi.ToString("dd.MM.yyyy HH:mm")
                                    </td>
                                    <td class="text-center">
                                        <div class="d-flex justify-content-center gap-1">
                                            @if (IsActionVisible("EDIT"))
                                            {
                                                <!-- Düzenle -->
                                                <button class="btn btn-sm btn-icon btn-outline-primary"
                                                        @onclick="() => NavigateToEdit(Servis.ServisId)"
                                                        disabled="@(!CanEditAction("EDIT"))"
                                                        title="@(CanEditAction("EDIT") ? "Düzenle" : "Düzenle (Yetki Yok)")">
                                                    <i class="bx bx-edit"></i>
                                                </button>
                                            }

                                            @if (IsActionVisible("TOGGLE"))
                                            {
                                                <!-- Aktif/Pasif Toggle -->
                                                <button class="btn btn-sm btn-icon @(Servis.Aktiflik == Aktiflik.Aktif ? "btn-outline-warning" : "btn-outline-success")"
                                                        @onclick="() => ShowToggleStatusConfirmation(Servis.ServisId, Servis.ServisAdi, Servis.Aktiflik)"
                                                        disabled="@(!CanEditAction("TOGGLE"))"
                                                        title="@(CanEditAction("TOGGLE") ? (Servis.Aktiflik == Aktiflik.Aktif ? "Pasif Yap" : "Aktif Yap") : (Servis.Aktiflik == Aktiflik.Aktif ? "Pasif Yap (Yetki Yok)" : "Aktif Yap (Yetki Yok)"))">
                                                    <i class="bx @(Servis.Aktiflik == Aktiflik.Aktif ? "bx-toggle-right" : "bx-toggle-left")"></i>
                                                </button>
                                            }

                                            @if (IsActionVisible("DELETE"))
                                            {
                                                <!-- Sil -->
                                                <button class="btn btn-sm btn-icon btn-outline-danger"
                                                        @onclick="() => ShowDeleteConfirmation(Servis.ServisId, Servis.ServisAdi, Servis.PersonelSayisi)"
                                                        disabled="@(!CanEditAction("DELETE"))"
                                                        title="@(CanEditAction("DELETE") ? "Sil" : "Sil (Yetki Yok)")">
                                                    <i class="bx bx-trash"></i>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (TotalPages > 1)
                {
                    <div class="d-flex justify-content-between align-items-center mt-3 pt-3 border-top">
                        <div class="text-muted small">
                            Gösterilen: <strong>@((CurrentPage - 1) * PageSize + 1)</strong> - <strong>@Math.Min(CurrentPage * PageSize, FilteredServisler.Count)</strong> / <strong>@FilteredServisler.Count</strong>
                        </div>

                        <nav>
                            <ul class="pagination pagination-sm mb-0">
                                <!-- Previous -->
                                <li class="page-item @(CurrentPage == 1 ? "disabled" : "")">
                                    <button class="page-link" @onclick="() => ChangePage(CurrentPage - 1)" disabled="@(CurrentPage == 1)">
                                        <i class="bx bx-chevron-left"></i>
                                    </button>
                                </li>

                                <!-- Page Numbers -->
                                @{
                                    var startPage = Math.Max(1, CurrentPage - 2);
                                    var endPage = Math.Min(TotalPages, CurrentPage + 2);
                                }

                                @if (startPage > 1)
                                {
                                    <li class="page-item">
                                        <button class="page-link" @onclick="() => ChangePage(1)">1</button>
                                    </li>
                                    @if (startPage > 2)
                                    {
                                        <li class="page-item disabled">
                                            <span class="page-link">...</span>
                                        </li>
                                    }
                                }

                                @for (int i = startPage; i <= endPage; i++)
                                {
                                    var pageNum = i;
                                    <li class="page-item @(CurrentPage == pageNum ? "active" : "")">
                                        <button class="page-link" @onclick="() => ChangePage(pageNum)">
                                            @pageNum
                                        </button>
                                    </li>
                                }

                                @if (endPage < TotalPages)
                                {
                                    @if (endPage < TotalPages - 1)
                                    {
                                        <li class="page-item disabled">
                                            <span class="page-link">...</span>
                                        </li>
                                    }
                                    <li class="page-item">
                                        <button class="page-link" @onclick="() => ChangePage(TotalPages)">@TotalPages</button>
                                    </li>
                                }

                                <!-- Next -->
                                <li class="page-item @(CurrentPage == TotalPages ? "disabled" : "")">
                                    <button class="page-link" @onclick="() => ChangePage(CurrentPage + 1)" disabled="@(CurrentPage == TotalPages)">
                                        <i class="bx bx-chevron-right"></i>
                                    </button>
                                </li>
                            </ul>
                        </nav>
                    </div>
                }
            }
        </div>
    </div>
    }
</div>

<!-- ═══════════════════════════════════════════════════════ -->
<!-- TOGGLE STATUS CONFIRMATION MODAL -->
<!-- ═══════════════════════════════════════════════════════ -->
@if (ShowToggleModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        @if (ToggleServisCurrentStatus == Aktiflik.Aktif)
                        {
                            <i class="bx bx-x-circle text-warning me-2"></i>
                            <span>Servisi Pasif Yap</span>
                        }
                        else
                        {
                            <i class="bx bx-check-circle text-success me-2"></i>
                            <span>Servisi Aktif Yap</span>
                        }
                    </h5>
                    <button type="button" class="btn-close" @onclick="CloseToggleModal" disabled="@IsToggling"></button>
                </div>
                <div class="modal-body">
                    @if (ToggleServisCurrentStatus == Aktiflik.Aktif)
                    {
                        <div class="alert alert-warning mb-3">
                            <div class="d-flex align-items-start">
                                <i class="bx bx-error-circle me-2 fs-5"></i>
                                <div>
                                    <strong>⚠️ Dikkat!</strong> Servisi pasif hale getirmek üzeresiniz.
                                    <p class="mb-0 mt-2">
                                        <strong>@ToggleServisAdi</strong> Servisini pasif yapmak istediğinizden emin misiniz?
                                    </p>
                                </div>
                            </div>
                        </div>

                        @if (ToggleServisPersonelSayisi > 0)
                        {
                            <div class="alert alert-info mb-3">
                                <i class="bx bx-info-circle me-2"></i>
                                Bu serviste <strong>@ToggleServisPersonelSayisi aktif personel</strong> bulunmaktadır.
                            </div>
                        }

                        <p class="mb-2"><strong>Pasif yapıldığında:</strong></p>
                        <ul class="text-muted mb-0">
                            <li>Servis listede görünmeye devam edecektir</li>
                            <li>Mevcut personeller serviste kalmaya devam edecektir</li>
                            <li>Yeni personel ataması yapılamayacaktır</li>
                            <li>Servis seçim listelerinde görünmeyecektir</li>
                        </ul>
                    }
                    else
                    {
                        <div class="alert alert-success mb-3">
                            <div class="d-flex align-items-start">
                                <i class="bx bx-check-circle me-2 fs-5"></i>
                                <div>
                                    <strong>Bilgi:</strong> Servisi aktif hale getirmek üzeresiniz.
                                    <p class="mb-0 mt-2">
                                        <strong>@ToggleServisAdi</strong> Servisini aktif yapmak istediğinizden emin misiniz?
                                    </p>
                                </div>
                            </div>
                        </div>

                        <p class="mb-2"><strong>Aktif yapıldığında:</strong></p>
                        <ul class="text-muted mb-0">
                            <li>Servis tüm listelerde görünecektir</li>
                            <li>Yeni personel ataması yapılabilecektir</li>
                            <li>Tüm özellikler kullanılabilir olacaktır</li>
                        </ul>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseToggleModal" disabled="@IsToggling">
                        İptal
                    </button>
                    <button type="button"
                            class="btn @(ToggleServisCurrentStatus == Aktiflik.Aktif ? "btn-warning" : "btn-success")"
                            @onclick="ConfirmToggleStatus"
                            disabled="@IsToggling">
                        @if (IsToggling)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                            <span>İşleniyor...</span>
                        }
                        else
                        {
                            @if (ToggleServisCurrentStatus == Aktiflik.Aktif)
                            {
                                <i class="bx bx-x-circle me-1"></i>
                                <span>Pasif Yap</span>
                            }
                            else
                            {
                                <i class="bx bx-check-circle me-1"></i>
                                <span>Aktif Yap</span>
                            }
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<!-- ═══════════════════════════════════════════════════════ -->
<!-- DELETE CONFIRMATION MODAL -->
<!-- ═══════════════════════════════════════════════════════ -->
@if (ShowDeleteModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bx bx-trash text-danger me-2"></i>Servis Sil
                    </h5>
                    <button type="button" class="btn-close" @onclick="CloseDeleteModal" disabled="@IsDeleting"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-danger mb-3">
                        <div class="d-flex align-items-start">
                            <i class="bx bx-error-circle me-2 fs-5"></i>
                            <div>
                                <strong>🗑️ Dikkat!</strong> Kalıcı silme işlemi yapıyorsunuz.
                                <p class="mb-0 mt-2">
                                    <strong>@DeleteServisAdi</strong> Servisini silmek istediğinizden emin misiniz?
                                </p>
                            </div>
                        </div>
                    </div>

                    @if (DeleteServisPersonelSayisi > 0)
                    {
                        <div class="alert alert-warning mb-3">
                            <i class="bx bx-error-circle me-2"></i>
                            <strong>Uyarı:</strong> Bu serviste <strong>@DeleteServisPersonelSayisi aktif personel</strong> bulunmaktadır!
                        </div>
                    }

                    <p class="mb-2"><strong>Silme işlemi sonrasında:</strong></p>
                    <ul class="text-muted mb-3">
                        <li><strong>Servis kaydı kalıcı olarak silinecektir</strong></li>
                        @if (DeleteServisPersonelSayisi > 0)
                        {
                            <li class="text-danger"><strong>Bu işlem personel sayısı nedeniyle başarısız olacaktır</strong></li>
                            <li>Önce tüm personelleri başka bir servise aktarmalısınız</li>
                        }
                        else
                        {
                            <li>Bu işlem geri alınamaz</li>
                        }
                    </ul>

                    @if (DeleteServisPersonelSayisi > 0)
                    {
                        <p class="text-danger mb-0">
                            <small><strong>Not:</strong> Silme işlemine devam etmek için önce tüm personelleri başka bir servise aktarmanız gerekmektedir.</small>
                        </p>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseDeleteModal" disabled="@IsDeleting">
                        İptal
                    </button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmDelete" disabled="@IsDeleting">
                        @if (IsDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                            <span>Siliniyor...</span>
                        }
                        else
                        {
                            <i class="bx bx-trash me-1"></i>
                            <span>Sil</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
}