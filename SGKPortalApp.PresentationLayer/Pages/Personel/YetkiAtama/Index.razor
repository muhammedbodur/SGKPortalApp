@page "/personel/yetki-atama"
@using SGKPortalApp.BusinessObjectLayer.DTOs.Response.PersonelIslemleri
@using SGKPortalApp.BusinessObjectLayer.Enums.Common
@using SGKPortalApp.Common.Extensions

<PageTitle>Yetki Atama - SGK Portal</PageTitle>

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold mb-1">
                <i class="bx bx-user-check me-2"></i>Yetki Atama
            </h4>
            <p class="text-muted mb-0">Personellere dinamik yetkiler atayın ve yönetin</p>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">TC Kimlik No</label>
                    <input class="form-control" @bind="TcKimlikNo" maxlength="11" placeholder="11 haneli" />
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button class="btn btn-primary w-100" @onclick="LoadPersonel" disabled="@IsLoading">
                        <i class="bx bx-search me-1"></i>Getir
                    </button>
                </div>
                <div class="col-md-5 d-flex align-items-end justify-content-end">
                    @if (SelectedPersonel != null)
                    {
                        <div class="text-muted">
                            <strong>@SelectedPersonel.AdSoyad</strong>
                            <span> - @SelectedPersonel.ServisAdi</span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (SelectedPersonel != null)
    {
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bx bx-plus-circle me-2"></i>Yeni Yetki Ata
                </h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Yetki</label>
                        <select class="form-select" @bind="NewYetkiId" disabled="@IsSaving">
                            <option value="0">-- Yetki Seçiniz --</option>
                            @foreach (var y in YetkiDropdown)
                            {
                                <option value="@y.Id">@y.Ad</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Modul/Controller İşlem</label>
                        <select class="form-select" @bind="NewModulControllerIslemId" disabled="@IsSaving">
                            <option value="0">-- İşlem Seçiniz --</option>
                            @foreach (var i in ModulControllerIslemDropdown)
                            {
                                <option value="@i.Id">@i.Ad</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Yetki Tipi</label>
                        <select class="form-select" @bind="NewYetkiTipi" disabled="@IsSaving">
                            @foreach (var t in Enum.GetValues<YetkiTipleri>())
                            {
                                <option value="@t">@t.GetDisplayName()</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button class="btn btn-success w-100" @onclick="CreateAssignment" disabled="@IsSaving">
                            @if (IsSaving)
                            {
                                <span class="spinner-border spinner-border-sm me-1"></span>
                            }
                            <span>Ekle</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0">
                    <i class="bx bx-list-ul me-2"></i>Mevcut Yetkiler
                </h5>
                <button class="btn btn-outline-secondary btn-sm" @onclick="LoadAssignments" disabled="@IsLoading">
                    <i class="bx bx-refresh"></i>
                </button>
            </div>
            <div class="card-body">
                @if (IsLoading)
                {
                    <div class="text-center py-4">
                        <div class="spinner-border text-primary" role="status"></div>
                    </div>
                }
                else if (!Assignments.Any())
                {
                    <div class="text-center py-4 text-muted">Bu personele atanmış yetki bulunamadı.</div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Yetki</th>
                                    <th>İşlem</th>
                                    <th>Tip</th>
                                    <th class="text-end">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var a in Assignments)
                                {
                                    <tr>
                                        <td>@(a.YetkiAdi ?? a.YetkiId.ToString())</td>
                                        <td>@(a.ModulControllerIslemAdi ?? a.ModulControllerIslemId.ToString())</td>
                                        <td>
                                            <select class="form-select form-select-sm" @bind="a.YetkiTipleri" disabled="@a.IsRowSaving">
                                                @foreach (var t in Enum.GetValues<YetkiTipleri>())
                                                {
                                                    <option value="@t">@t.GetDisplayName()</option>
                                                }
                                            </select>
                                        </td>
                                        <td class="text-end">
                                            <button class="btn btn-sm btn-outline-primary me-2" @onclick="() => UpdateAssignment(a)" disabled="@a.IsRowSaving">
                                                @if (a.IsRowSaving)
                                                {
                                                    <span class="spinner-border spinner-border-sm"></span>
                                                }
                                                else
                                                {
                                                    <i class="bx bx-save"></i>
                                                }
                                            </button>
                                            <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteAssignment(a.PersonelYetkiId)" disabled="@a.IsRowSaving">
                                                <i class="bx bx-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    }
</div>
