@page "/personel/yetki"
@using SGKPortalApp.BusinessObjectLayer.DTOs.Response.PersonelIslemleri

<PageTitle>Yetki Yönetimi - SGK Portal</PageTitle>

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold mb-1">
                <i class="bx bx-key me-2"></i>Yetki Yönetimi
            </h4>
            <p class="text-muted mb-0">
                Dinamik yetkileri görüntüleyin ve yönetin
            </p>
        </div>

        <div class="d-flex gap-2">
            <button class="btn btn-primary" @onclick="NavigateToCreate">
                <i class="bx bx-plus me-1"></i>Yeni Yetki
            </button>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Yetki Ara</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bx bx-search"></i>
                        </span>
                        <input type="text"
                               class="form-control"
                               placeholder="Yetki adı..."
                               @bind="searchTerm"
                               @bind:event="oninput"
                               @onkeyup="OnSearchChanged" />
                    </div>
                </div>

                <div class="col-md-3">
                    <label class="form-label">Sıralama</label>
                    <select class="form-select" value="@sortBy" @onchange="OnSortByChanged">
                        <option value="name-asc">İsim (A-Z)</option>
                        <option value="name-desc">İsim (Z-A)</option>
                        <option value="date-newest">En Yeni</option>
                        <option value="date-oldest">En Eski</option>
                    </select>
                </div>

                <div class="col-md-3 d-flex align-items-end">
                    <button class="btn btn-outline-secondary w-100" @onclick="ClearFilters">
                        <i class="bx bx-reset me-1"></i>Temizle
                    </button>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col">
                    <div class="d-flex gap-4 text-muted small">
                        <span>
                            <i class="bx bx-key text-primary"></i>
                            Toplam: <strong>@Yetkiler.Count</strong>
                        </span>
                        <span>
                            <i class="bx bx-filter-alt text-info"></i>
                            Filtrelenen: <strong>@FilteredYetkiler.Count</strong>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            @if (IsLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Yükleniyor...</span>
                    </div>
                    <p class="mt-3 text-muted">Yetkiler yükleniyor...</p>
                </div>
            }
            else if (!FilteredYetkiler.Any())
            {
                <div class="text-center py-5">
                    <i class="bx bx-search" style="font-size: 4rem; color: #ddd;"></i>
                    <h5 class="mt-3 text-muted">Kayıt bulunamadı</h5>
                    <p class="text-muted">Filtre kriterlerine uygun yetki bulunamadı.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Yetki</th>
                                <th>Üst Yetki</th>
                                <th>Controller</th>
                                <th>Action</th>
                                <th class="text-end">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in PagedItems)
                            {
                                <tr>
                                    <td>
                                        <div class="fw-semibold">@item.YetkiAdi</div>
                                        <small class="text-muted">@item.Aciklama</small>
                                    </td>
                                    <td>@GetParentName(item.UstYetkiId)</td>
                                    <td>@(string.IsNullOrWhiteSpace(item.ControllerAdi) ? "-" : item.ControllerAdi)</td>
                                    <td>@(string.IsNullOrWhiteSpace(item.ActionAdi) ? "-" : item.ActionAdi)</td>
                                    <td class="text-end">
                                        <button class="btn btn-sm btn-outline-primary" @onclick="() => NavigateToEdit(item.YetkiId)">
                                            <i class="bx bx-edit"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (TotalPages > 1)
                {
                    <nav>
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(CurrentPage == 1 ? "disabled" : "")">
                                <button class="page-link" @onclick="() => ChangePage(CurrentPage - 1)">Önceki</button>
                            </li>
                            @for (int i = 1; i <= TotalPages; i++)
                            {
                                <li class="page-item @(CurrentPage == i ? "active" : "")">
                                    <button class="page-link" @onclick="() => ChangePage(i)">@i</button>
                                </li>
                            }
                            <li class="page-item @(CurrentPage == TotalPages ? "disabled" : "")">
                                <button class="page-link" @onclick="() => ChangePage(CurrentPage + 1)">Sonraki</button>
                            </li>
                        </ul>
                    </nav>
                }
            }
        </div>
    </div>
</div>
