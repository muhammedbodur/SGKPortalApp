@namespace SGKPortalApp.PresentationLayer.Pages.Personel.Sendika.Components
@using Microsoft.AspNetCore.Components
@using SGKPortalApp.Common.Extensions
@using SGKPortalApp.BusinessObjectLayer.Enums.Common
@inherits SGKPortalApp.PresentationLayer.Components.Base.FieldPermissionPageBase

<div class="container-xxl flex-grow-1 container-p-y">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb breadcrumb-style1">
            <li class="breadcrumb-item">
                <a href="javascript:void(0);" @onclick="NavigateToHome">
                    <i class="bx bx-home-alt me-1"></i>Ana Sayfa
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="javascript:void(0);" @onclick="NavigateToSendikaList">
                    Sendika Yönetimi
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                @(IsEditMode ? "Düzenle" : "Yeni Sendika")
            </li>
        </ol>
    </nav>

    <!-- ═══════════════════════════════════════════════════════ -->
    <!-- PAGE HEADER -->
    <!-- ═══════════════════════════════════════════════════════ -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold mb-1">
                <i class="bx @(IsEditMode ? "bx-edit" : "bx-plus-circle") me-2"></i>
                @(IsEditMode ? "Sendika Düzenle" : "Yeni Sendika Ekle")
            </h4>
            <p class="text-muted mb-0">
                @(IsEditMode ? "Sendika bilgilerini güncelleyin" : "Yeni bir sendika oluşturun")
            </p>
        </div>

        <button class="btn btn-outline-secondary" @onclick="NavigateToSendikaList">
            <i class="bx bx-arrow-back me-1"></i>Geri Dön
        </button>
    </div>

    @if (IsLoading)
    {
        <!-- Loading State -->
        <div class="card">
            <div class="card-body text-center py-5">
                <div class="spinner-border text-primary mb-3" role="status">
                    <span class="visually-hidden">Yükleniyor...</span>
                </div>
                <p class="text-muted">@(IsEditMode ? "Sendika bilgileri yükleniyor..." : "Hazırlanıyor...")</p>
            </div>
        </div>
    }
    else if (NotFound)
    {
        <!-- Not Found State -->
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bx bx-error-circle display-1 text-danger mb-3"></i>
                <h5 class="mb-3">Sendika Bulunamadı</h5>
                <p class="text-muted mb-4">
                    Aradığınız sendika bulunamadı veya silinmiş olabilir.
                </p>
                <button class="btn btn-primary" @onclick="NavigateToSendikaList">
                    <i class="bx bx-list-ul me-1"></i>Sendika Listesine Dön
                </button>
            </div>
        </div>
    }
    else
    {
        <!-- ═══════════════════════════════════════════════════════ -->
        <!-- FORM CARD -->
        <!-- ═══════════════════════════════════════════════════════ -->
        <div class="row">
            <div class="col-lg-8 col-xl-6 mx-auto">
                <div class="card">
                    <div class="card-header d-flex align-items-center justify-content-between">
                        <h5 class="mb-0">
                            <i class="bx bx-info-circle me-2"></i>Sendika Bilgileri
                        </h5>
                        @if (IsEditMode)
                        {
                            <span class="badge bg-label-info">ID: @Id</span>
                        }
                    </div>

                    <div class="card-body">
                        <EditForm Model="@FormModel" OnValidSubmit="HandleSubmit">
                            <DataAnnotationsValidator />

                            <!-- Sendika Adı -->
                            <div class="mb-3">
                                <label class="form-label required">
                                    <i class="bx bx-group me-1"></i>Sendika Adı
                                </label>
                                <InputText @bind-Value="FormModel.SendikaAdi"
                                           class="form-control"
                                           placeholder="Örn: Türk Sağlık-Sen"
                                           maxlength="200"
                                           disabled="@IsSaving" />
                                <ValidationMessage For="@(() => FormModel.SendikaAdi)" class="text-danger small mt-1" />

                                <!-- Karakter Sayacı -->
                                <div class="form-text">
                                    @FormModel.SendikaAdi.Length / 200 karakter
                                </div>
                            </div>

                            <!-- Aktiflik Durumu (Sadece Edit Modda) -->
                            @if (IsEditMode)
                            {
                                <div class="mb-4">
                                    <label class="form-label">
                                        <i class="bx bx-toggle-right me-1"></i>Durum
                                    </label>
                                    <div class="form-check form-switch">
                                        <InputCheckbox @bind-Value="FormModel.IsActive"
                                                       class="form-check-input"
                                                       id="aktiflikSwitch"
                                                       disabled="@IsSaving" />
                                        <label class="form-check-label" for="aktiflikSwitch">
                                            @if (FormModel.IsActive)
                                            {
                                                <span class="badge bg-label-success">
                                                    <i class="bx bx-check-circle me-1"></i>Aktif
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-label-danger">
                                                    <i class="bx bx-x-circle me-1"></i>Pasif
                                                </span>
                                            }
                                        </label>
                                    </div>
                                    <small class="form-text text-muted">
                                        @if (FormModel.IsActive)
                                        {
                                            <span>Aktif sendikalara personel ataması yapılabilir</span>
                                        }
                                        else
                                        {
                                            <span>Pasif sendikalara yeni personel ataması yapılamaz</span>
                                        }
                                    </small>
                                </div>
                            }

                            <!-- Validation Summary -->
                            <ValidationSummary class="alert alert-danger" />

                            <!-- Action Buttons -->
                            <div class="d-flex gap-2 justify-content-end pt-3 border-top">
                                <button type="button"
                                        class="btn btn-outline-secondary"
                                        @onclick="NavigateToSendikaList"
                                        disabled="@IsSaving">
                                    <i class="bx bx-x me-1"></i>İptal
                                </button>

                                <button type="submit"
                                        class="btn btn-primary"
                                        disabled="@IsSaving">
                                    @if (IsSaving)
                                    {
                                        <span class="spinner-border spinner-border-sm me-1"></span>
                                        <span>Kaydediliyor...</span>
                                    }
                                    else
                                    {
                                        <i class="bx bx-check me-1"></i>
                                        <span>@(IsEditMode ? "Güncelle" : "Kaydet")</span>
                                    }
                                </button>
                            </div>
                        </EditForm>
                    </div>
                </div>

                <!-- Delete Button (Edit Mode Only) -->
                @if (IsEditMode)
                {
                    <div class="card border-danger mt-4">
                        <div class="card-body">
                            <h6 class="text-danger mb-2">
                                <i class="bx bx-error-circle me-1"></i>Tehlikeli Bölge
                            </h6>
                            <p class="text-muted mb-3 small">
                                Bu sendikayı silmek istiyorsanız, aşağıdaki butona tıklayın.
                                Bu işlem geri alınamaz.
                            </p>
                            <button class="btn btn-outline-danger"
                                    @onclick="ShowDeleteConfirmation"
                                    disabled="@IsSaving">
                                <i class="bx bx-trash me-1"></i>Sendikayı Sil
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

<!-- ═══════════════════════════════════════════════════════ -->
<!-- DELETE CONFIRMATION MODAL -->
<!-- ═══════════════════════════════════════════════════════ -->
@if (ShowDeleteModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bx bx-trash text-danger me-2"></i>Sendika Sil
                    </h5>
                    <button type="button" class="btn-close" @onclick="CloseDeleteModal" disabled="@IsDeleting"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-danger mb-3">
                        <i class="bx bx-error-circle me-2"></i>
                        <strong>Dikkat!</strong> Bu işlem geri alınamaz.
                    </div>
                    <p class="mb-0">
                        <strong>@FormModel.SendikaAdi</strong> sendikasını silmek istediğinizden emin misiniz?
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseDeleteModal" disabled="@IsDeleting">
                        İptal
                    </button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmDelete" disabled="@IsDeleting">
                        @if (IsDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                            <span>Siliniyor...</span>
                        }
                        else
                        {
                            <i class="bx bx-trash me-1"></i>
                            <span>Evet, Sil</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .required::after {
        content: " *";
        color: #ff0000;
    }
</style>
