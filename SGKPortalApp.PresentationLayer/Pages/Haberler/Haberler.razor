@page "/haberler"
@using SGKPortalApp.BusinessObjectLayer.DTOs.Response.Common
@inherits SGKPortalApp.PresentationLayer.Components.Base.FieldPermissionPageBase

<PageTitle>Haberler</PageTitle>

@if (!CanViewPage)
{
    <div class="alert alert-danger" role="alert">
        <i class="bx bx-lock-alt me-2"></i>
        Bu sayfayı görüntüleme yetkiniz bulunmuyor.
    </div>
}
else
{
    <FieldPermissionScope PageKey="@ResolvedPermissionKey" IsEditMode="true">
        <div class="container-xxl flex-grow-1 container-p-y">
            <!-- ====== PAGE HEADER ====== -->
            <div class="d-flex align-items-center justify-content-between mb-4">
                <div>
                    <h4 class="mb-1"><i class="bx bx-news text-primary me-2"></i>Haberler</h4>
                    <small class="text-muted">Tüm haberler listesi</small>
                </div>

            </div>

            <!-- ====== ARAMA BAR ====== -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0">
                                    <i class="bx bx-search text-muted"></i>
                                </span>
                                <input type="text"
                                    class="form-control border-start-0"
                                    placeholder="Haber başlığı veya içerik ile arama..."
                                    @bind-value="SearchTerm"
                                    @bind-value:event="oninput"
                                    @onkeydown="@(async (e) => { if (e.Key == "Enter") await Search(); })"
                                    />
                            </div>
                        </div>
                        <div class="col-md-4 mt-2 mt-md-0">
                            <div class="d-flex gap-2">
                                <button class="btn btn-primary flex-grow-1" @onclick="Search">
                                    <i class="bx bx-search me-1"></i> Ara
                                </button>
                                <button class="btn btn-outline-secondary" @onclick="ClearSearch" disabled="@(string.IsNullOrWhiteSpace(SearchTerm))">
                                    <i class="bx bx-x"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ====== LOADING ====== -->
            @if (IsLoading)
            {
                <div class="d-flex justify-content-center align-items-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Yükleniyor...</span>
                    </div>
                </div>
            }
            else
            {
                <!-- ====== HABER LİSTESİ ====== -->
                @if (HaberListe.Any())
                {
                    <div class="row g-4">
                        @foreach (var haber in HaberListe)
                        {
                            <div class="col-md-6 col-lg-4">
                                <div class="card shadow-sm h-100 haber-card">
                                    <!-- Resim -->
                                    @if (!string.IsNullOrEmpty(haber.VitrinResimUrl))
                                    {
                                        <div class="haber-card-img-wrapper">
                                            <img src="@haber.VitrinResimUrl"
                                                class="card-img-top"
                                                alt="@haber.Baslik"
                                                style="height: 180px; object-fit: cover;" />
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="haber-card-placeholder">
                                            <i class="bx bx-image-alt bx-lg text-muted"></i>
                                        </div>
                                    }

                                    <!-- İçerik -->
                                    <div class="card-body d-flex flex-column">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <small class="text-muted">
                                                <i class="bx bx-calendar me-1"></i>
                                                @haber.YayinTarihi.ToString("dd.MM.yyyy")
                                            </small>
                                            @if (haber.Resimler?.Count > 0)
                                            {
                                                <small class="text-muted">
                                                    <i class="bx bx-image me-1"></i>
                                                    @haber.Resimler.Count resim
                                                </small>
                                            }
                                        </div>

                                        <h6 class="fw-semibold text-dark mb-2 haber-title">@haber.Baslik</h6>

                                        <p class="text-muted small mb-auto haber-desc">
                                            @(haber.Icerik?.Length > 120 ? haber.Icerik.Substring(0, 120) + "..." : haber.Icerik)
                                        </p>

                                        <div class="mt-3">
                                            <a href="/haberler/@haber.HaberId" class="btn btn-sm btn-outline-primary w-100">
                                                <i class="bx bx-expand-alt me-1"></i>Haberi Oku
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- ====== SAYFALAMA ====== -->
                    @if (TotalPages > 1)
                    {
                        <nav class="mt-4" aria-label="Haber sayfalama">
                            <ul class="pagination justify-content-center">
                                <!-- Önceki -->
                                <li class="page-item @(CurrentPage <= 1 ? "disabled" : "")">
                                    <button class="page-link" @onclick="@(() => GoToPage(CurrentPage - 1))" disabled="@(CurrentPage <= 1)">
                                        <i class="bx bx-chevron-left"></i>
                                    </button>
                                </li>

                                <!-- Sayfa numaraları -->
                                @for (int i = GetStartPage(); i <= GetEndPage(); i++)
                                {
                                    var pageNum = i;
                                    <li class="page-item @(i == CurrentPage ? "active" : "")">
                                        <button class="page-link" @onclick="@(() => GoToPage(pageNum))">@pageNum</button>
                                    </li>
                                }

                                <!-- Sonraki -->
                                <li class="page-item @(CurrentPage >= TotalPages ? "disabled" : "")">
                                    <button class="page-link" @onclick="@(() => GoToPage(CurrentPage + 1))" disabled="@(CurrentPage >= TotalPages)">
                                        <i class="bx bx-chevron-right"></i>
                                    </button>
                                </li>
                            </ul>
                        </nav>

                        <p class="text-center text-muted small">
                            @CurrentPage. Sayfa / @TotalPages Toplam — @TotalCount Haber
                        </p>
                    }
                }
                else
                {
                    <!-- Haber yok -->
                    <div class="card shadow-sm">
                        <div class="card-body text-center py-5">
                            <i class="bx bx-news bx-xxl text-muted mb-3 d-block"></i>
                            <h5 class="text-muted">Haber Bulunamadı</h5>
                            <p class="text-muted">
                                @if (!string.IsNullOrWhiteSpace(SearchTerm))
                                {
                                    <span>"@SearchTerm" için sonuç bulunamadı. Farklı bir kelime deneyin.</span>
                                }
                                else
                                {
                                    <span>Henüz haber eklenmemiş.</span>
                                }
                            </p>
                        </div>
                    </div>
                }
            }

        </div>
    </FieldPermissionScope>
}

<style>
    .haber-card {
        border-radius: 12px;
        border: none;
        transition: all 0.3s ease;
        overflow: hidden;
    }
    .haber-card:hover {
        box-shadow: 0 8px 30px rgba(105, 108, 255, 0.18) !important;
        transform: translateY(-3px);
    }
    .haber-card-placeholder {
        height: 180px;
        background: #f0f2f5;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .haber-title {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    .haber-desc {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    .pagination .page-link {
        border-radius: 8px;
        margin: 0 3px;
        border: 1px solid #e9ecef;
        color: #495057;
    }
    .pagination .page-item.active .page-link {
        background-color: #696cff;
        border-color: #696cff;
    }
    .input-group .form-control:focus {
        box-shadow: none;
        border-color: #696cff;
    }
    .card { border-radius: 12px; border: none; }
</style>
