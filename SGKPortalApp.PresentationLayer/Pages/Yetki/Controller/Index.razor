@page "/yetki-controller"
@inherits SGKPortalApp.PresentationLayer.Components.Base.FieldPermissionPageBase
@using SGKPortalApp.BusinessObjectLayer.DTOs.Response.Common
@using SGKPortalApp.BusinessObjectLayer.DTOs.Request.Common

<PageTitle>Controller Yönetimi - SGK Portal</PageTitle>

<div class="container-xxl flex-grow-1 container-p-y">
    @if (!CanViewPage)
    {
        <div class="alert alert-danger" role="alert">
            <i class="bx bx-lock-alt me-2"></i>
            Bu sayfayı görüntüleme yetkiniz bulunmuyor.
        </div>
    }
    else
    {
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h4 class="fw-bold mb-1">
                    <i class="bx bx-folder-open me-2"></i>Controller Yönetimi
                </h4>
                <p class="text-muted mb-0">Modül controller'larını yönetin</p>
            </div>
            <button class="btn btn-primary" @onclick="ShowAddModal">
                <i class="bx bx-plus me-1"></i>Yeni Controller
            </button>
        </div>

        <!-- Search Card -->
        <div class="card mb-3">
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Arama</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bx bx-search"></i>
                            </span>
                            <input type="text"
                                   class="form-control"
                                   placeholder="Controller adı ile ara..."
                                   @bind="SearchTerm"
                                   @bind:event="oninput"
                                   @onkeyup="ApplyFilter" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Modül Filtresi</label>
                        <select class="form-select" @bind="FilterModulId" @bind:after="ApplyFilter">
                            <option value="0">Tümü</option>
                            @foreach (var m in Moduller)
                            {
                                <option value="@m.Id">@m.Ad</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Sırala</label>
                        <select class="form-select" @bind="SortBy" @bind:after="ApplyFilter">
                            <option value="ControllerAdi">Controller Adı</option>
                            <option value="ModulAdi">Modül</option>
                            <option value="EklenmeTarihi">Oluşturulma Tarihi</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Sıralama Yönü</label>
                        <select class="form-select" @bind="SortDirection" @bind:after="ApplyFilter">
                            <option value="asc">Artan</option>
                            <option value="desc">Azalan</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                @if (IsLoading)
                {
                    <div class="text-center py-5">
                        <div class="spinner-border text-primary"></div>
                        <p class="mt-2 text-muted">Yükleniyor...</p>
                    </div>
                }
                else if (!Controllers.Any())
                {
                    <div class="text-center py-5">
                        <i class="bx bx-folder-open" style="font-size: 3rem; color: #ccc;"></i>
                        <p class="mt-2 text-muted">Henüz controller eklenmemiş</p>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th style="width: 50px;">#</th>
                                    <th style="width: 25%;">Controller Adı</th>
                                    <th style="width: 20%;">Üst Controller</th>
                                    <th style="width: 15%;">Modül</th>
                                    <th style="width: 10%;">İşlem Sayısı</th>
                                    <th style="width: 12%;">Oluşturulma</th>
                                    <th class="text-end" style="width: 100px;">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var c in FilteredControllers)
                                {
                                    <tr>
                                        <td>@c.ModulControllerId</td>
                                        <td>
                                            <strong>@c.ModulControllerAdi</strong>
                                            @if (c.UstModulControllerId.HasValue)
                                            {
                                                <br/><small class="text-muted">└ Alt Controller</small>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(c.UstModulControllerAdi))
                                            {
                                                <span class="badge bg-label-secondary">@c.UstModulControllerAdi</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td><span class="badge bg-label-primary">@c.ModulAdi</span></td>
                                        <td><span class="badge bg-label-info">@c.IslemCount</span></td>
                                        <td><small class="text-muted">@c.EklenmeTarihi.ToString("dd.MM.yyyy")</small></td>
                                        <td class="text-end">
                                            <button class="btn btn-sm btn-icon btn-outline-primary me-1" @onclick="() => StartEdit(c)">
                                                <i class="bx bx-edit"></i>
                                            </button>
                                            <button class="btn btn-sm btn-icon btn-outline-danger" @onclick="() => DeleteController(c)">
                                                <i class="bx bx-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Stats -->
                    <div class="mt-3 text-muted small">
                        <i class="bx bx-folder-open text-primary"></i>
                        @if (FilteredControllers.Count != Controllers.Count)
                        {
                            <text>Gösterilen: <strong>@FilteredControllers.Count</strong> / Toplam: <strong>@Controllers.Count</strong> controller</text>
                        }
                        else
                        {
                            <text>Toplam: <strong>@Controllers.Count</strong> controller</text>
                        }
                    </div>
                }
            </div>
        </div>
    }
</div>

@if (ShowModal)
{
    <div class="modal fade show d-block" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(EditingId.HasValue ? "Controller Düzenle" : "Yeni Controller")</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Modül <span class="text-danger">*</span></label>
                        <select class="form-select" @bind="SelectedModulId" @bind:after="OnModulChangedInModal">
                            <option value="0">-- Modül Seçiniz --</option>
                            @foreach (var m in Moduller)
                            {
                                <option value="@m.Id">@m.Ad</option>
                            }
                        </select>
                    </div>

                    @if (SelectedModulId > 0)
                    {
                        <div class="mb-3">
                            <label class="form-label">
                                Üst Controller (Opsiyonel)
                                <i class="bx bx-info-circle text-muted" title="Hiyerarşik yapı için parent controller seçebilirsiniz"></i>
                            </label>
                            <select class="form-select" @bind="SelectedUstModulControllerId">
                                <option value="0">-- Root Controller (Üst Yok) --</option>
                                @foreach (var pc in ParentControllers)
                                {
                                    <option value="@pc.Id">@pc.Ad</option>
                                }
                            </select>
                            <small class="form-text text-muted">
                                Root controller seçerseniz: <code>SIRA.BANKO.INDEX</code><br/>
                                Alt controller olarak: <code>SIRA.BANKO.PERSONELATAMA.INDEX</code>
                            </small>
                        </div>
                    }

                    <div class="mb-3">
                        <label class="form-label">Controller Adı <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" @bind="ControllerAdi" placeholder="Örn: Personel, Banko..." />
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CloseModal">İptal</button>
                    <button class="btn btn-primary" @onclick="SaveController" disabled="@IsSaving">
                        @if (IsSaving) { <span class="spinner-border spinner-border-sm me-1"></span> }
                        Kaydet
                    </button>
                </div>
            </div>
        </div>
    </div>
}
