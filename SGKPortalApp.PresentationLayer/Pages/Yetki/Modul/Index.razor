@page "/yetki/yetki-modul"
@inherits SGKPortalApp.PresentationLayer.Components.Base.FieldPermissionPageBase
@using SGKPortalApp.BusinessObjectLayer.DTOs.Response.Common
@using SGKPortalApp.BusinessObjectLayer.DTOs.Request.Common

<PageTitle>Modül Yönetimi - SGK Portal</PageTitle>

<div class="container-xxl flex-grow-1 container-p-y">
    @if (!CanViewPage)
    {
        <div class="alert alert-danger" role="alert">
            <i class="bx bx-lock-alt me-2"></i>
            Bu sayfayı görüntüleme yetkiniz bulunmuyor.
        </div>
    }
    else
    {
        <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold mb-1">
                <i class="bx bx-folder me-2"></i>Modül Yönetimi
            </h4>
            <p class="text-muted mb-0">
                Sistem modüllerini görüntüleyin ve yönetin
            </p>
        </div>
        <button class="btn btn-primary" @onclick="ShowAddModal">
            <i class="bx bx-plus me-1"></i>Yeni Modül
        </button>
    </div>

    <!-- Search Card -->
    <div class="card mb-3">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Arama</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bx bx-search"></i>
                        </span>
                        <input type="text"
                               class="form-control"
                               placeholder="Modül adı veya kodu ile ara..."
                               @bind="SearchTerm"
                               @bind:event="oninput"
                               @onkeyup="ApplyFilter" />
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Sırala</label>
                    <select class="form-select" @bind="SortBy" @bind:after="ApplyFilter">
                        <option value="ModulAdi">Modül Adı</option>
                        <option value="ModulKodu">Modül Kodu</option>
                        <option value="EklenmeTarihi">Oluşturulma Tarihi</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Sıralama Yönü</label>
                    <select class="form-select" @bind="SortDirection" @bind:after="ApplyFilter">
                        <option value="asc">Artan</option>
                        <option value="desc">Azalan</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- Table Card -->
    <div class="card">
        <div class="card-body">
            @if (IsLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Yükleniyor...</span>
                    </div>
                    <p class="mt-2 text-muted">Modüller yükleniyor...</p>
                </div>
            }
            else if (!Moduller.Any())
            {
                <div class="text-center py-5">
                    <i class="bx bx-folder-open" style="font-size: 3rem; color: #ccc;"></i>
                    <p class="mt-2 text-muted">Henüz modül eklenmemiş</p>
                    <button class="btn btn-primary btn-sm" @onclick="ShowAddModal">
                        <i class="bx bx-plus me-1"></i>İlk Modülü Ekle
                    </button>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th style="width: 60px;">#</th>
                                <th style="width: 35%;">Modül Adı</th>
                                <th style="width: 15%;">Modül Kodu</th>
                                <th style="width: 15%;">Controller Sayısı</th>
                                <th style="width: 15%;">Oluşturulma</th>
                                <th style="width: 150px;" class="text-end">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var modul in FilteredModuller)
                            {
                                <tr>
                                    <td>@modul.ModulId</td>
                                    <td>
                                        @if (EditingId == modul.ModulId)
                                        {
                                            <input type="text"
                                                   class="form-control form-control-sm"
                                                   @bind="EditingModulAdi"
                                                   placeholder="Modül adı..." />
                                        }
                                        else
                                        {
                                            <strong>@modul.ModulAdi</strong>
                                        }
                                    </td>
                                    <td>
                                        @if (EditingId == modul.ModulId)
                                        {
                                            <input type="text"
                                                   class="form-control form-control-sm"
                                                   @bind="EditingModulKodu"
                                                   placeholder="Modül kodu..."
                                                   maxlength="10"
                                                   style="text-transform: uppercase;" />
                                        }
                                        else
                                        {
                                            <code class="text-primary">@modul.ModulKodu</code>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-label-info">
                                            @modul.ControllerCount Controller
                                        </span>
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            @modul.EklenmeTarihi.ToString("dd.MM.yyyy HH:mm")
                                        </small>
                                    </td>
                                    <td class="text-end">
                                        @if (EditingId == modul.ModulId)
                                        {
                                            <button class="btn btn-sm btn-success me-1"
                                                    @onclick="() => SaveEdit(modul.ModulId)"
                                                    disabled="@IsSaving">
                                                @if (IsSaving)
                                                {
                                                    <span class="spinner-border spinner-border-sm me-1"></span>
                                                }
                                                <i class="bx bx-check"></i> Kaydet
                                            </button>
                                            <button class="btn btn-sm btn-secondary"
                                                    @onclick="CancelEdit"
                                                    disabled="@IsSaving">
                                                <i class="bx bx-x"></i> İptal
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-icon btn-outline-primary me-1"
                                                    @onclick="() => StartEdit(modul)"
                                                    title="Düzenle">
                                                <i class="bx bx-edit"></i>
                                            </button>
                                            <button class="btn btn-sm btn-icon btn-outline-danger"
                                                    @onclick="() => DeleteModul(modul)"
                                                    title="Sil">
                                                <i class="bx bx-trash"></i>
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Stats -->
                <div class="mt-3 text-muted small">
                    <i class="bx bx-folder text-primary"></i>
                    @if (FilteredModuller.Count != Moduller.Count)
                    {
                        <text>Gösterilen: <strong>@FilteredModuller.Count</strong> / Toplam: <strong>@Moduller.Count</strong> modül</text>
                    }
                    else
                    {
                        <text>Toplam: <strong>@Moduller.Count</strong> modül</text>
                    }
                </div>
            }
        </div>
        </div>
    }
</div>

@if (ShowModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bx bx-plus-circle me-2"></i>Yeni Modül Ekle
                    </h5>
                    <button type="button" class="btn-close" @onclick="CloseModal" disabled="@IsSaving"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Modül Adı <span class="text-danger">*</span></label>
                        <input type="text"
                               class="form-control"
                               @bind="NewModulAdi"
                               placeholder="Örn: Personel, Sıramatik, PDKS..."
                               disabled="@IsSaving" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Modül Kodu <span class="text-danger">*</span></label>
                        <input type="text"
                               class="form-control"
                               @bind="NewModulKodu"
                               placeholder="Örn: PER, SIR, PDKS..."
                               maxlength="10"
                               style="text-transform: uppercase;"
                               disabled="@IsSaving" />
                        <small class="text-muted">Sadece büyük harfler (A-Z), en fazla 10 karakter</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseModal" disabled="@IsSaving">
                        <i class="bx bx-x me-1"></i>İptal
                    </button>
                    <button type="button" class="btn btn-primary" @onclick="AddModul" disabled="@IsSaving">
                        @if (IsSaving)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        else
                        {
                            <i class="bx bx-check me-1"></i>
                        }
                        Ekle
                    </button>
                </div>
            </div>
        </div>
    </div>
}

