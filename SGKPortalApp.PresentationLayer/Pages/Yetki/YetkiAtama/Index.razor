@page "/yetki/yetki-atama"
@inherits SGKPortalApp.PresentationLayer.Components.Base.FieldPermissionPageBase
@using SGKPortalApp.BusinessObjectLayer.DTOs.Response.PersonelIslemleri
@using SGKPortalApp.BusinessObjectLayer.DTOs.Response.Common
@using SGKPortalApp.BusinessObjectLayer.Enums.Common
@using SGKPortalApp.Common.Extensions
@using SGKPortalApp.PresentationLayer.Models.ViewModels
@using SGKPortalApp.PresentationLayer.Components.Yetki

<PageTitle>Yetki Atama - SGK Portal</PageTitle>

<div class="container-xxl flex-grow-1 container-p-y">
    @if (!CanViewPage)
    {
        <div class="alert alert-danger" role="alert">
            <i class="bx bx-lock-alt me-2"></i>
            Bu sayfayı görüntüleme yetkiniz bulunmuyor.
        </div>
    }
    else
    {
    @* amamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamam *@
    @* HEADER *@
    @* amamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamam *@
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold mb-1">
                <i class="bx bx-user-check me-2"></i>Yetki Atama
            </h4>
            <p class="text-muted mb-0">Personellere dinamik yetkiler atayın ve yönetin</p>
        </div>
    </div>

    <div class="row">
        @* amamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamam *@
        @* SOL PANEL - PERSONEL SEÇİMİ *@
        @* amamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamam *@
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bx bx-user me-2"></i>Personel Seçimi</h5>
                </div>
                <div class="card-body">
                    @* Filtreler *@
                    <div class="mb-3">
                        <label class="form-label small text-muted">Arama (Ad, Soyad, TC veya Sicil)</label>
                        <div class="input-group input-group-sm">
                            <input type="text" 
                                   id="personelSearchInput"
                                   class="form-control" 
                                   @bind="SearchTerm" 
                                   @oninput="OnSearchInput"
                                   @onkeypress="HandleSearchKeyPress" 
                                   placeholder="Ara..." 
                                   autocomplete="off" />
                            <button class="btn btn-outline-primary" @onclick="SearchPersonel" disabled="@IsSearching">
                                <i class="bx bx-search"></i>
                            </button>
                        </div>
                    </div>
                    <div class="row g-2 mb-3">
                        @if (IsFieldVisibleInList("DEPARTMANID"))
                        {
                            <div class="col-6">
                                <label class="form-label small text-muted">
                                    <i class="bx bx-briefcase me-1"></i>Departman
                                    @if (!CanEditFieldInList("DEPARTMANID"))
                                    {
                                        <span class="badge bg-label-warning ms-1" title="Sadece görüntüleme yetkiniz var">
                                            <i class="bx bx-lock-alt"></i>
                                        </span>
                                    }
                                </label>
                                <select class="form-select form-select-sm" @bind="FilterDepartmanId" @bind:after="OnDepartmanChanged" disabled="@IsFieldDisabledInList("DEPARTMANID")">
                                    <option value="0">Tümü</option>
                                    @foreach (var d in DepartmanDropdown)
                                    {
                                        <option value="@d.Id">@d.Ad</option>
                                    }
                                </select>
                            </div>
                        }
                        @if (IsFieldVisibleInList("SERVISID"))
                        {
                            <div class="col-6">
                                <label class="form-label small text-muted">
                                    <i class="bx bx-sitemap me-1"></i>Servis
                                    @if (!CanEditFieldInList("SERVISID"))
                                    {
                                        <span class="badge bg-label-warning ms-1" title="Sadece görüntüleme yetkiniz var">
                                            <i class="bx bx-lock-alt"></i>
                                        </span>
                                    }
                                </label>
                                <select class="form-select form-select-sm" @bind="FilterServisId" @bind:after="SearchPersonel" disabled="@(FilterDepartmanId <= 0 || IsFieldDisabledInList("SERVISID"))">
                                    <option value="0">Tümü</option>
                                    @foreach (var s in ServisDropdown)
                                    {
                                        <option value="@s.Id">@s.Ad</option>
                                    }
                                </select>
                            </div>
                        }
                    </div>

                    @* Personel Listesi *@
                    <div class="border rounded" style="max-height: 400px; overflow-y: auto;">
                        @if (IsSearching)
                        {
                            <div class="text-center py-4">
                                <div class="spinner-border spinner-border-sm text-primary"></div>
                            </div>
                        }
                        else if (!PersonelList.Any())
                        {
                            <div class="text-center py-4 text-muted small">
                                <i class="bx bx-search" style="font-size: 2rem;"></i>
                                <p class="mb-0 mt-2">Personel aramak için filtre kullanın</p>
                            </div>
                        }
                        else
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var p in PersonelList)
                                {
                                    <button type="button" 
                                            class="list-group-item list-group-item-action @(SelectedPersonel?.TcKimlikNo == p.TcKimlikNo ? "active" : "")"
                                            @onclick="() => SelectPersonel(p)">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1 small">@p.AdSoyad</h6>
                                            <span class="text-muted small">(@p.SicilNo)</span>
                                        </div>
                                        <small class="@(SelectedPersonel?.TcKimlikNo == p.TcKimlikNo ? "text-white-50" : "text-muted")">
                                            @p.ServisAdi
                                        </small>
                                    </button>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        @* amamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamam *@
        @* SAĞ PANEL - YETKİ AĞACI *@
        @* amamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamamam *@
        <div class="col-md-8">
            @if (SelectedPersonel == null)
            {
                <div class="card h-100">
                    <div class="card-body d-flex align-items-center justify-content-center">
                        <div class="text-center text-muted">
                            <i class="bx bx-user-check" style="font-size: 4rem;"></i>
                            <p class="mt-3">Yetki atamak için sol panelden bir personel seçin</p>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card">
                    @* Seçili Personel Bilgisi *@
                    <div class="card-header bg-primary text-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-0">
                                    <i class="bx bx-user-circle me-2"></i>@SelectedPersonel.AdSoyad
                                </h5>
                                <small class="opacity-75">@SelectedPersonel.ServisAdi - @SelectedPersonel.DepartmanAdi</small>
                            </div>
                            <div>
                                <button class="btn btn-sm btn-light me-2" @onclick="SaveAllPermissions" disabled="@IsSaving">
                                    @if (IsSaving)
                                    {
                                        <span class="spinner-border spinner-border-sm me-1"></span>
                                    }
                                    <i class="bx bx-save me-1"></i>Kaydet
                                </button>
                                <button class="btn btn-sm btn-outline-light" @onclick="LoadPermissionTree" disabled="@IsLoading">
                                    <i class="bx bx-refresh"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    @* Yetki Ağacı - Excel Görünümü *@
                    <div class="card-body p-0">
                        @if (IsLoading)
                        {
                            <div class="text-center py-5">
                                <div class="spinner-border text-primary"></div>
                                <p class="mt-2 text-muted">Yetkiler yükleniyor...</p>
                            </div>
                        }
                        else if (!PermissionTree.Any())
                        {
                            <div class="text-center py-5 text-muted">
                                <i class="bx bx-folder-open" style="font-size: 3rem;"></i>
                                <p class="mt-2">Henüz yetki tanımı bulunmuyor</p>
                            </div>
                        }
                        else
                        {
                            <div class="accordion accordion-flush" id="moduleAccordion">
                                @{
                                    var modulIndex = 0;
                                }
                                @foreach (var modulNode in PermissionTree)
                                {
                                    var collapseId = $"modulCollapse_{modulIndex}";
                                    var headingId = $"modulHeading_{modulIndex}";
                                    <div class="accordion-item">
                                        <h2 class="accordion-header" id="@headingId">
                                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId" aria-expanded="false" aria-controls="@collapseId">
                                                <i class="bx bx-grid-alt me-2 text-primary"></i>
                                                <strong>@modulNode.IslemAdi</strong>
                                                <span class="badge bg-label-primary ms-2">@modulNode.Children.Count</span>
                                            </button>
                                        </h2>
                                        <div id="@collapseId" class="accordion-collapse collapse" aria-labelledby="@headingId" data-bs-parent="#moduleAccordion">
                                            <div class="accordion-body p-0">
                                                <div class="table-responsive">
                                                    <table class="table table-sm table-hover mb-0 permission-tree-table">
                                                        <thead class="table-light sticky-top">
                                                            <tr>
                                                                <th style="width: 50%;">Yetki Adı</th>
                                                                <th class="text-center" style="width: 15%;">Tip</th>
                                                                <th class="text-center" style="width: 11.66%;">None</th>
                                                                <th class="text-center" style="width: 11.66%;">View</th>
                                                                <th class="text-center" style="width: 11.66%;">Edit</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var controllerNode in modulNode.Children)
                                                            {
                                                                <tr class="table-secondary">
                                                                    <td colspan="5">
                                                                        <i class="bx bx-folder me-2 text-muted"></i>
                                                                        <strong>@controllerNode.IslemAdi</strong>
                                                                        <span class="badge bg-label-secondary ms-2">@controllerNode.Children.Count</span>
                                                                    </td>
                                                                </tr>
                                                                <PermissionTreeRow Node="controllerNode" Depth="0" OnLevelChanged="HandleLevelChanged" />
                                                            }
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    modulIndex++;
                                }
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
    }
</div>

<style>
    .permission-tree-table tbody tr:hover {
        background-color: rgba(105, 108, 255, 0.08) !important;
    }
    .permission-tree-table .form-check-input {
        cursor: pointer;
        width: 1.2em;
        height: 1.2em;
    }
    .permission-tree-table .form-check-input:checked {
        background-color: #696cff;
        border-color: #696cff;
    }
    .text-purple {
        color: #9c27b0 !important;
    }
    
    /* Typeahead Autocomplete Styles */
    .typeahead {
        background-color: #fff;
    }
    
    .tt-menu {
        position: absolute;
        top: 100%;
        left: 0;
        z-index: 1000;
        display: none;
        float: left;
        min-width: 160px;
        padding: 5px 0;
        margin: 2px 0 0;
        list-style: none;
        font-size: 14px;
        text-align: left;
        background-color: #fff;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.175);
    }
    
    .tt-menu > .tt-suggestion {
        display: block;
        padding: 8px 12px;
        clear: both;
        font-weight: normal;
        line-height: 1.42857143;
        color: #333;
        white-space: nowrap;
        cursor: pointer;
    }
    
    .tt-menu > .tt-suggestion:hover,
    .tt-menu > .tt-suggestion.tt-cursor {
        color: #fff;
        background-color: #696cff;
    }
    
    .tt-suggestion strong {
        font-weight: 600;
    }
</style>

<script src="~/js/yetki-atama-autocomplete.js"></script>
