@* Banko Sıra Çağırma Paneli *@

<!-- Panel Container -->
<div id="template-customizer" class="call-panel">

    <!-- Panel Header -->
    <div id="panel-header" class="panel-header"
         style="background: @HeaderBackground;"
         @onclick="TogglePin"
         title="@(IsPinned ? "Sabitlemeyi Kaldır" : "Sabitle")">
        <span class="pin-icon"
              style="background: @HeaderBackground;">
            <i class="bx @(IsPinned ? "bx-pin" : "bx-pin-off")"></i>
        </span>
        Banko Sıra Çağırma Paneli
    </div>

    <!-- Panel Body -->
    <div class="panel-body">

        <!-- Çağırma Butonu -->
        <div class="px-4 mb-4">
            <button type="button"
                    class="btn btn-primary w-100 d-flex align-items-center justify-content-center gap-2"
                    @onclick="SiradakiCagir"
                    disabled="@(!SiraListesi.Any())">
                <i class="bx bx-bell bx-tada bx-sm"></i>
                <span>Sıradaki Vatandaşı Çağır</span>
            </button>
        </div>

        <!-- Sıra Listesi -->
        <div class="px-4">
            @if (SiraListesi != null && SiraListesi.Any())
            {
                <div class="mb-2">
                    <small class="text-muted">Bekleyen @SiraListesi.Count sıra var</small>
                </div>

                @foreach (var sira in SiraListesi)
                {
                    var isFirstCallable = FirstCallableSiraId.HasValue && FirstCallableSiraId.Value == sira.SiraId;
                    <div class="card mb-2 position-relative @(sira.BeklemeDurum == BeklemeDurum.Cagrildi ? "border-primary alert-success" : "")"
                         data-sira-id="@sira.SiraId"
                         data-callable="@IsCallableSira(sira)"
                         data-first-callable="@isFirstCallable">

                        @if (sira.BeklemeDurum == BeklemeDurum.Cagrildi && sira.YonlendirildiMi == false)
                        {
                            <button type="button"
                                    class="btn btn-icon btn-sm btn-outline-primary position-absolute top-0 end-0 m-2"
                                    title="Bu sırayı yönlendir"
                                    @onclick:stopPropagation="true"
                                    @onclick="() => OpenYonlendirmeModal(sira)">
                                <i class="bx bx-directions"></i>
                            </button>
                        }
                        <div class="card-body p-3">
                            <div class="d-flex align-items-center justify-content-between">
                                <div class="flex-grow-1">
                                    <div class="position-relative mb-1" style="min-height: 36px;">
                                        <span class="badge text-uppercase text-black-50 position-absolute start-0 top-50 translate-middle-y @GetUzmanlikBadgeClass(sira.Uzmanlik)">
                                            Sıra
                                        </span>
                                        <span class="fs-3 fw-bold text-dark d-block text-center">
                                            @sira.SiraNo
                                        </span>
                                    </div>
                                    <div class="text-uppercase small fw-semibold text-secondary mb-1">
                                        <i class="bx bx-user me-1"></i>@sira.KanalAltAdi
                                    </div>
                                    <div class="d-flex align-items-center gap-2 mb-1">
                                        <small class="text-muted d-block">
                                            <i class="bx bx-time me-1"></i>@sira.SiraAlisZamani.ToString("HH:mm")
                                        </small>
                                        @if (sira.BeklemeDurum == BeklemeDurum.Cagrildi)
                                        {
                                            <span class="badge text-uppercase text-bg-success">Çağırıldı</span>
                                        }
                                        else
                                        {
                                            <span class="badge text-uppercase text-bg-info">Bekliyor</span>
                                        }
                                    </div>
                                    @if (sira.YonlendirildiMi && !string.IsNullOrWhiteSpace(sira.YonlendirmeAciklamasi))
                                    {
                                        <div class="mt-2 small text-warning d-flex align-items-center">
                                            <i class="bx bx-info-circle me-1"></i>
                                            <span>@sira.YonlendirmeAciklamasi</span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bx bx-info-circle display-4 text-muted mb-3 d-block"></i>
                    <h6 class="text-muted">Bekleyen Sıra Yok</h6>
                    <p class="text-muted small mb-0">Şu anda çağrılacak vatandaş bulunmuyor.</p>
                </div>
            }
        </div>

        <!-- Panel Footer -->
        @if (SiraListesi.Any())
        {
            <div class="px-4 py-3 mt-3 border-top">
                <div class="row g-2 text-center">
                    <div class="col-6">
                        <small class="text-muted d-block">Toplam</small>
                        <strong class="text-primary">@SiraListesi.Count</strong>
                    </div>
                    <div class="col-6">
                        <small class="text-muted d-block">Çağrılan</small>
                        <strong class="text-success">@SiraListesi.Count(s => s.BeklemeDurum == BeklemeDurum.Cagrildi)</strong>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@if (isYonlendirmeModalOpen && yonlendirmeIcinSecilenSira != null)
{
    <div class="modal-backdrop fade show" style="display:block;"></div>
    <div class="modal fade show d-block" tabindex="-1" style="background:rgba(0,0,0,0.35);">
        <div class="modal-dialog modal-dialog-centered" style="max-width: 520px;">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Sıra Yönlendirme - @yonlendirmeIcinSecilenSira.SiraNo</h5>
                    <button type="button" class="btn-close" @onclick="CloseYonlendirmeModal"></button>
                </div>
                <div class="modal-body">
                    @if (isLoadingOptions)
                    {
                        <div class="text-center py-5">
                            <div class="spinner-border text-primary mb-3" role="status">
                                <span class="visually-hidden">Yükleniyor...</span>
                            </div>
                            <p class="text-muted mb-0">Yönlendirme seçenekleri yükleniyor...</p>
                        </div>
                    }
                    else
                    {
                        <div class="row g-3">
                            <div class="col-12">
                                <label class="form-label">Yönlendirme Tipi</label>
                                <select class="form-select" @bind="selectedYonlendirmeTipiValue" disabled="@isYonlendirmeSubmitting">
                                    <option value="">Yönlendirme tipini seçin</option>
                                    @foreach (var tip in yonlendirmeTipiOptions)
                                    {
                                        <option value="@tip.Value">@tip.Label</option>
                                    }
                                </select>
                            </div>

                            @if (SelectedYonlendirmeTipi == YonlendirmeTipi.BaskaBanko)
                            {
                                <div class="col-12">
                                    <label class="form-label">Hedef Banko</label>
                                    <select class="form-select" @bind="selectedBankoId" disabled="@isYonlendirmeSubmitting">
                                        <option value="">Banko seçin</option>
                                        @foreach (var banko in bankoOptions)
                                        {
                                            <option value="@banko.Value">@banko.Label</option>
                                        }
                                    </select>
                                </div>
                            }
                            else if (SelectedYonlendirmeTipi == YonlendirmeTipi.UzmanPersonel)
                            {
                                <div class="col-12">
                                    <div class="alert alert-info mb-0">
                                        Genel uzman havuzuna yönlendirme yapılacaktır. Ek seçim gerekmiyor.
                                    </div>
                                </div>
                            }
                            else if (SelectedYonlendirmeTipi == YonlendirmeTipi.Sef)
                            {
                                <div class="col-12">
                                    <div class="alert alert-info mb-0">
                                        Şef/Yetkili masasına yönlendirme yapılacaktır. Ek seçim gerekmiyor.
                                    </div>
                                </div>
                            }

                            <div class="col-12">
                                <label class="form-label">Yönlendirme Notu (Opsiyonel)</label>
                                <textarea class="form-control"
                                          rows="3"
                                          maxlength="500"
                                          @bind="yonlendirmeNotu"
                                          placeholder="Vatandaşı neden yönlendirmek istediğinizi yazabilirsiniz."
                                          disabled="@isYonlendirmeSubmitting"></textarea>
                            </div>

                            @if (!string.IsNullOrWhiteSpace(yonlendirmeErrorMessage))
                            {
                                <div class="col-12">
                                    <div class="alert alert-danger mb-0" role="alert">
                                        <i class="bx bx-error-circle me-2"></i>
                                        @yonlendirmeErrorMessage
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseYonlendirmeModal" disabled="@(isYonlendirmeSubmitting || isLoadingOptions)">Vazgeç</button>
                    <button type="button" class="btn btn-primary" disabled="@(!CanSubmitYonlendirme || isYonlendirmeSubmitting || isLoadingOptions)" @onclick="SubmitYonlendirmeAsync">
                        @if (isYonlendirmeSubmitting)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                            <span>Yönlendiriliyor...</span>
                        }
                        else
                        {
                            <i class="bx bx-send me-1"></i>
                            <span>Yönlendirmeyi Kaydet</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Toggle Button -->
<button id="callPanelToggleCustomizerButton"
        type="button"
        class="panel-toggle-btn"
        @onclick="TogglePanel"
        title="Sıra Çağırma Paneli">
    <i class="bx bx-bell bx-tada bx-md"></i>
</button>