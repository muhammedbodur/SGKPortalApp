@using SGKPortalApp.BusinessObjectLayer.DTOs.Response.PersonelIslemleri
@using SGKPortalApp.BusinessObjectLayer.Enums.PersonelIslemleri

<div class="personel-hover-trigger"
     @onmouseenter="ShowCard"
     @onmouseleave="HideCard"
     @onmousemove="UpdatePosition">
    @ChildContent
</div>

@if (IsVisible && Personel != null)
{
    <div class="personel-hover-card @(IsVisible ? "show" : "")"
         style="left: @(PositionX)px; top: @(PositionY)px;">
        <div class="hover-card-content">
            <!-- Sol: Resim -->
            <div class="hover-card-image">
                @if (!string.IsNullOrEmpty(Personel.Resim))
                {
                    <img src="@Personel.Resim" alt="@Personel.AdSoyad" />
                }
                else
                {
                    <div class="avatar-placeholder">
                        <span>@Personel.AdSoyad.Substring(0, 1).ToUpper()</span>
                    </div>
                }
            </div>

            <!-- Sag: Icerikler -->
            <div class="hover-card-info">
                <div class="hover-card-header">
                    <h6 class="mb-0">@Personel.AdSoyad</h6>
                    <span class="badge @GetStatusBadgeClass()">
                        @GetStatusText()
                    </span>
                </div>

                <div class="hover-card-details">
                    <div class="detail-row">
                        <i class="bx bx-id-card"></i>
                        <span>@Personel.TcKimlikNo</span>
                    </div>

                    @if (Personel.SicilNo.HasValue && Personel.SicilNo > 0)
                    {
                        <div class="detail-row">
                            <i class="bx bx-hash"></i>
                            <span>Sicil: @Personel.SicilNo</span>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Personel.Email))
                    {
                        <div class="detail-row">
                            <i class="bx bx-envelope"></i>
                            <span>@Personel.Email</span>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Personel.CepTelefonu))
                    {
                        <div class="detail-row">
                            <i class="bx bx-phone"></i>
                            <span>@Personel.CepTelefonu</span>
                        </div>
                    }

                    @if (Personel.Dahili > 0)
                    {
                        <div class="detail-row">
                            <i class="bx bx-phone-call"></i>
                            <span>Dahili: @Personel.Dahili</span>
                        </div>
                    }

                    <hr class="my-2" />

                    @if (!string.IsNullOrEmpty(Personel.DepartmanAdi))
                    {
                        <div class="detail-row">
                            <i class="bx bx-building"></i>
                            <span>@Personel.DepartmanAdi</span>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Personel.HizmetBinasiAdi))
                    {
                        <div class="detail-row">
                            <i class="bx bx-map-pin"></i>
                            <span>@Personel.HizmetBinasiAdi</span>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Personel.ServisAdi))
                    {
                        <div class="detail-row">
                            <i class="bx bx-briefcase"></i>
                            <span>@Personel.ServisAdi</span>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Personel.UnvanAdi))
                    {
                        <div class="detail-row">
                            <i class="bx bx-user-circle"></i>
                            <span>@Personel.UnvanAdi</span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public PersonelResponseDto? Personel { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    private bool IsVisible { get; set; }
    private double PositionX { get; set; }
    private double PositionY { get; set; }

    private System.Timers.Timer? _showTimer;
    private System.Timers.Timer? _hideTimer;

    protected override void OnInitialized()
    {
        _showTimer = new System.Timers.Timer(300); // 300ms delay before show
        _showTimer.AutoReset = false;
        _showTimer.Elapsed += async (s, e) => await InvokeAsync(() => { IsVisible = true; StateHasChanged(); });

        _hideTimer = new System.Timers.Timer(200); // 200ms delay before hide
        _hideTimer.AutoReset = false;
        _hideTimer.Elapsed += async (s, e) => await InvokeAsync(() => { IsVisible = false; StateHasChanged(); });
    }

    private void ShowCard()
    {
        _hideTimer?.Stop();
        _showTimer?.Start();
    }

    private void HideCard()
    {
        _showTimer?.Stop();
        _hideTimer?.Start();
    }

    private void UpdatePosition(MouseEventArgs e)
    {
        // Offset to avoid cursor overlap
        PositionX = e.ClientX + 15;
        PositionY = e.ClientY + 15;
    }

    private string GetStatusBadgeClass()
    {
        return Personel?.PersonelAktiflikDurum switch
        {
            PersonelAktiflikDurum.Aktif => "bg-success",
            PersonelAktiflikDurum.Pasif => "bg-danger",
            PersonelAktiflikDurum.Emekli => "bg-info",
            _ => "bg-secondary"
        };
    }

    private string GetStatusText()
    {
        return Personel?.PersonelAktiflikDurum switch
        {
            PersonelAktiflikDurum.Aktif => "Aktif",
            PersonelAktiflikDurum.Pasif => "Pasif",
            PersonelAktiflikDurum.Emekli => "Emekli",
            _ => "-"
        };
    }

    public void Dispose()
    {
        _showTimer?.Dispose();
        _hideTimer?.Dispose();
    }
}
