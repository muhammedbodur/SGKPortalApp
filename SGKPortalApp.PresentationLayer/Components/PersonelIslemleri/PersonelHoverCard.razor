@using SGKPortalApp.BusinessObjectLayer.DTOs.Response.PersonelIslemleri
@using SGKPortalApp.BusinessObjectLayer.Enums.PersonelIslemleri
@using SGKPortalApp.BusinessObjectLayer.Enums.Common
@using SGKPortalApp.PresentationLayer.Services.StateServices
@inject PermissionStateService PermissionState

<span class="personel-tooltip-trigger" data-personel-id="@Personel?.TcKimlikNo">
    @ChildContent
</span>

@if (_hasPermission && Personel != null)
{
    <div class="personel-tooltip" data-tooltip-for="@Personel.TcKimlikNo">
        <div class="tooltip-content">
            <!-- Header -->
            <div class="tooltip-header">
                <div class="tooltip-avatar">
                    @if (!string.IsNullOrEmpty(Personel.Resim))
                    {
                        <img src="@Personel.Resim" alt="@Personel.AdSoyad" />
                    }
                    else
                    {
                        <div class="avatar-placeholder">
                            <span>@Personel.AdSoyad.Substring(0, 1).ToUpper()</span>
                        </div>
                    }
                </div>
                <div class="tooltip-title">
                    <h6>@Personel.AdSoyad</h6>
                    @if (!string.IsNullOrEmpty(Personel.UnvanAdi))
                    {
                        <span class="subtitle">@Personel.UnvanAdi</span>
                    }
                </div>
                <span class="badge @GetStatusBadgeClass()">@GetStatusText()</span>
            </div>

            <!-- Body -->
            <div class="tooltip-body">
                <!-- Kimlik -->
                <div class="tooltip-section">
                    <div class="section-title">Kimlik Bilgileri</div>
                    <div class="info-row">
                        <i class="bx bx-id-card"></i>
                        <span>@Personel.TcKimlikNo</span>
                    </div>
                    @if (Personel.SicilNo != null && Personel.SicilNo > 0)
                    {
                        <div class="info-row">
                            <i class="bx bx-hash"></i>
                            <span>Sicil: @Personel.SicilNo</span>
                        </div>
                    }
                </div>

                <!-- İletişim -->
                @if (!string.IsNullOrEmpty(Personel.Email) || !string.IsNullOrEmpty(Personel.CepTelefonu) || Personel.Dahili > 0)
                {
                    <div class="tooltip-section">
                        <div class="section-title">İletişim</div>
                        @if (!string.IsNullOrEmpty(Personel.Email))
                        {
                            <div class="info-row">
                                <i class="bx bx-envelope"></i>
                                <span>@Personel.Email</span>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Personel.CepTelefonu))
                        {
                            <div class="info-row">
                                <i class="bx bx-phone"></i>
                                <span>@Personel.CepTelefonu</span>
                            </div>
                        }
                        @if (Personel.Dahili > 0)
                        {
                            <div class="info-row">
                                <i class="bx bx-phone-call"></i>
                                <span>Dahili: @Personel.Dahili</span>
                            </div>
                        }
                    </div>
                }

                <!-- Organizasyon -->
                @if (!string.IsNullOrEmpty(Personel.DepartmanAdi) || !string.IsNullOrEmpty(Personel.ServisAdi) || !string.IsNullOrEmpty(Personel.HizmetBinasiAdi))
                {
                    <div class="tooltip-section">
                        <div class="section-title">Organizasyon</div>
                        @if (!string.IsNullOrEmpty(Personel.DepartmanAdi))
                        {
                            <div class="info-row">
                                <i class="bx bx-building"></i>
                                <span>@Personel.DepartmanAdi</span>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Personel.ServisAdi))
                        {
                            <div class="info-row">
                                <i class="bx bx-sitemap"></i>
                                <span>@Personel.ServisAdi</span>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Personel.HizmetBinasiAdi))
                        {
                            <div class="info-row">
                                <i class="bx bx-map-pin"></i>
                                <span>@Personel.HizmetBinasiAdi</span>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public PersonelResponseDto? Personel { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public string PermissionKey { get; set; } = string.Empty;

    [Parameter]
    public YetkiSeviyesi RequiredLevel { get; set; } = YetkiSeviyesi.View;

    private bool _hasPermission = true;

    protected override async Task OnInitializedAsync()
    {
        await CheckPermission();
    }

    protected override async Task OnParametersSetAsync()
    {
        await CheckPermission();
    }

    private async Task CheckPermission()
    {
        if (string.IsNullOrWhiteSpace(PermissionKey))
        {
            _hasPermission = true;
            return;
        }

        await PermissionState.EnsureLoadedAsync();
        var level = PermissionState.GetLevel(PermissionKey);
        _hasPermission = level >= RequiredLevel;
    }

    private string GetStatusBadgeClass()
    {
        return Personel?.PersonelAktiflikDurum switch
        {
            PersonelAktiflikDurum.Aktif => "bg-success",
            PersonelAktiflikDurum.Pasif => "bg-danger",
            PersonelAktiflikDurum.Emekli => "bg-info",
            _ => "bg-secondary"
        };
    }

    private string GetStatusText()
    {
        return Personel?.PersonelAktiflikDurum switch
        {
            PersonelAktiflikDurum.Aktif => "Aktif",
            PersonelAktiflikDurum.Pasif => "Pasif",
            PersonelAktiflikDurum.Emekli => "Emekli",
            _ => "-"
        };
    }
}
