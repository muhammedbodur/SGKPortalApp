@using SGKPortalApp.BusinessObjectLayer.DTOs.Response.Common
@using SGKPortalApp.BusinessObjectLayer.Enums.Common
@inject IResmiTatilApiService _resmiTatilService
@inject IJSRuntime JSRuntime

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">
            <i class="bx bx-calendar me-2"></i>Resmi Tatiller
        </h5>
        <a href="/common/resmitatil" class="btn btn-sm btn-outline-primary">
            <i class="bx bx-fullscreen me-1"></i>Tümünü Gör
        </a>
    </div>
    <div class="card-body">
        @if (IsLoading)
        {
            <div class="text-center py-3">
                <div class="spinner-border spinner-border-sm text-primary" role="status">
                    <span class="visually-hidden">Yükleniyor...</span>
                </div>
            </div>
        }
        else
        {
            <!-- Mini Calendar -->
            <div id="resmiTatilWidgetCalendar" style="min-height: 400px;"></div>

            <!-- Yaklaşan Tatiller -->
            <div class="mt-3">
                <small class="text-muted text-uppercase fw-semibold">Yaklaşan Tatiller</small>
                <div class="list-group list-group-flush mt-2">
                    @if (YaklasanTatiller.Any())
                    {
                        @foreach (var tatil in YaklasanTatiller.Take(3))
                        {
                            <div class="list-group-item px-0">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1">@tatil.TatilAdi</h6>
                                        <small class="text-muted">
                                            <i class="bx bx-calendar me-1"></i>
                                            @tatil.Tarih.ToString("dd MMMM yyyy")
                                        </small>
                                    </div>
                                    <span class="badge @GetBadgeClass(tatil.TatilTipi)">
                                        @tatil.TatilTipiText
                                    </span>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center text-muted py-2">
                            <small>Yaklaşan tatil bulunmuyor</small>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>

@code {
    private List<ResmiTatilResponseDto> Tatiller { get; set; } = new();
    private List<ResmiTatilResponseDto> YaklasanTatiller { get; set; } = new();
    private bool IsLoading { get; set; } = true;
    private int CurrentYear { get; set; } = DateTime.Now.Year;

    protected override async Task OnInitializedAsync()
    {
        await LoadTatiller();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !IsLoading)
        {
            await Task.Delay(100);
            await RenderCalendar();
        }
    }

    private async Task LoadTatiller()
    {
        IsLoading = true;
        try
        {
            var result = await _resmiTatilService.GetByYearAsync(CurrentYear);

            if (result.Success && result.Data != null)
            {
                Tatiller = result.Data;

                // Yaklaşan tatilleri filtrele (bugünden sonraki)
                YaklasanTatiller = Tatiller
                    .Where(t => t.Tarih >= DateTime.Today)
                    .OrderBy(t => t.Tarih)
                    .ToList();
            }
        }
        catch (Exception)
        {
            // Sessizce geç, widget için hata göstermeye gerek yok
        }
        finally
        {
            IsLoading = false;
            StateHasChanged();
        }
    }

    private async Task RenderCalendar()
    {
        if (IsLoading || !Tatiller.Any()) return;

        try
        {
            var events = Tatiller.Select(t => new
            {
                id = t.TatilId,
                title = t.TatilAdi,
                start = t.Tarih.ToString("yyyy-MM-dd"),
                allDay = true,
                backgroundColor = GetEventColor(t.TatilTipi),
                borderColor = GetEventColor(t.TatilTipi),
                extendedProps = new
                {
                    tatilTipi = t.TatilTipiText
                }
            }).ToList();

            var eventsJson = System.Text.Json.JsonSerializer.Serialize(events);
            await JSRuntime.InvokeVoidAsync("initResmiTatilWidgetCalendar", eventsJson, CurrentYear);
        }
        catch (Exception)
        {
            // Sessizce geç
        }
    }

    private string GetEventColor(TatilTipi tatilTipi)
    {
        return tatilTipi switch
        {
            TatilTipi.SabitTatil => "#696cff",
            TatilTipi.DiniTatil => "#71dd37",
            TatilTipi.OzelTatil => "#ffab00",
            _ => "#8592a3"
        };
    }

    private string GetBadgeClass(TatilTipi tatilTipi)
    {
        return tatilTipi switch
        {
            TatilTipi.SabitTatil => "bg-label-primary",
            TatilTipi.DiniTatil => "bg-label-success",
            TatilTipi.OzelTatil => "bg-label-warning",
            _ => "bg-label-secondary"
        };
    }
}
