{
  "AuditLogging": {
    "Enabled": true,
    "BasePath": "./AuditLogs",
    "DefaultStorageStrategy": "SmartHybrid",
    "HybridThresholdBytes": 1024,
    "ExcludedTables": [
      "CMN_HubConnections",
      "AspNetSessions",
      "__EFMigrationsHistory"
    ],

    "Retention": {
      "DatabaseDays": 30,
      "FileDays": 365,
      "CompressAfterDays": 1
    },

    "Grouping": {
      "EnableTransactionGrouping": true,
      "BulkThreshold": 50,
      "GroupRelatedChanges": true
    },

    "Maintenance": {
      "Enabled": true,
      "RunTime": "02:00",
      "CreateMonthlyArchive": true,
      "AutoCompression": true
    },

    "Performance": {
      "EnableReflectionCache": true,
      "EnableAsyncFileWriting": true,
      "BatchSize": 100,
      "WriteQueueCapacity": 1000
    }
  }
}
